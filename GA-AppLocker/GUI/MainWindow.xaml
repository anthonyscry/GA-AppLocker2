<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="GA-AppLocker Dashboard"
    Height="800"
    Width="1200"
    MinHeight="600"
    MinWidth="900"
    WindowStartupLocation="CenterScreen"
    Background="#1E1E1E">

    <Window.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#106EBE"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="SidebarBrush" Color="#252526"/>
        <SolidColorBrush x:Key="ContentBrush" Color="#2D2D30"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="MutedBrush" Color="#9E9E9E"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333337"/>
                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Active">
                                <Setter Property="Background" Value="#333337"/>
                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SidebarBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,15,15"/>
        </Style>

        <!-- Action Button Style (for Quick Action cards) -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}">
            <DockPanel>
                <!-- App Header -->
                <StackPanel DockPanel.Dock="Top" Margin="15,20,15,30">
                    <TextBlock Text="GA-AppLocker"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource ForegroundBrush}"/>
                    <TextBlock Text="Dashboard v1.0.0"
                               FontSize="11"
                               Foreground="{StaticResource MutedBrush}"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Navigation Buttons -->
                <StackPanel DockPanel.Dock="Top">
                    <Button x:Name="NavDashboard"
                            Style="{StaticResource NavButtonStyle}"
                            Tag="Active"
                            Content="&#x1F4CA;  Dashboard"/>
                    <Button x:Name="NavDiscovery"
                            Style="{StaticResource NavButtonStyle}"
                            Content="&#x1F50D;  AD Discovery"/>
                    <Button x:Name="NavScanner"
                            Style="{StaticResource NavButtonStyle}"
                            Content="&#x1F4C1;  Artifact Scanner"/>
                    <Button x:Name="NavRules"
                            Style="{StaticResource NavButtonStyle}"
                            Content="&#x1F4DD;  Rule Generator"/>
                    <Button x:Name="NavPolicy"
                            Style="{StaticResource NavButtonStyle}"
                            Content="&#x1F4CB;  Policy Builder"/>
                    <Button x:Name="NavDeploy"
                            Style="{StaticResource NavButtonStyle}"
                            Content="&#x1F680;  Deployment"/>

                    <Separator Margin="15,20" Background="#3E3E42"/>

                    <Button x:Name="NavSettings"
                            Style="{StaticResource NavButtonStyle}"
                            Content="&#x2699;  Settings"/>
                </StackPanel>

                <!-- Footer -->
                <StackPanel DockPanel.Dock="Bottom" Margin="15,0,15,15" VerticalAlignment="Bottom">
                    <Border Background="#333337" CornerRadius="6" Padding="10">
                        <StackPanel>
                            <TextBlock x:Name="StatusText"
                                       Text="Ready"
                                       FontSize="11"
                                       Foreground="{StaticResource SuccessBrush}"/>
                            <TextBlock x:Name="DomainText"
                                       Text="Domain: Loading..."
                                       FontSize="10"
                                       Foreground="{StaticResource MutedBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Background="{StaticResource BackgroundBrush}" Padding="30">
            <Grid x:Name="ContentArea">
                <!-- Dashboard Panel (Default) -->
                <Grid x:Name="PanelDashboard" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="Dashboard" Style="{StaticResource HeaderStyle}"/>
                    
                    <!-- Main Content - Two Column Layout with matched rows -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Row 0: Section Headers -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="QUICK ACTIONS"
                                   FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,15"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="GETTING STARTED"
                                   FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,15"/>
                        
                        <!-- Row 1: Quick Actions (left) / Workflow Steps (right) - Use shared row so heights match -->
                        <!-- Left: Quick Actions -->
                        <Border Grid.Row="1" Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="20">
                            <Grid VerticalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Full Scan -->
                                <Grid Grid.Row="0" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="&#x1F50D;" FontSize="28" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Full Scan" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}"/>
                                        <TextBlock Text="Scan all machines with auto-credentials" FontSize="11" Foreground="{StaticResource MutedBrush}" TextWrapping="Wrap"/>
                                    </StackPanel>
                                    <Button Grid.Column="2" Content="Start" Style="{StaticResource ActionButtonStyle}" Background="{StaticResource PrimaryBrush}" Width="70" VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- Import -->
                                <Grid Grid.Row="1" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="&#x1F4E5;" FontSize="28" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Import &amp; Generate" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}"/>
                                        <TextBlock Text="Import artifacts and generate rules" FontSize="11" Foreground="{StaticResource MutedBrush}" TextWrapping="Wrap"/>
                                    </StackPanel>
                                    <Button Grid.Column="2" Content="Browse" Style="{StaticResource ActionButtonStyle}" Background="{StaticResource SecondaryBrush}" Width="70" VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- Deploy -->
                                <Grid Grid.Row="2" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="&#x1F680;" FontSize="28" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Deploy Policies" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}"/>
                                        <TextBlock Text="Deploy pending policies to OUs" FontSize="11" Foreground="{StaticResource MutedBrush}" TextWrapping="Wrap"/>
                                    </StackPanel>
                                    <Button Grid.Column="2" Content="Deploy" Style="{StaticResource ActionButtonStyle}" Background="{StaticResource SuccessBrush}" Width="70" VerticalAlignment="Center"/>
                                </Grid>
                            </Grid>
                        </Border>
                        
                        <!-- Right: Workflow Steps -->
                        <Border Grid.Row="1" Grid.Column="2" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="20">
                            <Grid VerticalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Step 1 -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Border Background="{StaticResource PrimaryBrush}" CornerRadius="11" Width="22" Height="22" Margin="0,0,12,0">
                                        <TextBlock Text="1" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="11"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Discover Machines" FontSize="13" Foreground="{StaticResource ForegroundBrush}" FontWeight="SemiBold"/>
                                        <TextBlock Text="Scan AD for computers by OU" FontSize="10" Foreground="{StaticResource MutedBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                                <!-- Step 2 -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Border Background="{StaticResource SecondaryBrush}" CornerRadius="11" Width="22" Height="22" Margin="0,0,12,0">
                                        <TextBlock Text="2" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="11"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Configure Credentials" FontSize="13" Foreground="{StaticResource ForegroundBrush}" FontWeight="SemiBold"/>
                                        <TextBlock Text="Set up tiered admin accounts" FontSize="10" Foreground="{StaticResource MutedBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                                <!-- Step 3 -->
                                <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Border Background="{StaticResource WarningBrush}" CornerRadius="11" Width="22" Height="22" Margin="0,0,12,0">
                                        <TextBlock Text="3" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="11"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Scan Artifacts" FontSize="13" Foreground="{StaticResource ForegroundBrush}" FontWeight="SemiBold"/>
                                        <TextBlock Text="Collect executables via WinRM" FontSize="10" Foreground="{StaticResource MutedBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                                <!-- Step 4 -->
                                <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Border Background="{StaticResource SuccessBrush}" CornerRadius="11" Width="22" Height="22" Margin="0,0,12,0">
                                        <TextBlock Text="4" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="11"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Generate Rules" FontSize="13" Foreground="{StaticResource ForegroundBrush}" FontWeight="SemiBold"/>
                                        <TextBlock Text="Auto-create publisher/hash rules" FontSize="10" Foreground="{StaticResource MutedBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                                <!-- Step 5 -->
                                <StackPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Border Background="#9C27B0" CornerRadius="11" Width="22" Height="22" Margin="0,0,12,0">
                                        <TextBlock Text="5" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="11"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Deploy to GPO" FontSize="13" Foreground="{StaticResource ForegroundBrush}" FontWeight="SemiBold"/>
                                        <TextBlock Text="Push policies to production" FontSize="10" Foreground="{StaticResource MutedBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- Row 2: Section Headers -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="CURRENT STATUS"
                                   FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,20,0,15"/>
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="SYSTEM INFORMATION"
                                   FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,20,0,15"/>
                        
                        <!-- Row 3: Stats (left) / System Info (right) - Both stretch to fill same height -->
                        <!-- Left: Stats Grid -->
                        <Border Grid.Row="3" Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <Grid VerticalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Machines -->
                                <Border Grid.Row="0" Grid.Column="0" Background="{StaticResource ContentBrush}" CornerRadius="6" Padding="10">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock x:Name="StatMachines" Text="0" FontSize="28" FontWeight="Light" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Machines" FontSize="11" Foreground="{StaticResource MutedBrush}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Artifacts -->
                                <Border Grid.Row="0" Grid.Column="2" Background="{StaticResource ContentBrush}" CornerRadius="6" Padding="10">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock x:Name="StatArtifacts" Text="0" FontSize="28" FontWeight="Light" Foreground="{StaticResource WarningBrush}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Artifacts" FontSize="11" Foreground="{StaticResource MutedBrush}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Rules -->
                                <Border Grid.Row="2" Grid.Column="0" Background="{StaticResource ContentBrush}" CornerRadius="6" Padding="10">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock x:Name="StatRules" Text="0" FontSize="28" FontWeight="Light" Foreground="{StaticResource SuccessBrush}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Rules" FontSize="11" Foreground="{StaticResource MutedBrush}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Policies -->
                                <Border Grid.Row="2" Grid.Column="2" Background="{StaticResource ContentBrush}" CornerRadius="6" Padding="10">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock x:Name="StatPolicies" Text="0" FontSize="28" FontWeight="Light" Foreground="#9C27B0" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Policies" FontSize="11" Foreground="{StaticResource MutedBrush}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Right: System Info -->
                        <Border Grid.Row="3" Grid.Column="2" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="20">
                            <Grid VerticalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <Grid Grid.Row="0" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Computer:" Foreground="{StaticResource MutedBrush}"/>
                                    <TextBlock x:Name="SysInfoComputer" Grid.Column="1" Text="Loading..." Foreground="{StaticResource ForegroundBrush}"/>
                                </Grid>
                                <Grid Grid.Row="1" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Domain:" Foreground="{StaticResource MutedBrush}"/>
                                    <TextBlock x:Name="SysInfoDomain" Grid.Column="1" Text="Loading..." Foreground="{StaticResource ForegroundBrush}"/>
                                </Grid>
                                <Grid Grid.Row="2" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="User:" Foreground="{StaticResource MutedBrush}"/>
                                    <TextBlock x:Name="SysInfoUser" Grid.Column="1" Text="Loading..." Foreground="{StaticResource ForegroundBrush}"/>
                                </Grid>
                                <Grid Grid.Row="3" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Data Path:" Foreground="{StaticResource MutedBrush}" VerticalAlignment="Top"/>
                                    <TextBlock x:Name="SysInfoDataPath" Grid.Column="1" Text="Loading..." Foreground="{StaticResource ForegroundBrush}" TextWrapping="Wrap" FontSize="11"/>
                                </Grid>
                                <Grid Grid.Row="4" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Version:" Foreground="{StaticResource MutedBrush}"/>
                                    <TextBlock Grid.Column="1" Text="1.0.0" Foreground="{StaticResource ForegroundBrush}"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                    
                    <!-- Bottom: Recent Activity (spans full width) -->
                    <StackPanel Grid.Row="2" Margin="0,20,0,0">
                        <TextBlock Text="RECENT ACTIVITY"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource MutedBrush}"
                                   Margin="0,0,0,10"/>
                        
                        <Border Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15" MaxHeight="100">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock x:Name="RecentActivityText"
                                           Text="No recent activity. Start by navigating to AD Discovery to scan your domain for machines."
                                           Foreground="{StaticResource MutedBrush}"
                                           FontStyle="Italic"
                                           TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- AD Discovery Panel -->
                <Grid x:Name="PanelDiscovery" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="AD Discovery" Style="{StaticResource HeaderStyle}"/>

                    <!-- Toolbar -->
                    <Border Grid.Row="1" Background="{StaticResource SidebarBrush}" CornerRadius="6" Padding="15,10" Margin="0,0,0,15">
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                <Button x:Name="BtnRefreshDomain"
                                        Content="&#x1F504; Refresh Domain"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="{StaticResource PrimaryBrush}"
                                        Width="140"
                                        Margin="0,0,10,0"/>
                                <Button x:Name="BtnTestConnectivity"
                                        Content="&#x1F4F6; Test Connectivity"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="{StaticResource SecondaryBrush}"
                                        Width="150"
                                        Margin="0,0,10,0"/>
                            </StackPanel>
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock x:Name="DiscoveryDomainLabel"
                                           Text="Domain: Not connected"
                                           Foreground="{StaticResource MutedBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,15,0"/>
                                <TextBlock x:Name="DiscoveryMachineCount"
                                           Text="0 machines selected"
                                           Foreground="{StaticResource ForegroundBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <!-- Main Content: Split OU Tree and Machine List -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- OU Tree Panel -->
                        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                                    <TextBlock Text="ORGANIZATIONAL UNITS"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource MutedBrush}"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button x:Name="BtnSelectAllOUs"
                                                Content="Select All"
                                                Background="Transparent"
                                                Foreground="{StaticResource PrimaryBrush}"
                                                BorderThickness="0"
                                                Padding="0"
                                                Cursor="Hand"
                                                Margin="0,0,15,0"/>
                                        <Button x:Name="BtnClearOUs"
                                                Content="Clear"
                                                Background="Transparent"
                                                Foreground="{StaticResource MutedBrush}"
                                                BorderThickness="0"
                                                Padding="0"
                                                Cursor="Hand"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- OU TreeView -->
                                <Border Background="#1E1E1E" CornerRadius="4" Padding="5">
                                    <TreeView x:Name="OUTreeView"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Foreground="{StaticResource ForegroundBrush}">
                                        <TreeView.Resources>
                                            <Style TargetType="TreeViewItem">
                                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                <Setter Property="Padding" Value="2"/>
                                            </Style>
                                        </TreeView.Resources>
                                        <!-- TreeView items populated by code-behind -->
                                        <TreeViewItem Header="&#x1F4C1; Loading..." IsExpanded="True" Foreground="{StaticResource MutedBrush}"/>
                                    </TreeView>
                                </Border>
                            </DockPanel>
                        </Border>

                        <!-- Splitter -->
                        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Transparent"/>

                        <!-- Machine List Panel -->
                        <Border Grid.Column="2" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                                    <DockPanel>
                                        <TextBlock Text="DISCOVERED MACHINES"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource MutedBrush}"
                                                   DockPanel.Dock="Left"/>
                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="Filter:"
                                                       Foreground="{StaticResource MutedBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                            <TextBox x:Name="MachineFilterBox"
                                                     Width="150"
                                                     Background="#1E1E1E"
                                                     Foreground="{StaticResource ForegroundBrush}"
                                                     BorderBrush="#3E3E42"
                                                     Padding="8,5"/>
                                        </StackPanel>
                                    </DockPanel>

                                    <!-- Machine Type Filter Buttons -->
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button x:Name="BtnFilterAll" Content="All" Background="#3E3E42" Foreground="White" Padding="12,5" BorderThickness="0" Margin="0,0,5,0"/>
                                        <Button x:Name="BtnFilterWorkstations" Content="&#x1F5A5; Workstations" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="12,5" BorderThickness="0" Margin="0,0,5,0"/>
                                        <Button x:Name="BtnFilterServers" Content="&#x1F5A7; Servers" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="12,5" BorderThickness="0" Margin="0,0,5,0"/>
                                        <Button x:Name="BtnFilterDCs" Content="&#x1F3E2; DCs" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="12,5" BorderThickness="0" Margin="0,0,5,0"/>
                                        <Button x:Name="BtnFilterOnline" Content="&#x1F7E2; Online" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="12,5" BorderThickness="0"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Machine DataGrid -->
                                <Border Background="#1E1E1E" CornerRadius="4" Padding="0" Margin="0,5,0,0">
                                    <DataGrid x:Name="MachineDataGrid"
                                              AutoGenerateColumns="False"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              RowBackground="#252526"
                                              AlternatingRowBackground="#2D2D30"
                                              GridLinesVisibility="None"
                                              HeadersVisibility="Column"
                                              SelectionMode="Extended"
                                              CanUserAddRows="False"
                                              IsReadOnly="True">
                                        <DataGrid.ColumnHeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="Background" Value="#1E1E1E"/>
                                                <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
                                                <Setter Property="Padding" Value="10,8"/>
                                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                <Setter Property="BorderBrush" Value="#3E3E42"/>
                                            </Style>
                                        </DataGrid.ColumnHeaderStyle>
                                        <DataGrid.CellStyle>
                                            <Style TargetType="DataGridCell">
                                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Padding" Value="10,8"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGrid.CellStyle>
                                        <DataGrid.Columns>
                                            <DataGridCheckBoxColumn Width="40"/>
                                            <DataGridTextColumn Header="Status" Width="60" Binding="{Binding StatusIcon}"/>
                                            <DataGridTextColumn Header="Hostname" Width="150" Binding="{Binding Hostname}"/>
                                            <DataGridTextColumn Header="Type" Width="100" Binding="{Binding MachineType}"/>
                                            <DataGridTextColumn Header="Operating System" Width="200" Binding="{Binding OperatingSystem}"/>
                                            <DataGridTextColumn Header="Last Logon" Width="120" Binding="{Binding LastLogon, StringFormat='{}{0:yyyy-MM-dd}'}"/>
                                            <DataGridTextColumn Header="WinRM" Width="80" Binding="{Binding WinRMStatus}"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Border>
                            </DockPanel>
                        </Border>
                    </Grid>
                </Grid>

                <!-- Artifact Scanner Panel (Placeholder) -->
                <Grid x:Name="PanelScanner" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Artifact Scanner" Style="{StaticResource HeaderStyle}"/>
                        <Border Style="{StaticResource CardStyle}">
                            <TextBlock Text="Artifact Scanner panel - Coming in Phase 4"
                                       Foreground="{StaticResource MutedBrush}"
                                       FontStyle="Italic"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Rule Generator Panel (Placeholder) -->
                <Grid x:Name="PanelRules" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Rule Generator" Style="{StaticResource HeaderStyle}"/>
                        <Border Style="{StaticResource CardStyle}">
                            <TextBlock Text="Rule Generator panel - Coming in Phase 5"
                                       Foreground="{StaticResource MutedBrush}"
                                       FontStyle="Italic"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Policy Builder Panel (Placeholder) -->
                <Grid x:Name="PanelPolicy" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Policy Builder" Style="{StaticResource HeaderStyle}"/>
                        <Border Style="{StaticResource CardStyle}">
                            <TextBlock Text="Policy Builder panel - Coming in Phase 6"
                                       Foreground="{StaticResource MutedBrush}"
                                       FontStyle="Italic"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Deployment Panel (Placeholder) -->
                <Grid x:Name="PanelDeploy" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Deployment" Style="{StaticResource HeaderStyle}"/>
                        <Border Style="{StaticResource CardStyle}">
                            <TextBlock Text="Deployment panel - Coming in Phase 6"
                                       Foreground="{StaticResource MutedBrush}"
                                       FontStyle="Italic"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Settings Panel -->
                <Grid x:Name="PanelSettings" Visibility="Collapsed">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Settings" Style="{StaticResource HeaderStyle}"/>

                            <!-- Credentials Management Section -->
                            <TextBlock Text="CREDENTIAL PROFILES"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource MutedBrush}"
                                       Margin="0,0,0,15"/>

                            <!-- Tier Legend -->
                            <Border Background="{StaticResource SidebarBrush}" CornerRadius="6" Padding="15" Margin="0,0,0,15">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#9C27B0" CornerRadius="4" Padding="10,5" Margin="0,0,10,0">
                                        <TextBlock Text="Tier 0: Domain Controllers" Foreground="White" FontSize="11"/>
                                    </Border>
                                    <Border Background="{StaticResource WarningBrush}" CornerRadius="4" Padding="10,5" Margin="0,0,10,0">
                                        <TextBlock Text="Tier 1: Servers" Foreground="White" FontSize="11"/>
                                    </Border>
                                    <Border Background="{StaticResource PrimaryBrush}" CornerRadius="4" Padding="10,5">
                                        <TextBlock Text="Tier 2: Workstations" Foreground="White" FontSize="11"/>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!-- Add New Credential Form -->
                            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="Add New Credential Profile"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource ForegroundBrush}"
                                               Margin="0,0,0,15"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="15"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Profile Name -->
                                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,15">
                                            <TextBlock Text="Profile Name"
                                                       Foreground="{StaticResource MutedBrush}"
                                                       FontSize="11"
                                                       Margin="0,0,0,5"/>
                                            <TextBox x:Name="CredProfileName"
                                                     Background="#1E1E1E"
                                                     Foreground="{StaticResource ForegroundBrush}"
                                                     BorderBrush="#3E3E42"
                                                     Padding="10,8"/>
                                        </StackPanel>

                                        <!-- Tier Selection -->
                                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,15">
                                            <TextBlock Text="Tier Level"
                                                       Foreground="{StaticResource MutedBrush}"
                                                       FontSize="11"
                                                       Margin="0,0,0,5"/>
                                            <ComboBox x:Name="CredTierCombo"
                                                      Background="#1E1E1E"
                                                      Foreground="{StaticResource ForegroundBrush}"
                                                      BorderBrush="#3E3E42"
                                                      Padding="10,8"
                                                      SelectedIndex="2">
                                                <ComboBoxItem Content="Tier 0 - Domain Controllers"/>
                                                <ComboBoxItem Content="Tier 1 - Servers"/>
                                                <ComboBoxItem Content="Tier 2 - Workstations"/>
                                            </ComboBox>
                                        </StackPanel>

                                        <!-- Username -->
                                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,15">
                                            <TextBlock Text="Username (DOMAIN\User or UPN)"
                                                       Foreground="{StaticResource MutedBrush}"
                                                       FontSize="11"
                                                       Margin="0,0,0,5"/>
                                            <TextBox x:Name="CredUsername"
                                                     Background="#1E1E1E"
                                                     Foreground="{StaticResource ForegroundBrush}"
                                                     BorderBrush="#3E3E42"
                                                     Padding="10,8"/>
                                        </StackPanel>

                                        <!-- Password -->
                                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,15">
                                            <TextBlock Text="Password"
                                                       Foreground="{StaticResource MutedBrush}"
                                                       FontSize="11"
                                                       Margin="0,0,0,5"/>
                                            <PasswordBox x:Name="CredPassword"
                                                         Background="#1E1E1E"
                                                         Foreground="{StaticResource ForegroundBrush}"
                                                         BorderBrush="#3E3E42"
                                                         Padding="10,8"/>
                                        </StackPanel>

                                        <!-- Description -->
                                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,15">
                                            <TextBlock Text="Description (optional)"
                                                       Foreground="{StaticResource MutedBrush}"
                                                       FontSize="11"
                                                       Margin="0,0,0,5"/>
                                            <TextBox x:Name="CredDescription"
                                                     Background="#1E1E1E"
                                                     Foreground="{StaticResource ForegroundBrush}"
                                                     BorderBrush="#3E3E42"
                                                     Padding="10,8"/>
                                        </StackPanel>

                                        <!-- Buttons -->
                                        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal">
                                            <Button x:Name="BtnSaveCredential"
                                                    Content="&#x1F4BE; Save Credential"
                                                    Style="{StaticResource ActionButtonStyle}"
                                                    Background="{StaticResource SuccessBrush}"
                                                    Padding="15,10"
                                                    Margin="0,0,10,0"/>
                                            <CheckBox x:Name="CredSetAsDefault"
                                                      Content="Set as default for this tier"
                                                      Foreground="{StaticResource ForegroundBrush}"
                                                      VerticalAlignment="Center"
                                                      Margin="10,0,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Saved Credentials List -->
                            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,15">
                                        <TextBlock Text="Saved Credential Profiles"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource ForegroundBrush}"
                                                   VerticalAlignment="Center"/>
                                        <Button x:Name="BtnRefreshCredentials"
                                                Content="&#x1F504; Refresh"
                                                Background="Transparent"
                                                Foreground="{StaticResource PrimaryBrush}"
                                                BorderThickness="0"
                                                Padding="10,5"
                                                Cursor="Hand"
                                                Margin="15,0,0,0"/>
                                    </StackPanel>

                                    <!-- Credentials DataGrid -->
                                    <Border Background="#1E1E1E" CornerRadius="4" Padding="0">
                                        <DataGrid x:Name="CredentialsDataGrid"
                                                  AutoGenerateColumns="False"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  RowBackground="#252526"
                                                  AlternatingRowBackground="#2D2D30"
                                                  GridLinesVisibility="None"
                                                  HeadersVisibility="Column"
                                                  SelectionMode="Single"
                                                  CanUserAddRows="False"
                                                  IsReadOnly="True"
                                                  MinHeight="150"
                                                  MaxHeight="250">
                                            <DataGrid.ColumnHeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="#1E1E1E"/>
                                                    <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
                                                    <Setter Property="Padding" Value="10,8"/>
                                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                    <Setter Property="BorderBrush" Value="#3E3E42"/>
                                                </Style>
                                            </DataGrid.ColumnHeaderStyle>
                                            <DataGrid.CellStyle>
                                                <Style TargetType="DataGridCell">
                                                    <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                    <Setter Property="Padding" Value="10,8"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGrid.CellStyle>
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Name" Width="150" Binding="{Binding Name}"/>
                                                <DataGridTextColumn Header="Tier" Width="60" Binding="{Binding Tier}"/>
                                                <DataGridTextColumn Header="Username" Width="180" Binding="{Binding Username}"/>
                                                <DataGridTextColumn Header="Default" Width="70" Binding="{Binding IsDefaultDisplay}"/>
                                                <DataGridTextColumn Header="Last Test" Width="150" Binding="{Binding LastTestDisplay}"/>
                                                <DataGridTextColumn Header="Description" Width="*" Binding="{Binding Description}"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Border>
                                </DockPanel>
                            </Border>

                            <!-- Credential Actions -->
                            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="Credential Actions"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource ForegroundBrush}"
                                               Margin="0,0,0,15"/>

                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="BtnTestCredential"
                                                Content="&#x1F50D; Test Selected"
                                                Style="{StaticResource ActionButtonStyle}"
                                                Background="{StaticResource SecondaryBrush}"
                                                Padding="15,10"
                                                Margin="0,0,10,0"/>
                                        <Button x:Name="BtnDeleteCredential"
                                                Content="&#x1F5D1; Delete Selected"
                                                Style="{StaticResource ActionButtonStyle}"
                                                Background="{StaticResource ErrorBrush}"
                                                Padding="15,10"
                                                Margin="0,0,10,0"/>
                                        <Button x:Name="BtnSetDefaultCredential"
                                                Content="&#x2B50; Set as Default"
                                                Style="{StaticResource ActionButtonStyle}"
                                                Background="{StaticResource WarningBrush}"
                                                Padding="15,10"/>
                                    </StackPanel>

                                    <!-- Test Target -->
                                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                        <TextBlock Text="Test Target:"
                                                   Foreground="{StaticResource MutedBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>
                                        <TextBox x:Name="CredTestTarget"
                                                 Width="250"
                                                 Background="#1E1E1E"
                                                 Foreground="{StaticResource ForegroundBrush}"
                                                 BorderBrush="#3E3E42"
                                                 Padding="10,8"
                                                 ToolTip="Enter hostname to test credential against"/>
                                    </StackPanel>

                                    <!-- Test Result -->
                                    <Border x:Name="CredTestResultBorder"
                                            Background="#1E1E1E"
                                            CornerRadius="4"
                                            Padding="15"
                                            Margin="0,15,0,0"
                                            Visibility="Collapsed">
                                        <TextBlock x:Name="CredTestResultText"
                                                   Text=""
                                                   Foreground="{StaticResource ForegroundBrush}"
                                                   TextWrapping="Wrap"/>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!-- Application Settings -->
                            <TextBlock Text="APPLICATION SETTINGS"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource MutedBrush}"
                                       Margin="0,15,0,15"/>

                            <Border Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Data Directory:"
                                               Foreground="{StaticResource MutedBrush}"
                                               Margin="0,0,0,5"/>
                                    <TextBlock x:Name="SettingsDataPath"
                                               Text="%LOCALAPPDATA%\GA-AppLocker"
                                               Foreground="{StaticResource ForegroundBrush}"
                                               Margin="0,0,0,20"/>

                                    <TextBlock Text="Version: 1.0.0"
                                               Foreground="{StaticResource MutedBrush}"/>
                                    <TextBlock Text="Phase: 3 - Credentials"
                                               Foreground="{StaticResource MutedBrush}"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
