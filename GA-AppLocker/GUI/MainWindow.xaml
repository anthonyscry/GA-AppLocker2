<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="GA-AppLocker Dashboard"
    Height="800"
    Width="1200"
    MinHeight="600"
    MinWidth="900"
    WindowStartupLocation="CenterScreen"
    Background="#000000">

    <Window.Resources>
        <!-- Color Palette - Maximum Contrast Dark Theme -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#106EBE"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#000000"/>
        <SolidColorBrush x:Key="SidebarBrush" Color="#121212"/>
        <SolidColorBrush x:Key="ContentBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="MutedBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#555555"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#107C10"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FF8C00"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#D13438"/>
        <!-- Additional UI Brushes -->
        <SolidColorBrush x:Key="HoverBrush" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="PendingBrush" Color="#FF8C00"/>
        <SolidColorBrush x:Key="ApprovedBrush" Color="#107C10"/>
        <SolidColorBrush x:Key="ActiveBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="ArchivedBrush" Color="#90A4AE"/>
        <SolidColorBrush x:Key="RejectedBrush" Color="#D13438"/>
        <SolidColorBrush x:Key="PurpleBrush" Color="#8764B8"/>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333337"/>
                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Background" Value="#333337"/>
                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Active">
                                <Setter Property="Background" Value="#333337"/>
                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FocusVisualStyle">
                <Setter.Value>
                    <Style>
                        <Setter Property="Control.Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <Rectangle Margin="2" StrokeThickness="1" 
                                               Stroke="{StaticResource PrimaryBrush}" 
                                               StrokeDashArray="1 2"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SidebarBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,15,15"/>
        </Style>

        <!-- Action Button Style (for Quick Action cards) -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="CaretBrush" Value="{StaticResource ForegroundBrush}"/>
        </Style>

        <!-- ComboBox Toggle Button Template -->
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="Border" Grid.ColumnSpan="2" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1" CornerRadius="3"/>
                <Path x:Name="Arrow" Grid.Column="1" Fill="#FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M0,0 L4,4 L8,0 Z"/>
            </Grid>
        </ControlTemplate>

        <!-- ComboBox Style -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="#2D2D30"/>
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="Bd" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#0078D4"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#0078D4"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" Template="{StaticResource ComboBoxToggleButton}" 
                                          Focusable="False" IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" 
                                          ClickMode="Press"/>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False" 
                                              Content="{TemplateBinding SelectionBoxItem}" 
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              Margin="10,6,25,6" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" 
                                   AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid x:Name="DropDown" SnapsToDevicePixels="True" 
                                      MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1"/>
                                    <ScrollViewer Margin="2" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Dark TabControl Style -->
        <Style x:Key="DarkTabControl" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        
        <Style x:Key="DarkTabItem" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                BorderThickness="0,0,0,2" BorderBrush="Transparent" Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="ContentSite" ContentSource="Header" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4E4E52"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2E2E32"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#3E3E42"/>
            <Setter Property="RowBackground" Value="#1E1E1E"/>
            <Setter Property="AlternatingRowBackground" Value="#252526"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
            <Setter Property="CanUserReorderColumns" Value="True"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#2D2D30"/>
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="BorderBrush" Value="#3E3E42"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Spinner Animation Style -->
        <Style x:Key="SpinnerStyle" TargetType="Border">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <RotateTransform Angle="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toast Container Style -->
        <Style x:Key="ToastStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border x:Name="SidebarBorder" Grid.Column="0" Background="{StaticResource SidebarBrush}">
            <DockPanel>
                <!-- App Header with Collapse Button -->
                <Grid DockPanel.Dock="Top" Margin="15,20,15,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" x:Name="SidebarHeader">
                        <TextBlock x:Name="SidebarTitle" Text="GA-AppLocker"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource ForegroundBrush}"/>
                        <TextBlock x:Name="SidebarSubtitle" Text="Dashboard v1.0.0"
                                   FontSize="11"
                                   Foreground="{StaticResource MutedBrush}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                    <Button x:Name="BtnCollapseSidebar" Grid.Column="1" 
                            Content="&lt;&lt;" FontSize="12"
                            Background="Transparent" Foreground="{StaticResource MutedBrush}"
                            BorderThickness="0" Padding="5" Cursor="Hand"
                            VerticalAlignment="Top" ToolTip="Collapse Sidebar"/>
                </Grid>

                <!-- Navigation Buttons -->
                <StackPanel DockPanel.Dock="Top" x:Name="NavButtonsPanel">
                    <Button x:Name="NavDashboard"
                            Style="{StaticResource NavButtonStyle}"
                            AutomationProperties.Name="Dashboard"
                            Tag="Active">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F4CA;" FontSize="16" Width="24"/>
                            <TextBlock x:Name="NavDashboardText" Text="Dashboard" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="NavDiscovery"
                            Style="{StaticResource NavButtonStyle}"
                            AutomationProperties.Name="AD Discovery">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F50D;" FontSize="16" Width="24"/>
                            <TextBlock x:Name="NavDiscoveryText" Text="AD Discovery" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="NavScanner"
                            Style="{StaticResource NavButtonStyle}"
                            AutomationProperties.Name="Artifact Scanner">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F4C1;" FontSize="16" Width="24"/>
                            <TextBlock x:Name="NavScannerText" Text="Artifact Scanner" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="NavRules"
                            Style="{StaticResource NavButtonStyle}"
                            AutomationProperties.Name="Rule Generator">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F4DD;" FontSize="16" Width="24"/>
                            <TextBlock x:Name="NavRulesText" Text="Rule Generator" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="NavPolicy"
                            Style="{StaticResource NavButtonStyle}"
                            AutomationProperties.Name="Policy Builder">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F4CB;" FontSize="16" Width="24"/>
                            <TextBlock x:Name="NavPolicyText" Text="Policy Builder" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="NavDeploy"
                            Style="{StaticResource NavButtonStyle}"
                            AutomationProperties.Name="Deployment">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F680;" FontSize="16" Width="24"/>
                            <TextBlock x:Name="NavDeployText" Text="Deployment" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Separator x:Name="NavSeparator" Margin="15,20" Background="#3E3E42"/>

                    <Button x:Name="NavSettings"
                            Style="{StaticResource NavButtonStyle}"
                            AutomationProperties.Name="Settings">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x2699;" FontSize="16" Width="24"/>
                            <TextBlock x:Name="NavSettingsText" Text="Settings" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="NavSetup"
                            Style="{StaticResource NavButtonStyle}"
                            AutomationProperties.Name="Setup">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F527;" FontSize="16" Width="24"/>
                            <TextBlock x:Name="NavSetupText" Text="Setup" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="NavAbout"
                            Style="{StaticResource NavButtonStyle}"
                            AutomationProperties.Name="About">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x2139;" FontSize="16" Width="24"/>
                            <TextBlock x:Name="NavAboutText" Text="About" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Workflow Progress Indicator -->
                <Border x:Name="WorkflowBreadcrumb" DockPanel.Dock="Top" 
                        Background="#1A1A1A" CornerRadius="6" 
                        Margin="10,20,10,0" Padding="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Title -->
                        <TextBlock Grid.Row="0" Text="WORKFLOW PROGRESS" 
                                   FontSize="9" FontWeight="SemiBold"
                                   Foreground="{StaticResource MutedBrush}" 
                                   Margin="0,0,0,8"/>
                        
                        <!-- Progress Steps -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Stage 1: Discovery -->
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <Ellipse x:Name="StageDiscovery" Width="16" Height="16" 
                                         Fill="#555555" Stroke="#777777" StrokeThickness="1"/>
                                <TextBlock x:Name="StageDiscoveryCount" Text="0" 
                                           FontSize="9" Foreground="{StaticResource MutedBrush}" 
                                           HorizontalAlignment="Center" Margin="0,3,0,0"/>
                                <TextBlock Text="Disc" FontSize="8" 
                                           Foreground="#888888" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Stage 2: Scanner -->
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <Ellipse x:Name="StageScanner" Width="16" Height="16" 
                                         Fill="#555555" Stroke="#777777" StrokeThickness="1"/>
                                <TextBlock x:Name="StageScannerCount" Text="0" 
                                           FontSize="9" Foreground="{StaticResource MutedBrush}" 
                                           HorizontalAlignment="Center" Margin="0,3,0,0"/>
                                <TextBlock Text="Scan" FontSize="8" 
                                           Foreground="#888888" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Stage 3: Rules -->
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <Ellipse x:Name="StageRules" Width="16" Height="16" 
                                         Fill="#555555" Stroke="#777777" StrokeThickness="1"/>
                                <TextBlock x:Name="StageRulesCount" Text="0" 
                                           FontSize="9" Foreground="{StaticResource MutedBrush}" 
                                           HorizontalAlignment="Center" Margin="0,3,0,0"/>
                                <TextBlock Text="Rules" FontSize="8" 
                                           Foreground="#888888" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Stage 4: Policy -->
                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <Ellipse x:Name="StagePolicy" Width="16" Height="16" 
                                         Fill="#555555" Stroke="#777777" StrokeThickness="1"/>
                                <TextBlock x:Name="StagePolicyCount" Text="0" 
                                           FontSize="9" Foreground="{StaticResource MutedBrush}" 
                                           HorizontalAlignment="Center" Margin="0,3,0,0"/>
                                <TextBlock Text="Policy" FontSize="8" 
                                           Foreground="#888888" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Footer -->
                <StackPanel x:Name="SidebarFooter" DockPanel.Dock="Bottom" Margin="15,0,15,15" VerticalAlignment="Bottom">
                    <Border Background="{StaticResource HoverBrush}" CornerRadius="6" Padding="10">
                        <StackPanel>
                            <TextBlock x:Name="StatusText"
                                       Text="Ready"
                                       FontSize="11"
                                       Foreground="{StaticResource SuccessBrush}"/>
                            <TextBlock x:Name="DomainText"
                                       Text="Domain: Loading..."
                                       FontSize="10"
                                       Foreground="{StaticResource MutedBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Background="{StaticResource BackgroundBrush}" Padding="30">
            <Grid x:Name="ContentArea">
                <!-- Dashboard Panel (Default) -->
                <Grid x:Name="PanelDashboard" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Row 0: Header with System Info -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Dashboard" Style="{StaticResource HeaderStyle}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock Text="Domain:" Foreground="{StaticResource MutedBrush}" Margin="0,0,5,0"/>
                            <TextBlock x:Name="SysInfoDomain" Text="Loading..." Foreground="{StaticResource ForegroundBrush}" Margin="0,0,20,0"/>
                            <TextBlock Text="User:" Foreground="{StaticResource MutedBrush}" Margin="0,0,5,0"/>
                            <TextBlock x:Name="SysInfoUser" Text="Loading..." Foreground="{StaticResource ForegroundBrush}"/>
                        </StackPanel>
                        <TextBlock x:Name="SysInfoComputer" Visibility="Collapsed"/>
                        <TextBlock x:Name="SysInfoDataPath" Visibility="Collapsed"/>
                    </Grid>
                    
                    <!-- Row 1: Stats Row - 5 cards across -->
                    <Grid Grid.Row="1" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Machines -->
                        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="StatMachines" Text="0" FontSize="32" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Machines" FontSize="12" Foreground="{StaticResource MutedBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Artifacts -->
                        <Border Grid.Column="2" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="StatArtifacts" Text="0" FontSize="32" FontWeight="Bold" Foreground="{StaticResource WarningBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Artifacts" FontSize="12" Foreground="{StaticResource MutedBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Rules -->
                        <Border Grid.Column="4" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="StatRules" Text="0" FontSize="32" FontWeight="Bold" Foreground="{StaticResource SuccessBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Rules" FontSize="12" Foreground="{StaticResource MutedBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Pending Approval -->
                        <Border Grid.Column="6" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="StatPending" Text="0" FontSize="32" FontWeight="Bold" Foreground="{StaticResource PendingBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Pending" FontSize="12" Foreground="{StaticResource MutedBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Policies -->
                        <Border Grid.Column="8" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="StatPolicies" Text="0" FontSize="32" FontWeight="Bold" Foreground="{StaticResource PurpleBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Policies" FontSize="12" Foreground="{StaticResource MutedBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- Row 2: Main Content - 3 columns -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Column 1: Recent Scans -->
                        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="RECENT SCANS" FontSize="11" FontWeight="SemiBold" 
                                           Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>
                                
                                <ListBox x:Name="DashRecentScans" Grid.Row="1" 
                                         Background="Transparent" BorderThickness="0"
                                         Foreground="{StaticResource ForegroundBrush}"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         HorizontalContentAlignment="Stretch">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Setter Property="Padding" Value="0"/>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource ContentBrush}" CornerRadius="4" Padding="10,8" Margin="0,0,0,5">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding Name}" Foreground="{StaticResource ForegroundBrush}" FontWeight="SemiBold"/>
                                                        <TextBlock Text="{Binding Date}" Foreground="{StaticResource MutedBrush}" FontSize="11"/>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="1" Text="{Binding Count}" Foreground="{StaticResource PrimaryBrush}" 
                                                               FontWeight="Bold" VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                
                                <Button x:Name="BtnDashGoToScanner" Grid.Row="2" Content="Go to Scanner" 
                                        Style="{StaticResource ActionButtonStyle}" Background="{StaticResource PrimaryBrush}"
                                        HorizontalAlignment="Stretch" Margin="0,10,0,0"/>
                            </Grid>
                        </Border>
                        
                        <!-- Column 2: Pending Rules -->
                        <Border Grid.Column="2" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="PENDING APPROVAL" FontSize="11" FontWeight="SemiBold" 
                                           Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>
                                
                                <ListBox x:Name="DashPendingRules" Grid.Row="1" 
                                         Background="Transparent" BorderThickness="0"
                                         Foreground="{StaticResource ForegroundBrush}"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         HorizontalContentAlignment="Stretch">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Setter Property="Padding" Value="0"/>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource ContentBrush}" CornerRadius="4" Padding="10,8" Margin="0,0,0,5">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Column="0" Background="{StaticResource PendingBrush}" CornerRadius="3" Padding="5,2" Margin="0,0,8,0">
                                                        <TextBlock Text="{Binding Type}" Foreground="White" FontSize="10"/>
                                                    </Border>
                                                    <TextBlock Grid.Column="1" Text="{Binding Name}" Foreground="{StaticResource ForegroundBrush}" 
                                                               TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                
                                <Button x:Name="BtnDashGoToRules" Grid.Row="2" Content="Review Rules" 
                                        Style="{StaticResource ActionButtonStyle}" Background="{StaticResource PendingBrush}"
                                        HorizontalAlignment="Stretch" Margin="0,10,0,0"/>
                            </Grid>
                        </Border>
                        
                        <!-- Column 3: Quick Actions + Activity -->
                        <Grid Grid.Column="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Quick Actions -->
                            <Border Grid.Row="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="QUICK ACTIONS" FontSize="11" FontWeight="SemiBold" 
                                               Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>
                                    
                                    <Button x:Name="BtnDashQuickScan" Content="Start New Scan" 
                                            Style="{StaticResource ActionButtonStyle}" Background="{StaticResource PrimaryBrush}"
                                            HorizontalAlignment="Stretch" Margin="0,0,0,8"/>
                                    
                                    <Button x:Name="BtnDashQuickImport" Content="Import Artifacts" 
                                            Style="{StaticResource ActionButtonStyle}" Background="{StaticResource SecondaryBrush}"
                                            HorizontalAlignment="Stretch" Margin="0,0,0,8"/>
                                    
                                    <Button x:Name="BtnDashQuickDeploy" Content="Deploy Policy" 
                                            Style="{StaticResource ActionButtonStyle}" Background="{StaticResource SuccessBrush}"
                                            HorizontalAlignment="Stretch"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Recent Activity -->
                            <Border Grid.Row="1" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Text="RECENT ACTIVITY" FontSize="11" FontWeight="SemiBold" 
                                               Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>
                                    
                                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                        <TextBlock x:Name="RecentActivityText"
                                                   Text="No recent activity.&#x0a;&#x0a;Get started:&#x0a;1. Go to AD Discovery&#x0a;2. Scan for machines&#x0a;3. Generate rules&#x0a;4. Build policies&#x0a;5. Deploy to GPOs"
                                                   Foreground="{StaticResource MutedBrush}"
                                                   TextWrapping="Wrap"
                                                   LineHeight="20"/>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>

                <!-- AD Discovery Panel -->
                <Grid x:Name="PanelDiscovery" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="AD Discovery" Style="{StaticResource HeaderStyle}"/>

                    <!-- Toolbar -->
                    <Border Grid.Row="1" Background="{StaticResource SidebarBrush}" CornerRadius="6" Padding="15,10" Margin="0,0,0,15">
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                <Button x:Name="BtnRefreshDomain"
                                        Content="&#x1F504; Refresh Domain"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="{StaticResource PrimaryBrush}"
                                        MinWidth="140"
                                        Margin="0,0,10,0"/>
                                <Button x:Name="BtnTestConnectivity"
                                        Content="&#x1F4F6; Test Connectivity"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="{StaticResource SecondaryBrush}"
                                        MinWidth="150"
                                        Margin="0,0,10,0"/>
                            </StackPanel>
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock x:Name="DiscoveryDomainLabel"
                                           Text="Domain: Not connected"
                                           Foreground="{StaticResource MutedBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,15,0"/>
                                <TextBlock x:Name="DiscoveryMachineCount"
                                           Text="0 machines selected"
                                           Foreground="{StaticResource ForegroundBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <!-- Main Content: Split OU Tree and Machine List -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- OU Tree Panel -->
                        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                                    <TextBlock Text="ORGANIZATIONAL UNITS"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource MutedBrush}"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button x:Name="BtnSelectAllOUs"
                                                Content="Select All"
                                                Background="Transparent"
                                                Foreground="{StaticResource PrimaryBrush}"
                                                BorderThickness="0"
                                                Padding="0"
                                                Cursor="Hand"
                                                Margin="0,0,15,0"/>
                                        <Button x:Name="BtnClearOUs"
                                                Content="Clear"
                                                Background="Transparent"
                                                Foreground="{StaticResource MutedBrush}"
                                                BorderThickness="0"
                                                Padding="0"
                                                Cursor="Hand"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- OU TreeView -->
                                <Border Background="#1E1E1E" CornerRadius="4" Padding="5">
                                    <TreeView x:Name="OUTreeView"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Foreground="{StaticResource ForegroundBrush}">
                                        <TreeView.Resources>
                                            <Style TargetType="TreeViewItem">
                                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                <Setter Property="Padding" Value="2"/>
                                            </Style>
                                        </TreeView.Resources>
                                        <!-- TreeView items populated by code-behind -->
                                        <TreeViewItem Header="&#x1F4C1; Loading..." IsExpanded="True" Foreground="{StaticResource MutedBrush}"/>
                                    </TreeView>
                                </Border>
                            </DockPanel>
                        </Border>

                        <!-- Machine List Panel -->
                        <Border Grid.Column="1" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                                    <DockPanel>
                                        <TextBlock Text="DISCOVERED MACHINES"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource MutedBrush}"
                                                   DockPanel.Dock="Left"/>
                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="Filter:"
                                                       Foreground="{StaticResource MutedBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                            <TextBox x:Name="MachineFilterBox"
                                                     Width="150"
                                                     Background="#1E1E1E"
                                                     Foreground="{StaticResource ForegroundBrush}"
                                                     BorderBrush="#3E3E42"
                                                     Padding="8,5"/>
                                        </StackPanel>
                                    </DockPanel>

                                    <!-- Machine Type Filter Buttons -->
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button x:Name="BtnFilterAll" Content="All" Background="#3E3E42" Foreground="White" Padding="12,5" BorderThickness="0" Margin="0,0,5,0"/>
                                        <Button x:Name="BtnFilterWorkstations" Content="&#x1F5A5; Workstations" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="12,5" BorderThickness="0" Margin="0,0,5,0"/>
                                        <Button x:Name="BtnFilterServers" Content="&#x1F5A7; Servers" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="12,5" BorderThickness="0" Margin="0,0,5,0"/>
                                        <Button x:Name="BtnFilterDCs" Content="&#x1F3E2; DCs" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="12,5" BorderThickness="0" Margin="0,0,5,0"/>
                                        <Button x:Name="BtnFilterOnline" Content="&#x1F7E2; Online" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="12,5" BorderThickness="0"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Machine DataGrid -->
                                <Border Background="#1E1E1E" CornerRadius="4" Padding="0" Margin="0,5,0,0">
                                    <DataGrid x:Name="MachineDataGrid"
                                              AutoGenerateColumns="False"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              RowBackground="#252526"
                                              AlternatingRowBackground="#2D2D30"
                                              GridLinesVisibility="None"
                                              HeadersVisibility="Column"
                                              SelectionMode="Extended"
                                              CanUserAddRows="False"
                                              IsReadOnly="True">
                                        <DataGrid.ColumnHeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="Background" Value="#1E1E1E"/>
                                                <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
                                                <Setter Property="Padding" Value="10,8"/>
                                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                <Setter Property="BorderBrush" Value="#3E3E42"/>
                                            </Style>
                                        </DataGrid.ColumnHeaderStyle>
                                        <DataGrid.CellStyle>
                                            <Style TargetType="DataGridCell">
                                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Padding" Value="10,8"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGrid.CellStyle>
                                        <DataGrid.Columns>
                                            <DataGridCheckBoxColumn Width="40"/>
                                            <DataGridTextColumn Header="Status" Width="60" Binding="{Binding StatusIcon}"/>
                                            <DataGridTextColumn Header="Hostname" Width="150" Binding="{Binding Hostname}"/>
                                            <DataGridTextColumn Header="Type" Width="100" Binding="{Binding MachineType}"/>
                                            <DataGridTextColumn Header="Operating System" Width="200" Binding="{Binding OperatingSystem}"/>
                                            <DataGridTextColumn Header="Last Logon" Width="120" Binding="{Binding LastLogon, StringFormat='{}{0:yyyy-MM-dd}'}"/>
                                            <DataGridTextColumn Header="WinRM" Width="80" Binding="{Binding WinRMStatus}"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Border>
                            </DockPanel>
                        </Border>
                    </Grid>
                </Grid>

                <!-- Artifact Scanner Panel -->
                <Grid x:Name="PanelScanner" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="Artifact Scanner" Style="{StaticResource HeaderStyle}"/>

                    <!-- Toolbar -->
                    <Border Grid.Row="1" Background="{StaticResource SidebarBrush}" CornerRadius="6" Padding="15,10" Margin="0,0,0,15">
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                <Button x:Name="BtnStartScan"
                                        Content="&#x25B6; Start Scan"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="{StaticResource SuccessBrush}"
                                        MinWidth="130"
                                        Margin="0,0,10,0"/>
                                <Button x:Name="BtnStopScan"
                                        Content="&#x25A0; Stop"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="{StaticResource ErrorBrush}"
                                        MinWidth="130"
                                        Margin="0,0,10,0"
                                        IsEnabled="False"/>
                            </StackPanel>
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="BtnImportArtifacts"
                                        Content="Import"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="{StaticResource SecondaryBrush}"
                                        MinWidth="100"
                                        Margin="0,0,10,0"/>
                                <Button x:Name="BtnExportArtifacts"
                                        Content="Export"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="{StaticResource PrimaryBrush}"
                                        MinWidth="100"
                                        Margin="0,0,10,0"/>
                                <Rectangle Width="1" Fill="{StaticResource BorderBrush}" Margin="10,0,15,0"/>
                                <TextBlock x:Name="ScanStatusLabel"
                                           Text="Ready"
                                           Foreground="{StaticResource SuccessBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,15,0"/>
                                <TextBlock x:Name="ScanArtifactCount"
                                           Text="0 artifacts"
                                           Foreground="{StaticResource ForegroundBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <!-- Main Content: Tabbed Configuration + Results -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Tabbed Configuration -->
                        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Margin="0,0,10,0" VerticalAlignment="Stretch">
                            <TabControl Background="Transparent" BorderThickness="0" Padding="0" VerticalAlignment="Stretch">
                                <TabControl.Resources>
                                    <Style TargetType="TabItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
                                        <Setter Property="Padding" Value="12,8"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TabItem">
                                                    <Border x:Name="border" Background="Transparent" Padding="{TemplateBinding Padding}" BorderThickness="0,0,0,2" BorderBrush="Transparent">
                                                        <ContentPresenter ContentSource="Header"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                                            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TabControl.Resources>
                                
                                <!-- Tab 1: Configuration -->
                                <TabItem Header="Config">
                                    <StackPanel Margin="15">
                                        <!-- Scan Type -->
                                        <TextBlock Text="SCAN OPTIONS" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>
                                        <CheckBox x:Name="ChkScanLocal" Content="Scan Local Machine" Foreground="{StaticResource ForegroundBrush}" IsChecked="True" Margin="0,0,0,6"/>
                                        <CheckBox x:Name="ChkScanRemote" Content="Scan Remote Machines" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,6"/>
                                        <CheckBox x:Name="ChkIncludeEventLogs" Content="Include Event Logs" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,6"/>
                                        <CheckBox x:Name="ChkSaveResults" Content="Auto-Save Results" Foreground="{StaticResource ForegroundBrush}" IsChecked="True" Margin="0,0,0,15"/>
                                        
                                        <!-- Scan Name -->
                                        <TextBlock Text="SCAN NAME" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,6"/>
                                        <TextBox x:Name="TxtScanName" Background="#1E1E1E" Foreground="{StaticResource ForegroundBrush}" BorderBrush="#3E3E42" Padding="8,6" Text="Baseline Scan" Margin="0,0,0,15"/>
                                        
                                        <!-- Scan Paths -->
                                        <TextBlock Text="SCAN PATHS" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,6"/>
                                        <TextBox x:Name="TxtScanPaths" Background="#1E1E1E" Foreground="{StaticResource ForegroundBrush}" BorderBrush="#3E3E42" Padding="8,6" AcceptsReturn="True" TextWrapping="Wrap" Height="120" VerticalScrollBarVisibility="Auto"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                            <Button x:Name="BtnBrowsePath" Content="Browse" Background="Transparent" Foreground="{StaticResource PrimaryBrush}" BorderThickness="0" Padding="0" Cursor="Hand" Margin="0,0,12,0"/>
                                            <Button x:Name="BtnResetPaths" Content="Reset" Background="Transparent" Foreground="{StaticResource MutedBrush}" BorderThickness="0" Padding="0" Cursor="Hand"/>
                                        </StackPanel>
                                    </StackPanel>
                                </TabItem>
                                
                                <!-- Tab 2: Machines -->
                                <TabItem Header="Machines">
                                    <StackPanel Margin="15">
                                        <DockPanel Margin="0,0,0,10">
                                            <TextBlock Text="SELECTED" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" DockPanel.Dock="Left"/>
                                            <TextBlock x:Name="ScanMachineCount" Text="0" FontSize="10" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" DockPanel.Dock="Right" HorizontalAlignment="Right"/>
                                        </DockPanel>
                                        <Border Background="#1E1E1E" CornerRadius="4" Padding="4" Height="180">
                                            <ListBox x:Name="ScanMachineList" Background="Transparent" BorderThickness="0" Foreground="{StaticResource ForegroundBrush}">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding}" Foreground="{StaticResource ForegroundBrush}" FontSize="11"/>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </Border>
                                        <Button x:Name="BtnSelectMachines" Content="Select from AD Discovery..." Background="Transparent" Foreground="{StaticResource PrimaryBrush}" BorderThickness="0" Padding="0" Cursor="Hand" HorizontalAlignment="Left" Margin="0,10,0,0"/>
                                    </StackPanel>
                                </TabItem>
                                
                                <!-- Tab 3: History -->
                                <TabItem Header="History">
                                    <StackPanel Margin="15">
                                        <DockPanel Margin="0,0,0,10">
                                            <TextBlock Text="SAVED SCANS" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" DockPanel.Dock="Left"/>
                                            <Button x:Name="BtnRefreshScans" Content="Refresh" Background="Transparent" Foreground="{StaticResource PrimaryBrush}" BorderThickness="0" Padding="0" Cursor="Hand" DockPanel.Dock="Right" HorizontalAlignment="Right"/>
                                        </DockPanel>
                                        <Border Background="#1E1E1E" CornerRadius="4" Padding="0" Height="180">
                                            <ListBox x:Name="SavedScansList" Background="Transparent" BorderThickness="0" Foreground="{StaticResource ForegroundBrush}" SelectionMode="Single">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Margin="8,4">
                                                            <TextBlock Text="{Binding ScanName}" Foreground="{StaticResource ForegroundBrush}" FontWeight="SemiBold" FontSize="11"/>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding Date, StringFormat='{}{0:MM/dd HH:mm}'}" Foreground="{StaticResource MutedBrush}" FontSize="10"/>
                                                                <TextBlock Text=" - " Foreground="{StaticResource MutedBrush}" FontSize="10"/>
                                                                <TextBlock Text="{Binding Artifacts}" Foreground="{StaticResource PrimaryBrush}" FontSize="10"/>
                                                                <TextBlock Text=" files" Foreground="{StaticResource MutedBrush}" FontSize="10"/>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </Border>
                                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                            <Button x:Name="BtnLoadScan" Content="Load" Background="Transparent" Foreground="{StaticResource PrimaryBrush}" BorderThickness="0" Padding="0" Cursor="Hand" Margin="0,0,15,0"/>
                                            <Button x:Name="BtnDeleteScan" Content="Delete" Background="Transparent" Foreground="{StaticResource ErrorBrush}" BorderThickness="0" Padding="0" Cursor="Hand"/>
                                        </StackPanel>
                                    </StackPanel>
                                </TabItem>
                            </TabControl>
                        </Border>

                        <!-- Right: Artifact Results -->
                        <Border Grid.Column="1" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <DockPanel>
                                <!-- Header with filters -->
                                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                                    <DockPanel>
                                        <TextBlock Text="COLLECTED ARTIFACTS" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" DockPanel.Dock="Left"/>
                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="Search:" Foreground="{StaticResource MutedBrush}" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="11"/>
                                            <TextBox x:Name="ArtifactFilterBox" Width="150" Background="#1E1E1E" Foreground="{StaticResource ForegroundBrush}" BorderBrush="#3E3E42" Padding="6,4" FontSize="11"/>
                                        </StackPanel>
                                    </DockPanel>

                                    <!-- Filter Buttons -->
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button x:Name="BtnFilterAllArtifacts" Content="All" Background="#3E3E42" Foreground="White" Padding="10,4" BorderThickness="0" Margin="0,0,4,0" FontSize="11"/>
                                        <Button x:Name="BtnFilterExe" Content="EXE" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="10,4" BorderThickness="0" Margin="0,0,4,0" FontSize="11"/>
                                        <Button x:Name="BtnFilterDll" Content="DLL" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="10,4" BorderThickness="0" Margin="0,0,4,0" FontSize="11"/>
                                        <Button x:Name="BtnFilterMsi" Content="MSI" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="10,4" BorderThickness="0" Margin="0,0,4,0" FontSize="11"/>
                                        <Button x:Name="BtnFilterScript" Content="Script" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="10,4" BorderThickness="0" Margin="0,0,8,0" FontSize="11"/>
                                        <Rectangle Width="1" Fill="#3E3E42" Margin="0,2"/>
                                        <Button x:Name="BtnFilterSigned" Content="Signed" Background="Transparent" Foreground="{StaticResource SuccessBrush}" Padding="10,4" BorderThickness="0" Margin="8,0,4,0" FontSize="11"/>
                                        <Button x:Name="BtnFilterUnsigned" Content="Unsigned" Background="Transparent" Foreground="{StaticResource WarningBrush}" Padding="10,4" BorderThickness="0" FontSize="11"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Artifact DataGrid -->
                                <Border Background="#1E1E1E" CornerRadius="4" Padding="0" Margin="0,5,0,0">
                                    <DataGrid x:Name="ArtifactDataGrid"
                                              AutoGenerateColumns="False"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              RowBackground="#252526"
                                              AlternatingRowBackground="#2D2D30"
                                              GridLinesVisibility="None"
                                              HeadersVisibility="Column"
                                              SelectionMode="Extended"
                                              CanUserAddRows="False"
                                              IsReadOnly="True"
                                              FontSize="11">
                                        <DataGrid.ColumnHeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="Background" Value="#1E1E1E"/>
                                                <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
                                                <Setter Property="Padding" Value="8,6"/>
                                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                <Setter Property="BorderBrush" Value="#3E3E42"/>
                                                <Setter Property="FontSize" Value="11"/>
                                            </Style>
                                        </DataGrid.ColumnHeaderStyle>
                                        <DataGrid.CellStyle>
                                            <Style TargetType="DataGridCell">
                                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Padding" Value="8,6"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGrid.CellStyle>
                                        <DataGrid.Columns>
                                            <DataGridCheckBoxColumn Width="30"/>
                                            <DataGridTextColumn Header="S" Width="30" Binding="{Binding SignedIcon}"/>
                                            <DataGridTextColumn Header="File Name" Width="150" Binding="{Binding FileName}"/>
                                            <DataGridTextColumn Header="Type" Width="55" Binding="{Binding ArtifactType}"/>
                                            <DataGridTextColumn Header="Publisher" Width="140" Binding="{Binding Publisher}"/>
                                            <DataGridTextColumn Header="Version" Width="80" Binding="{Binding Version}"/>
                                            <DataGridTextColumn Header="Machine" Width="100" Binding="{Binding SourceMachine}"/>
                                            <DataGridTextColumn Header="Path" Width="*" Binding="{Binding Path}"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Border>
                            </DockPanel>
                        </Border>
                    </Grid>

                    <!-- Progress Bar -->
                    <Border Grid.Row="3" Background="{StaticResource SidebarBrush}" CornerRadius="6" Padding="15" Margin="0,15,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <DockPanel Margin="0,0,0,8">
                                    <TextBlock x:Name="ScanProgressText"
                                               Text="Ready to scan"
                                               Foreground="{StaticResource ForegroundBrush}"
                                               DockPanel.Dock="Left"/>
                                    <TextBlock x:Name="ScanProgressPercent"
                                               Text=""
                                               Foreground="{StaticResource PrimaryBrush}"
                                               DockPanel.Dock="Right"
                                               HorizontalAlignment="Right"/>
                                </DockPanel>
                                <ProgressBar x:Name="ScanProgressBar"
                                             Height="8"
                                             Background="{StaticResource BackgroundBrush}"
                                             Foreground="{StaticResource PrimaryBrush}"
                                             Value="0"
                                             Maximum="100"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                                <Border Background="{StaticResource ContentBrush}" CornerRadius="4" Padding="10,5" Margin="0,0,10,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#x2714;" Foreground="{StaticResource SuccessBrush}" Margin="0,0,5,0"/>
                                        <TextBlock x:Name="ScanSignedCount" Text="0" Foreground="{StaticResource ForegroundBrush}"/>
                                        <TextBlock Text=" signed" Foreground="{StaticResource MutedBrush}"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="{StaticResource ContentBrush}" CornerRadius="4" Padding="10,5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#x2718;" Foreground="{StaticResource WarningBrush}" Margin="0,0,5,0"/>
                                        <TextBlock x:Name="ScanUnsignedCount" Text="0" Foreground="{StaticResource ForegroundBrush}"/>
                                        <TextBlock Text=" unsigned" Foreground="{StaticResource MutedBrush}"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Rule Generator Panel -->
                <Grid x:Name="PanelRules" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="Rule Generator" Style="{StaticResource HeaderStyle}"/>

                    <!-- Main Content -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Tabbed Rule Generation Options -->
                        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Margin="0,0,10,0" VerticalAlignment="Stretch">
                            <TabControl Background="Transparent" BorderThickness="0" Padding="0" VerticalAlignment="Stretch">
                                <TabControl.Resources>
                                    <Style TargetType="TabItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
                                        <Setter Property="Padding" Value="12,8"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TabItem">
                                                    <Border x:Name="border" Background="Transparent" Padding="{TemplateBinding Padding}" BorderThickness="0,0,0,2" BorderBrush="Transparent">
                                                        <ContentPresenter ContentSource="Header"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                                            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TabControl.Resources>
                                
                                <!-- Tab 1: Generate from Artifacts -->
                                <TabItem Header="Generate">
                                    <StackPanel Margin="15">
                                        <TextBlock Text="GENERATE FROM ARTIFACTS" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>
                                        
                                        <TextBlock Text="Collection Name:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <TextBox x:Name="TxtRuleCollectionName" 
                                                 Style="{StaticResource TextBoxStyle}"
                                                 Text="Default" Margin="0,0,0,10"/>

                                        <TextBlock Text="Generation Mode:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="CboRuleGenMode" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,10">
                                            <ComboBoxItem Content="Smart (Publisher if signed, Hash if not)" IsSelected="True"/>
                                            <ComboBoxItem Content="Publisher Only (signed files only)"/>
                                            <ComboBoxItem Content="Hash Only (all files)"/>
                                            <ComboBoxItem Content="Path Only (folder-based)"/>
                                        </ComboBox>

                                        <TextBlock Text="Rule Action:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                            <RadioButton x:Name="RbRuleAllow" Content="Allow" IsChecked="True"
                                                         Foreground="{StaticResource ForegroundBrush}" Margin="0,0,15,0"/>
                                            <RadioButton x:Name="RbRuleDeny" Content="Deny"
                                                         Foreground="{StaticResource ForegroundBrush}"/>
                                        </StackPanel>

                                        <TextBlock Text="Apply To:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="CboRuleTargetGroup" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,15">
                                            <ComboBoxItem Content="Everyone" IsSelected="True" Tag="S-1-1-0"/>
                                            <ComboBoxItem Content="Administrators" Tag="S-1-5-32-544"/>
                                            <ComboBoxItem Content="Users" Tag="S-1-5-32-545"/>
                                            <ComboBoxItem Content="Authenticated Users" Tag="S-1-5-11"/>
                                            <ComboBoxItem Content="Domain Users" Tag="S-1-5-21-*-513"/>
                                            <ComboBoxItem Content="Domain Admins" Tag="S-1-5-21-*-512"/>
                                        </ComboBox>

                                        <Button x:Name="BtnGenerateFromArtifacts" 
                                                Content="Generate Rules from Current Scan"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                Tag="GenerateFromArtifacts"/>
                                    </StackPanel>
                                </TabItem>
                                
                                <!-- Tab 2: Manual Rule Creation -->
                                <TabItem Header="Manual">
                                    <StackPanel Margin="15">
                                        <TextBlock Text="MANUAL RULE CREATION" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>

                                        <TextBlock Text="Rule Type:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="CboManualRuleType" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,10">
                                            <ComboBoxItem Content="Path Rule" IsSelected="True"/>
                                            <ComboBoxItem Content="Hash Rule"/>
                                            <ComboBoxItem Content="Publisher Rule"/>
                                        </ComboBox>

                                        <TextBlock Text="Path / Hash / Publisher:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <TextBox x:Name="TxtManualRuleValue" 
                                                 Style="{StaticResource TextBoxStyle}"
                                                 Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                                                 VerticalContentAlignment="Top" Margin="0,0,0,10"/>

                                        <TextBlock Text="Description:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <TextBox x:Name="TxtManualRuleDesc" 
                                                 Style="{StaticResource TextBoxStyle}" Margin="0,0,0,10"/>

                                        <TextBlock Text="Apply To:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="CboManualRuleTargetGroup" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,15">
                                            <ComboBoxItem Content="Everyone" IsSelected="True" Tag="S-1-1-0"/>
                                            <ComboBoxItem Content="Administrators" Tag="S-1-5-32-544"/>
                                            <ComboBoxItem Content="Users" Tag="S-1-5-32-545"/>
                                            <ComboBoxItem Content="Authenticated Users" Tag="S-1-5-11"/>
                                            <ComboBoxItem Content="Domain Users" Tag="S-1-5-21-*-513"/>
                                            <ComboBoxItem Content="Domain Admins" Tag="S-1-5-21-*-512"/>
                                        </ComboBox>

                                        <Button x:Name="BtnCreateManualRule" 
                                                Content="Create Rule"
                                                Style="{StaticResource ButtonStyle}"
                                                Tag="CreateManualRule"/>
                                    </StackPanel>
                                </TabItem>
                                
                                <!-- Tab 3: Export Options -->
                                <TabItem Header="Export">
                                    <StackPanel Margin="15">
                                        <TextBlock Text="EXPORT OPTIONS" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>

                                        <CheckBox x:Name="ChkExportApprovedOnly" 
                                                  Content="Export approved rules only"
                                                  IsChecked="True"
                                                  Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,15"/>

                                        <Button x:Name="BtnExportRulesXml" 
                                                Content="Export to AppLocker XML"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                Tag="ExportRulesXml" Margin="0,0,0,10"/>
                                        
                                        <Button x:Name="BtnExportRulesCsv" 
                                                Content="Export to CSV"
                                                Style="{StaticResource ButtonStyle}"
                                                Tag="ExportRulesCsv"/>
                                    </StackPanel>
                                </TabItem>
                            </TabControl>
                        </Border>

                        <!-- Right: Rules DataGrid -->
                        <Border Grid.Column="1" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Filter Bar -->
                                <Grid Grid.Row="0" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox x:Name="TxtRuleFilter" 
                                             Style="{StaticResource TextBoxStyle}"
                                             Tag="Filter rules..."/>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                                        <Button x:Name="BtnRefreshRules" Content="Refresh" 
                                                Style="{StaticResource ButtonStyle}" MinWidth="70" Tag="RefreshRules"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Type/Status Filter Buttons -->
                                <WrapPanel Grid.Row="1" Margin="0,0,0,10">
                                    <Button x:Name="BtnFilterAllRules" Content="All" 
                                            Style="{StaticResource ButtonStyle}" MinWidth="50" Margin="0,0,5,5" Tag="FilterRulesAll"/>
                                    <Button x:Name="BtnFilterPublisher" Content="Publisher" 
                                            Style="{StaticResource ButtonStyle}" MinWidth="70" Margin="0,0,5,5" Tag="FilterRulesPublisher"/>
                                    <Button x:Name="BtnFilterHash" Content="Hash" 
                                            Style="{StaticResource ButtonStyle}" MinWidth="50" Margin="0,0,5,5" Tag="FilterRulesHash"/>
                                    <Button x:Name="BtnFilterPath" Content="Path" 
                                            Style="{StaticResource ButtonStyle}" MinWidth="50" Margin="0,0,5,5" Tag="FilterRulesPath"/>
                                    <Border Width="1" Background="{StaticResource BorderBrush}" Margin="5,0,10,5"/>
                                    <Button x:Name="BtnFilterPending" Content="Pending" 
                                            Style="{StaticResource ButtonStyle}" MinWidth="60" Margin="0,0,5,5" 
                                            Background="{StaticResource PendingBrush}" Tag="FilterRulesPending"/>
                                    <Button x:Name="BtnFilterApproved" Content="Approved" 
                                            Style="{StaticResource ButtonStyle}" MinWidth="70" Margin="0,0,5,5" 
                                            Background="{StaticResource ApprovedBrush}" Tag="FilterRulesApproved"/>
                                    <Button x:Name="BtnFilterRejected" Content="Rejected" 
                                            Style="{StaticResource ButtonStyle}" MinWidth="65" Margin="0,0,5,5" 
                                            Background="#8B0000" Tag="FilterRulesRejected"/>
                                </WrapPanel>

                                <!-- Rules DataGrid -->
                                <DataGrid x:Name="RulesDataGrid" Grid.Row="2"
                                          Style="{StaticResource DataGridStyle}"
                                          AutoGenerateColumns="False"
                                          SelectionMode="Extended"
                                          IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Type" Binding="{Binding RuleType}" Width="70"/>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTemplateColumn Header="Group" Width="120">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Ellipse Width="8" Height="8" Margin="0,0,5,0" VerticalAlignment="Center">
                                                            <Ellipse.Style>
                                                                <Style TargetType="Ellipse">
                                                                    <Setter Property="Fill" Value="#888"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding GroupRiskLevel}" Value="Low">
                                                                            <Setter Property="Fill" Value="#1B5E20"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding GroupRiskLevel}" Value="Medium">
                                                                            <Setter Property="Fill" Value="#E65100"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding GroupRiskLevel}" Value="High">
                                                                            <Setter Property="Fill" Value="#8B0000"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Ellipse.Style>
                                                        </Ellipse>
                                                        <TextBlock Text="{Binding GroupName}" Foreground="{StaticResource ForegroundBrush}" FontSize="12"
                                                                   ToolTip="{Binding GroupCategory}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="Collection" Binding="{Binding Collection}" Width="90"/>
                                        <DataGridTextColumn Header="Action" Binding="{Binding Action}" Width="55"/>
                                        <DataGridTemplateColumn Header="Status" Width="75">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border CornerRadius="3" Padding="5,2" HorizontalAlignment="Center">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                                        <Setter Property="Background" Value="#E65100"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Approved">
                                                                        <Setter Property="Background" Value="#1B5E20"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                                        <Setter Property="Background" Value="#8B0000"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Review">
                                                                        <Setter Property="Background" Value="#1565C0"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock Text="{Binding Status}" Foreground="White" FontSize="10"/>
                                                    </Border>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="Created" Binding="{Binding CreatedDisplay}" Width="85"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- Action Buttons with Selection Info -->
                                <Grid Grid.Row="3" Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Left: Selection Info and Select All -->
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <CheckBox x:Name="ChkSelectAllRules" Content="Select All" 
                                                  Foreground="{StaticResource ForegroundBrush}" 
                                                  VerticalAlignment="Center" Margin="0,0,15,0"
                                                  Tag="SelectAllRules"/>
                                        <Border Background="{StaticResource SidebarBrush}" CornerRadius="4" Padding="8,4" Margin="0,0,10,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Selected: " Foreground="{StaticResource MutedBrush}" FontSize="12"/>
                                                <TextBlock x:Name="TxtSelectedRuleCount" Text="0" Foreground="{StaticResource PrimaryBrush}" FontWeight="Bold" FontSize="12"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                    
                                    <!-- Center: Bulk Action Buttons -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button x:Name="BtnApproveRule" Content=" Approve" 
                                                Style="{StaticResource ButtonStyle}" MinWidth="85" Margin="0,0,5,0"
                                                Background="{StaticResource ApprovedBrush}" Tag="ApproveRule"/>
                                        <Button x:Name="BtnRejectRule" Content=" Reject" 
                                                Style="{StaticResource ButtonStyle}" MinWidth="80" Margin="0,0,5,0"
                                                Background="#8B0000" Tag="RejectRule"/>
                                        <Button x:Name="BtnReviewRule" Content=" Review" 
                                                Style="{StaticResource ButtonStyle}" MinWidth="80" Margin="0,0,5,0"
                                                Background="{StaticResource ActiveBrush}" Tag="ReviewRule"/>
                                        <Border Width="1" Background="{StaticResource BorderBrush}" Margin="5,0,10,0"/>
                                        <Button x:Name="BtnAddRuleToPolicy" Content="+ Add to Policy" 
                                                Style="{StaticResource ButtonStyle}" MinWidth="100" Margin="0,0,5,0"
                                                Background="{StaticResource PrimaryBrush}" Tag="AddRuleToPolicy"/>
                                        <Border Width="1" Background="{StaticResource BorderBrush}" Margin="5,0,10,0"/>
                                        <Button x:Name="BtnDeleteRule" Content=" Delete" 
                                                Style="{StaticResource ButtonStyle}" MinWidth="80" Margin="0,0,5,0"
                                                Tag="DeleteRule"/>
                                    </StackPanel>
                                    
                                    <!-- Right: Details Button -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button x:Name="BtnViewRuleDetails" Content="Details" 
                                                Style="{StaticResource ButtonStyle}" MinWidth="75"
                                                Tag="ViewRuleDetails"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Status Bar -->
                    <Border Grid.Row="2" Background="{StaticResource SidebarBrush}" Padding="15,10" Margin="0,10,0,0" CornerRadius="4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Total:" Foreground="{StaticResource MutedBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtRuleTotalCount" Text="0" Foreground="{StaticResource ForegroundBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,25,0"/>
                            <TextBlock Text="Pending:" Foreground="{StaticResource PendingBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtRulePendingCount" Text="0" Foreground="{StaticResource PendingBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,25,0"/>
                            <TextBlock Text="Approved:" Foreground="{StaticResource ApprovedBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtRuleApprovedCount" Text="0" Foreground="{StaticResource ApprovedBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,25,0"/>
                            <TextBlock Text="Rejected:" Foreground="{StaticResource RejectedBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtRuleRejectedCount" Text="0" Foreground="{StaticResource RejectedBrush}" FontSize="13" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Policy Builder Panel -->
                <Grid x:Name="PanelPolicy" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="Policy Builder" Style="{StaticResource HeaderStyle}"/>

                    <!-- Main Content -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Tabbed Policy Options -->
                        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Margin="0,0,10,0" VerticalAlignment="Stretch">
                            <TabControl Background="Transparent" BorderThickness="0" Padding="0" VerticalAlignment="Stretch">
                                <TabControl.Resources>
                                    <Style TargetType="TabItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
                                        <Setter Property="Padding" Value="12,8"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TabItem">
                                                    <Border x:Name="border" Background="Transparent" Padding="{TemplateBinding Padding}" BorderThickness="0,0,0,2" BorderBrush="Transparent">
                                                        <ContentPresenter ContentSource="Header"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                                            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TabControl.Resources>
                                
                                <!-- Tab 1: Create Policy -->
                                <TabItem Header="Create">
                                    <StackPanel Margin="15">
                                        <TextBlock Text="CREATE POLICY" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>

                                        <TextBlock Text="Policy Name:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <TextBox x:Name="TxtPolicyName" 
                                                 Style="{StaticResource TextBoxStyle}" Margin="0,0,0,10"/>

                                        <TextBlock Text="Description:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <TextBox x:Name="TxtPolicyDescription" 
                                                 Style="{StaticResource TextBoxStyle}"
                                                 Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                                                 VerticalContentAlignment="Top" Margin="0,0,0,10"/>

                                        <TextBlock Text="Enforcement Mode:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="CboPolicyEnforcement" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,15">
                                            <ComboBoxItem Content="Audit Only (Recommended)" IsSelected="True"/>
                                            <ComboBoxItem Content="Enabled (Enforce)"/>
                                            <ComboBoxItem Content="Not Configured"/>
                                        </ComboBox>

                                        <TextBlock Text="Deployment Phase:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="CboPolicyPhase" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,5">
                                            <ComboBoxItem Content="Phase 1: EXE Only" IsSelected="True" Tag="1"/>
                                            <ComboBoxItem Content="Phase 2: EXE + Script" Tag="2"/>
                                            <ComboBoxItem Content="Phase 3: EXE + Script + MSI" Tag="3"/>
                                            <ComboBoxItem Content="Phase 4: All (Full Enforcement)" Tag="4"/>
                                        </ComboBox>
                                        <TextBlock Text="Phases 1-3 always use Audit mode" 
                                                   Foreground="{StaticResource MutedBrush}" 
                                                   FontSize="10" FontStyle="Italic" Margin="0,0,0,15"/>

                                        <Button x:Name="BtnCreatePolicy" 
                                                Content="Create New Policy"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                Tag="CreatePolicy"/>
                                    </StackPanel>
                                </TabItem>
                                
                                <!-- Tab 2: Policy Rules -->
                                <TabItem Header="Rules">
                                    <StackPanel Margin="15">
                                        <TextBlock Text="POLICY RULES" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>

                                        <TextBlock Text="Selected Policy:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <TextBlock x:Name="TxtSelectedPolicyName" 
                                                   Text="(Select a policy)" 
                                                   Foreground="{StaticResource MutedBrush}" 
                                                   FontStyle="Italic" Margin="0,0,0,10"/>

                                        <TextBlock Text="Rules in Policy:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <TextBlock x:Name="TxtPolicyRuleCount" 
                                                   Text="0 rules" 
                                                   Foreground="{StaticResource MutedBrush}" Margin="0,0,0,15"/>

                                        <StackPanel Orientation="Horizontal">
                                            <Button x:Name="BtnAddRulesToPolicy" Content="Add Rules" 
                                                    Style="{StaticResource ButtonStyle}" MinWidth="90" Margin="0,0,5,0"
                                                    Tag="AddRulesToPolicy"/>
                                            <Button x:Name="BtnRemoveRulesFromPolicy" Content="Remove" 
                                                    Style="{StaticResource ButtonStyle}" MinWidth="70"
                                                    Tag="RemoveRulesFromPolicy"/>
                                        </StackPanel>
                                    </StackPanel>
                                </TabItem>
                                
                                <!-- Tab 3: Export -->
                                <TabItem Header="Export">
                                    <StackPanel Margin="15">
                                        <TextBlock Text="EXPORT POLICY" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>

                                        <TextBlock Text="Selected Policy:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <TextBlock x:Name="TxtExportPolicyName" 
                                                   Text="(Select a policy)" 
                                                   Foreground="{StaticResource MutedBrush}" 
                                                   FontStyle="Italic" Margin="0,0,0,15"/>

                                        <Button x:Name="BtnExportPolicyXml" Content="Export to AppLocker XML" 
                                                Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,0,10"
                                                Tag="ExportPolicyXml"/>
                                        
                                        <Button x:Name="BtnExportPolicyCsv" Content="Export to CSV" 
                                                Style="{StaticResource ButtonStyle}"
                                                Tag="ExportPolicyCsv"/>
                                    </StackPanel>
                                </TabItem>
                            </TabControl>
                        </Border>

                        <!-- Right: Policies List and Details -->
                        <Border Grid.Column="1" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Filter Bar -->
                                    <Grid Grid.Row="0" Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox x:Name="TxtPolicyFilter" 
                                                 Style="{StaticResource TextBoxStyle}"
                                                 Tag="Filter policies..."/>

                                        <Button Grid.Column="1" x:Name="BtnRefreshPolicies" Content="Refresh" 
                                                Style="{StaticResource ButtonStyle}" MinWidth="70" Margin="10,0,0,0"
                                                Tag="RefreshPolicies"/>
                                    </Grid>

                                    <!-- Status Filter -->
                                    <WrapPanel Grid.Row="1" Margin="0,0,0,10">
                                        <Button x:Name="BtnFilterAllPolicies" Content="All" 
                                                Style="{StaticResource ButtonStyle}" MinWidth="50" Margin="0,0,5,0" Tag="FilterPoliciesAll"/>
                                        <Button x:Name="BtnFilterDraft" Content="Draft" 
                                                Style="{StaticResource ButtonStyle}" MinWidth="55" Margin="0,0,5,0" 
                                                Background="{StaticResource PendingBrush}" Tag="FilterPoliciesDraft"/>
                                        <Button x:Name="BtnFilterActive" Content="Active" 
                                                Style="{StaticResource ButtonStyle}" MinWidth="55" Margin="0,0,5,0" 
                                                Background="{StaticResource ActiveBrush}" Tag="FilterPoliciesActive"/>
                                        <Button x:Name="BtnFilterDeployed" Content="Deployed" 
                                                Style="{StaticResource ButtonStyle}" MinWidth="70" Margin="0,0,5,0" 
                                                Background="{StaticResource ApprovedBrush}" Tag="FilterPoliciesDeployed"/>
                                        <Button x:Name="BtnFilterArchived" Content="Archived" 
                                                Style="{StaticResource ButtonStyle}" MinWidth="65" 
                                                Background="{StaticResource ArchivedBrush}" Tag="FilterPoliciesArchived"/>
                                    </WrapPanel>

                                    <!-- Policies DataGrid -->
                                    <DataGrid x:Name="PoliciesDataGrid" Grid.Row="2"
                                              Style="{StaticResource DataGridStyle}"
                                              AutoGenerateColumns="False"
                                              SelectionMode="Single"
                                              IsReadOnly="True">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                            <DataGridTextColumn Header="Rules" Binding="{Binding RuleCount}" Width="50"/>
                                            <DataGridTextColumn Header="Mode" Binding="{Binding EnforcementMode}" Width="90"/>
                                            <DataGridTemplateColumn Header="Status" Width="75">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Border CornerRadius="3" Padding="5,2" HorizontalAlignment="Center">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Draft">
                                                                            <Setter Property="Background" Value="#E65100"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Active">
                                                                            <Setter Property="Background" Value="#1565C0"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Deployed">
                                                                            <Setter Property="Background" Value="#1B5E20"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Archived">
                                                                            <Setter Property="Background" Value="#616161"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <TextBlock Text="{Binding Status}" Foreground="White" FontSize="10"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTextColumn Header="Target" Binding="{Binding TargetGPO}" Width="100"/>
                                            <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="55"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <!-- Action Buttons -->
                                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button x:Name="BtnActivatePolicy" Content="Activate" 
                                                Style="{StaticResource ButtonStyle}" MinWidth="70" Margin="0,0,5,0"
                                                Background="{StaticResource ActiveBrush}" Tag="ActivatePolicy"/>
                                        <Button x:Name="BtnArchivePolicy" Content="Archive" 
                                                Style="{StaticResource ButtonStyle}" MinWidth="65" Margin="0,0,5,0"
                                                Background="{StaticResource ArchivedBrush}" Tag="ArchivePolicy"/>
                                        <Border Width="1" Background="{StaticResource BorderBrush}" Margin="5,0,10,0"/>
                                        <Button x:Name="BtnExportPolicy" Content="Export XML" 
                                                Style="{StaticResource ButtonStyle}" MinWidth="80" Margin="0,0,5,0"
                                                Tag="ExportPolicy"/>
                                        <Button x:Name="BtnDeletePolicy" Content="Delete" 
                                                Style="{StaticResource ButtonStyle}" MinWidth="60" Margin="0,0,5,0"
                                                Tag="DeletePolicy"/>
                                        <Button x:Name="BtnDeployPolicy" Content="Deploy" 
                                                Style="{StaticResource PrimaryButtonStyle}" MinWidth="70"
                                                Tag="DeployPolicy"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                    </Grid>

                    <!-- Status Bar -->
                    <Border Grid.Row="2" Background="{StaticResource SidebarBrush}" Padding="15,10" Margin="0,10,0,0" CornerRadius="4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Total:" Foreground="{StaticResource MutedBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtPolicyTotalCount" Text="0" Foreground="{StaticResource ForegroundBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,25,0"/>
                            <TextBlock Text="Draft:" Foreground="{StaticResource PendingBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtPolicyDraftCount" Text="0" Foreground="{StaticResource PendingBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,25,0"/>
                            <TextBlock Text="Active:" Foreground="{StaticResource ActiveBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtPolicyActiveCount" Text="0" Foreground="{StaticResource ActiveBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,25,0"/>
                            <TextBlock Text="Deployed:" Foreground="{StaticResource ApprovedBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtPolicyDeployedCount" Text="0" Foreground="{StaticResource ApprovedBrush}" FontSize="13" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Deployment Panel -->
                <Grid x:Name="PanelDeploy" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="Deployment" Style="{StaticResource HeaderStyle}"/>

                    <!-- Main Content -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Tabbed Deployment Options -->
                        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Margin="0,0,10,0" VerticalAlignment="Stretch">
                            <TabControl Background="Transparent" BorderThickness="0" Padding="0" VerticalAlignment="Stretch">
                                <TabControl.Resources>
                                    <Style TargetType="TabItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
                                        <Setter Property="Padding" Value="12,8"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TabItem">
                                                    <Border x:Name="border" Background="Transparent" Padding="{TemplateBinding Padding}" BorderThickness="0,0,0,2" BorderBrush="Transparent">
                                                        <ContentPresenter ContentSource="Header"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                                            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TabControl.Resources>
                                
                                <!-- Tab 1: New Deployment -->
                                <TabItem Header="Create">
                                    <StackPanel Margin="15">
                                        <TextBlock Text="NEW DEPLOYMENT" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>

                                        <TextBlock Text="Select Policy:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="CboDeployPolicy" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,10"
                                                  DisplayMemberPath="Name"/>

                                        <TextBlock Text="Target GPO:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="CboDeployTargetGPO" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,5">
                                            <ComboBoxItem Content="AppLocker-DC" Tag="AppLocker-DC"/>
                                            <ComboBoxItem Content="AppLocker-Servers" Tag="AppLocker-Servers" IsSelected="True"/>
                                            <ComboBoxItem Content="AppLocker-Workstations" Tag="AppLocker-Workstations"/>
                                            <ComboBoxItem Content="Custom GPO..." Tag="Custom"/>
                                        </ComboBox>
                                        
                                        <TextBox x:Name="TxtDeployCustomGPO" 
                                                 Style="{StaticResource TextBoxStyle}" 
                                                 Visibility="Collapsed"
                                                 Tag="Enter custom GPO name..."
                                                 Margin="0,0,0,10"/>

                                        <TextBlock Text="Schedule:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="CboDeploySchedule" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,15">
                                            <ComboBoxItem Content="Manual (Deploy Now)" IsSelected="True"/>
                                            <ComboBoxItem Content="Immediate"/>
                                            <ComboBoxItem Content="Scheduled"/>
                                        </ComboBox>

                                        <Button x:Name="BtnCreateDeployment" 
                                                Content="Create Deployment Job"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                Tag="CreateDeploymentJob"/>
                                    </StackPanel>
                                </TabItem>
                                
                                <!-- Tab 2: Quick Actions -->
                                <TabItem Header="Actions">
                                    <StackPanel Margin="15">
                                        <TextBlock Text="QUICK ACTIONS" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>

                                        <Button x:Name="BtnDeployJob" Content=" Deploy Selected Job" 
                                                Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,0,5"
                                                Tag="DeploySelectedJob"/>
                                        <Button x:Name="BtnStopDeployment" Content=" Stop Deployment" 
                                                Style="{StaticResource ButtonStyle}" Margin="0,0,0,5"
                                                Tag="StopDeployment" IsEnabled="False"/>
                                        <Button x:Name="BtnCancelSelected" Content=" Cancel Selected Job" 
                                                Style="{StaticResource ButtonStyle}" Margin="0,0,0,5"
                                                Tag="CancelDeploymentJob"/>
                                        <Button x:Name="BtnViewDeployLog" Content="View Deployment Log" 
                                                Style="{StaticResource ButtonStyle}"
                                                Tag="ViewDeploymentLog"/>
                                    </StackPanel>
                                </TabItem>
                                
                                <!-- Tab 3: GPO Status -->
                                <TabItem Header="Status">
                                    <StackPanel Margin="15">
                                        <TextBlock Text="GPO STATUS" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,15"/>

                                        <Grid Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="GroupPolicy Module:" Foreground="{StaticResource ForegroundBrush}"/>
                                            <TextBlock x:Name="TxtGPModuleStatus" Grid.Column="1" Text="Checking..." 
                                                       Foreground="{StaticResource MutedBrush}" HorizontalAlignment="Right"/>
                                        </Grid>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="AppLocker Module:" Foreground="{StaticResource ForegroundBrush}"/>
                                            <TextBlock x:Name="TxtALModuleStatus" Grid.Column="1" Text="Checking..." 
                                                       Foreground="{StaticResource MutedBrush}" HorizontalAlignment="Right"/>
                                        </Grid>
                                    </StackPanel>
                                </TabItem>
                            </TabControl>
                        </Border>

                        <!-- Right: Deployment Jobs List -->
                        <Border Grid.Column="1" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Filter Bar -->
                                <Grid Grid.Row="0" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="DEPLOYMENT JOBS" 
                                               FontSize="11" FontWeight="SemiBold" 
                                               Foreground="{StaticResource MutedBrush}" VerticalAlignment="Center"/>

                                    <Button Grid.Column="1" x:Name="BtnRefreshDeployments" Content="Refresh" 
                                            Style="{StaticResource ButtonStyle}" MinWidth="70"
                                            Tag="RefreshDeployments"/>
                                </Grid>

                                <!-- Status Filters -->
                                <WrapPanel Grid.Row="1" Margin="0,0,0,10">
                                    <Button x:Name="BtnFilterAllJobs" Content="All" 
                                            Style="{StaticResource ButtonStyle}" MinWidth="50" Margin="0,0,5,0" Tag="FilterJobsAll"/>
                                    <Button x:Name="BtnFilterPendingJobs" Content="Pending" 
                                            Style="{StaticResource ButtonStyle}" MinWidth="65" Margin="0,0,5,0" 
                                            Background="{StaticResource PendingBrush}" Tag="FilterJobsPending"/>
                                    <Button x:Name="BtnFilterRunningJobs" Content="Running" 
                                            Style="{StaticResource ButtonStyle}" MinWidth="65" Margin="0,0,5,0" 
                                            Background="{StaticResource ActiveBrush}" Tag="FilterJobsRunning"/>
                                    <Button x:Name="BtnFilterCompletedJobs" Content="Completed" 
                                            Style="{StaticResource ButtonStyle}" MinWidth="75" Margin="0,0,5,0" 
                                            Background="{StaticResource ApprovedBrush}" Tag="FilterJobsCompleted"/>
                                    <Button x:Name="BtnFilterFailedJobs" Content="Failed" 
                                            Style="{StaticResource ButtonStyle}" MinWidth="55" 
                                            Background="#8B0000" Tag="FilterJobsFailed"/>
                                </WrapPanel>

                                <!-- Jobs DataGrid -->
                                <DataGrid x:Name="DeploymentJobsDataGrid" Grid.Row="2"
                                          Style="{StaticResource DataGridStyle}"
                                          AutoGenerateColumns="False"
                                          SelectionMode="Single"
                                          IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Policy" Binding="{Binding PolicyName}" Width="*"/>
                                        <DataGridTextColumn Header="GPO" Binding="{Binding GPOName}" Width="120"/>
                                        <DataGridTemplateColumn Header="Status" Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border CornerRadius="3" Padding="5,2" HorizontalAlignment="Center">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                                        <Setter Property="Background" Value="#E65100"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Running">
                                                                        <Setter Property="Background" Value="#1565C0"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                                        <Setter Property="Background" Value="#1B5E20"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                                        <Setter Property="Background" Value="#8B0000"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                                        <Setter Property="Background" Value="#616161"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock Text="{Binding Status}" Foreground="White" FontSize="10"/>
                                                    </Border>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="Progress" Binding="{Binding ProgressDisplay}" Width="65"/>
                                        <DataGridTextColumn Header="Created" Binding="{Binding CreatedDisplay}" Width="85"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- Progress/Message Area -->
                                <Border Grid.Row="3" Background="#252526" CornerRadius="4" Padding="10" Margin="0,10,0,0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock x:Name="TxtDeploymentMessage" Grid.Row="0"
                                                   Text="Select a deployment job to view details"
                                                   Foreground="{StaticResource MutedBrush}" Margin="0,0,0,8"/>

                                        <Grid Grid.Row="1">
                                            <ProgressBar x:Name="DeploymentProgressBar" 
                                                         Height="6" Minimum="0" Maximum="100" Value="0"
                                                         Background="{StaticResource BorderBrush}" Foreground="{StaticResource PrimaryBrush}"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Footer Stats -->
                    <Border Grid.Row="2" Background="{StaticResource SidebarBrush}" Padding="15,10" Margin="0,10,0,0" CornerRadius="4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Total Jobs:" Foreground="{StaticResource MutedBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtJobTotalCount" Text="0" Foreground="{StaticResource ForegroundBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,25,0"/>
                            <TextBlock Text="Pending:" Foreground="{StaticResource PendingBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtJobPendingCount" Text="0" Foreground="{StaticResource PendingBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,25,0"/>
                            <TextBlock Text="Running:" Foreground="{StaticResource ActiveBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtJobRunningCount" Text="0" Foreground="{StaticResource ActiveBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,25,0"/>
                            <TextBlock Text="Completed:" Foreground="{StaticResource ApprovedBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtJobCompletedCount" Text="0" Foreground="{StaticResource ApprovedBrush}" FontSize="13" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Settings Panel - Credentials Only -->
                <Grid x:Name="PanelSettings" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Settings" Style="{StaticResource HeaderStyle}"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="280"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Column: Add Credential Form -->
                            <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15" Margin="0,0,15,0">
                                <StackPanel>
                                    <TextBlock Text="ADD CREDENTIAL"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource MutedBrush}"
                                               Margin="0,0,0,15"/>

                                    <!-- Tier Legend -->
                                    <StackPanel Margin="0,0,0,15">
                                        <Border Background="#9C27B0" CornerRadius="3" Padding="8,4" Margin="0,0,0,5">
                                            <TextBlock Text="Tier 0: Domain Controllers" Foreground="White" FontSize="10"/>
                                        </Border>
                                        <Border Background="{StaticResource WarningBrush}" CornerRadius="3" Padding="8,4" Margin="0,0,0,5">
                                            <TextBlock Text="Tier 1: Servers" Foreground="White" FontSize="10"/>
                                        </Border>
                                        <Border Background="{StaticResource PrimaryBrush}" CornerRadius="3" Padding="8,4">
                                            <TextBlock Text="Tier 2: Workstations" Foreground="White" FontSize="10"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- Profile Name -->
                                    <TextBlock Text="Profile Name" Foreground="{StaticResource MutedBrush}" FontSize="11" Margin="0,0,0,5"/>
                                    <TextBox x:Name="CredProfileName" Background="#1E1E1E" Foreground="{StaticResource ForegroundBrush}" BorderBrush="#3E3E42" Padding="8,6" Margin="0,0,0,10"/>

                                    <!-- Tier Selection -->
                                    <TextBlock Text="Tier Level" Foreground="{StaticResource MutedBrush}" FontSize="11" Margin="0,0,0,5"/>
                                    <ComboBox x:Name="CredTierCombo" Style="{StaticResource ComboBoxStyle}" SelectedIndex="2" Margin="0,0,0,10">
                                        <ComboBoxItem Content="Tier 0 - Domain Controllers" Tag="0"/>
                                        <ComboBoxItem Content="Tier 1 - Servers" Tag="1"/>
                                        <ComboBoxItem Content="Tier 2 - Workstations" Tag="2"/>
                                    </ComboBox>

                                    <!-- Username -->
                                    <TextBlock Text="Username (DOMAIN\User)" Foreground="{StaticResource MutedBrush}" FontSize="11" Margin="0,0,0,5"/>
                                    <TextBox x:Name="CredUsername" Background="#1E1E1E" Foreground="{StaticResource ForegroundBrush}" BorderBrush="#3E3E42" Padding="8,6" Margin="0,0,0,10"/>

                                    <!-- Password -->
                                    <TextBlock Text="Password" Foreground="{StaticResource MutedBrush}" FontSize="11" Margin="0,0,0,5"/>
                                    <PasswordBox x:Name="CredPassword" Background="#1E1E1E" Foreground="{StaticResource ForegroundBrush}" BorderBrush="#3E3E42" Padding="8,6" Margin="0,0,0,10"/>

                                    <!-- Description -->
                                    <TextBlock Text="Description (optional)" Foreground="{StaticResource MutedBrush}" FontSize="11" Margin="0,0,0,5"/>
                                    <TextBox x:Name="CredDescription" Background="#1E1E1E" Foreground="{StaticResource ForegroundBrush}" BorderBrush="#3E3E42" Padding="8,6" Margin="0,0,0,10"/>

                                    <!-- Default Checkbox -->
                                    <CheckBox x:Name="CredSetAsDefault" Content="Set as default for tier" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,15"/>

                                    <!-- Save Button -->
                                    <Button x:Name="BtnSaveCredential" Content="Save Credential" Style="{StaticResource ActionButtonStyle}" Background="{StaticResource SuccessBrush}" Padding="12,10"/>
                                </StackPanel>
                            </Border>

                            <!-- Right Column: Credentials List & Actions -->
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Credentials List -->
                                <Border Grid.Row="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                    <DockPanel>
                                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                                            <TextBlock Text="CREDENTIAL PROFILES" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" VerticalAlignment="Center"/>
                                            <Button x:Name="BtnRefreshCredentials" Content="&#x1F504; Refresh" Background="Transparent" Foreground="{StaticResource PrimaryBrush}" BorderThickness="0" Padding="10,5" Cursor="Hand" Margin="15,0,0,0"/>
                                        </StackPanel>

                                        <Border Background="#1E1E1E" CornerRadius="4">
                                            <DataGrid x:Name="CredentialsDataGrid"
                                                      AutoGenerateColumns="False"
                                                      Background="Transparent"
                                                      BorderThickness="0"
                                                      RowBackground="#252526"
                                                      AlternatingRowBackground="#2D2D30"
                                                      GridLinesVisibility="None"
                                                      HeadersVisibility="Column"
                                                      SelectionMode="Single"
                                                      CanUserAddRows="False"
                                                      IsReadOnly="True">
                                                <DataGrid.ColumnHeaderStyle>
                                                    <Style TargetType="DataGridColumnHeader">
                                                        <Setter Property="Background" Value="#1E1E1E"/>
                                                        <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
                                                        <Setter Property="Padding" Value="10,8"/>
                                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                        <Setter Property="BorderBrush" Value="#3E3E42"/>
                                                    </Style>
                                                </DataGrid.ColumnHeaderStyle>
                                                <DataGrid.CellStyle>
                                                    <Style TargetType="DataGridCell">
                                                        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Setter Property="Padding" Value="10,8"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGrid.CellStyle>
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Name" Width="140" Binding="{Binding Name}"/>
                                                    <DataGridTextColumn Header="Tier" Width="50" Binding="{Binding Tier}"/>
                                                    <DataGridTextColumn Header="Username" Width="160" Binding="{Binding Username}"/>
                                                    <DataGridTextColumn Header="Default" Width="60" Binding="{Binding IsDefaultDisplay}"/>
                                                    <DataGridTextColumn Header="Last Test" Width="130" Binding="{Binding LastTestDisplay}"/>
                                                    <DataGridTextColumn Header="Description" Width="*" Binding="{Binding Description}"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Border>
                                    </DockPanel>
                                </Border>

                                <!-- Credential Actions -->
                                <Border Grid.Row="1" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <Button x:Name="BtnTestCredential" Content="&#x1F50D; Test" Style="{StaticResource ActionButtonStyle}" Background="{StaticResource SecondaryBrush}" Padding="15,10" Margin="0,0,10,0"/>
                                            <Button x:Name="BtnSetDefaultCredential" Content="&#x2B50; Set Default" Style="{StaticResource ActionButtonStyle}" Background="{StaticResource WarningBrush}" Padding="15,10" Margin="0,0,10,0"/>
                                            <Button x:Name="BtnDeleteCredential" Content="&#x1F5D1; Delete" Style="{StaticResource ActionButtonStyle}" Background="{StaticResource ErrorBrush}" Padding="15,10"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <TextBlock Text="Test Target:" Foreground="{StaticResource MutedBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBox x:Name="CredTestTarget" Width="180" Background="#1E1E1E" Foreground="{StaticResource ForegroundBrush}" BorderBrush="#3E3E42" Padding="8,6" ToolTip="Hostname to test credential"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Test Result (shown when needed) -->
                                <Border x:Name="CredTestResultBorder" Grid.Row="2" Background="#1E1E1E" CornerRadius="4" Padding="15" Margin="0,15,0,0" Visibility="Collapsed">
                                    <TextBlock x:Name="CredTestResultText" Text="" Foreground="{StaticResource ForegroundBrush}" TextWrapping="Wrap"/>
                                </Border>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </Grid>

                <!-- Setup Panel - NEW -->
                <Grid x:Name="PanelSetup" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Setup" Style="{StaticResource HeaderStyle}"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Card 1: WinRM Configuration -->
                            <Border Grid.Row="0" Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="WINRM CONFIGURATION" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>
                                    <TextBlock Text="Enable WinRM across the domain for remote management via GPO." Foreground="{StaticResource MutedBrush}" TextWrapping="Wrap" Margin="0,0,0,15"/>

                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Status:" Foreground="{StaticResource MutedBrush}" FontSize="11"/>
                                            <TextBlock x:Name="TxtWinRMStatus" Text="Not Configured" Foreground="{StaticResource WarningBrush}" FontWeight="SemiBold"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="GPO Name:" Foreground="{StaticResource MutedBrush}" FontSize="11"/>
                                            <TextBlock Text="AppLocker-EnableWinRM" Foreground="{StaticResource ForegroundBrush}"/>
                                        </StackPanel>
                                    </Grid>

                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="BtnInitializeWinRM" Content="Initialize" Style="{StaticResource PrimaryButtonStyle}" Padding="15,8" Margin="0,0,10,0"/>
                                        <Button x:Name="BtnToggleWinRM" Content="Toggle Link" Style="{StaticResource ButtonStyle}" Padding="15,8"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Card 2: AD Structure -->
                            <Border Grid.Row="0" Grid.Column="2" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="AD STRUCTURE" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>
                                    <TextBlock Text="Create AppLocker OU and security groups in Active Directory." Foreground="{StaticResource MutedBrush}" TextWrapping="Wrap" Margin="0,0,0,15"/>

                                    <TextBlock Text="OU: OU=AppLocker (domain root)" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,10"/>

                                    <TextBlock Text="Groups:" Foreground="{StaticResource MutedBrush}" FontSize="11" Margin="0,0,0,5"/>
                                    <WrapPanel Margin="0,0,0,15">
                                        <Border Background="#252526" CornerRadius="3" Padding="6,3" Margin="0,0,4,4"><TextBlock Text="Admins" Foreground="{StaticResource ForegroundBrush}" FontSize="10"/></Border>
                                        <Border Background="#252526" CornerRadius="3" Padding="6,3" Margin="0,0,4,4"><TextBlock Text="Exempt" Foreground="{StaticResource ForegroundBrush}" FontSize="10"/></Border>
                                        <Border Background="#252526" CornerRadius="3" Padding="6,3" Margin="0,0,4,4"><TextBlock Text="Audit" Foreground="{StaticResource ForegroundBrush}" FontSize="10"/></Border>
                                        <Border Background="#252526" CornerRadius="3" Padding="6,3" Margin="0,0,4,4"><TextBlock Text="Users" Foreground="{StaticResource ForegroundBrush}" FontSize="10"/></Border>
                                        <Border Background="#252526" CornerRadius="3" Padding="6,3" Margin="0,0,4,4"><TextBlock Text="Installers" Foreground="{StaticResource ForegroundBrush}" FontSize="10"/></Border>
                                        <Border Background="#252526" CornerRadius="3" Padding="6,3" Margin="0,0,4,4"><TextBlock Text="Developers" Foreground="{StaticResource ForegroundBrush}" FontSize="10"/></Border>
                                    </WrapPanel>

                                    <Button x:Name="BtnInitializeADStructure" Content="Initialize AD Structure" Style="{StaticResource PrimaryButtonStyle}" Padding="15,8" HorizontalAlignment="Left"/>
                                </StackPanel>
                            </Border>

                            <!-- Card 3: AppLocker GPOs -->
                            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="APPLOCKER GPO CONFIGURATION" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>
                                    <TextBlock Text="Create default AppLocker GPOs for each tier (Domain Controllers, Servers, Workstations)." Foreground="{StaticResource MutedBrush}" TextWrapping="Wrap" Margin="0,0,0,15"/>

                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- DC -->
                                        <Border Grid.Column="0" Background="#252526" CornerRadius="6" Padding="15" Margin="0,0,10,0">
                                            <StackPanel>
                                                <TextBlock Text="AppLocker-DC" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                                <TextBlock Text="Domain Controllers OU" Foreground="{StaticResource MutedBrush}" FontSize="11" Margin="0,0,0,8"/>
                                                <TextBlock x:Name="TxtGPO_DC_Status" Text="Not Configured" Foreground="{StaticResource WarningBrush}" FontSize="11"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Servers -->
                                        <Border Grid.Column="1" Background="#252526" CornerRadius="6" Padding="15" Margin="0,0,10,0">
                                            <StackPanel>
                                                <TextBlock Text="AppLocker-Servers" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                                <TextBlock Text="Servers OU" Foreground="{StaticResource MutedBrush}" FontSize="11" Margin="0,0,0,8"/>
                                                <TextBlock x:Name="TxtGPO_Servers_Status" Text="Not Configured" Foreground="{StaticResource WarningBrush}" FontSize="11"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Workstations -->
                                        <Border Grid.Column="2" Background="#252526" CornerRadius="6" Padding="15">
                                            <StackPanel>
                                                <TextBlock Text="AppLocker-Workstations" FontWeight="SemiBold" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                                <TextBlock Text="Computers OU" Foreground="{StaticResource MutedBrush}" FontSize="11" Margin="0,0,0,8"/>
                                                <TextBlock x:Name="TxtGPO_Workstations_Status" Text="Not Configured" Foreground="{StaticResource WarningBrush}" FontSize="11"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>

                                    <Button x:Name="BtnInitializeAppLockerGPOs" Content="Initialize All GPOs" Style="{StaticResource PrimaryButtonStyle}" Padding="15,8" HorizontalAlignment="Left"/>
                                </StackPanel>
                            </Border>

                            <!-- Card 4: Full Initialization -->
                            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Background="#1A2A1A" CornerRadius="8" Padding="20" BorderBrush="{StaticResource SuccessBrush}" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="FULL INITIALIZATION" FontSize="11" FontWeight="Bold" Foreground="{StaticResource SuccessBrush}" Margin="0,0,0,5"/>
                                        <TextBlock Text="Run all initialization steps at once: WinRM GPO, AppLocker GPOs, and AD Structure." Foreground="{StaticResource ForegroundBrush}" TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <Button Grid.Column="1" x:Name="BtnInitializeAll" Content="Initialize Everything" Style="{StaticResource ActionButtonStyle}" Background="{StaticResource SuccessBrush}" Padding="20,12" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ScrollViewer>
                </Grid>

                <!-- About Panel - NEW -->
                <Grid x:Name="PanelAbout" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="About" Style="{StaticResource HeaderStyle}"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Card 1: Application Info -->
                        <Border Grid.Row="0" Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="GA-APPLOCKER" FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,5"/>
                                <TextBlock Text="Enterprise AppLocker Management Dashboard" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,20"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Version:" Foreground="{StaticResource MutedBrush}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="1.0.0" Foreground="{StaticResource ForegroundBrush}" FontWeight="SemiBold"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Platform:" Foreground="{StaticResource MutedBrush}" Margin="0,5,0,0"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="PowerShell 5.1 / WPF" Foreground="{StaticResource ForegroundBrush}" Margin="0,5,0,0"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Environment:" Foreground="{StaticResource MutedBrush}" Margin="0,5,0,0"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="Air-Gapped Ready" Foreground="{StaticResource SuccessBrush}" Margin="0,5,0,0"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Card 2: Data Storage -->
                        <Border Grid.Row="0" Grid.Column="2" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="DATA STORAGE" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,15"/>

                                <TextBlock Text="Data Directory:" Foreground="{StaticResource MutedBrush}" FontSize="11" Margin="0,0,0,3"/>
                                <TextBlock x:Name="SettingsDataPath" Text="%LOCALAPPDATA%\GA-AppLocker" Foreground="{StaticResource ForegroundBrush}" TextWrapping="Wrap" Margin="0,0,0,15"/>

                                <TextBlock Text="Storage Locations:" Foreground="{StaticResource MutedBrush}" FontSize="11" Margin="0,0,0,8"/>
                                <StackPanel Margin="10,0,0,0">
                                    <TextBlock Text=" Config: config.json" Foreground="{StaticResource ForegroundBrush}" FontSize="12"/>
                                    <TextBlock Text=" Credentials: Credentials\" Foreground="{StaticResource ForegroundBrush}" FontSize="12"/>
                                    <TextBlock Text=" Scans: Scans\" Foreground="{StaticResource ForegroundBrush}" FontSize="12"/>
                                    <TextBlock Text=" Rules: Rules\" Foreground="{StaticResource ForegroundBrush}" FontSize="12"/>
                                    <TextBlock Text=" Policies: Policies\" Foreground="{StaticResource ForegroundBrush}" FontSize="12"/>
                                    <TextBlock Text=" Deployments: Deployments\" Foreground="{StaticResource ForegroundBrush}" FontSize="12"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Card 3: Requirements -->
                        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="SYSTEM REQUIREMENTS" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,15"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                        <TextBlock Text="Operating System" Foreground="{StaticResource MutedBrush}" FontSize="11" Margin="0,0,0,5"/>
                                        <TextBlock Text="Windows 10+" Foreground="{StaticResource ForegroundBrush}"/>
                                        <TextBlock Text="Server 2019+" Foreground="{StaticResource ForegroundBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                        <TextBlock Text="PowerShell" Foreground="{StaticResource MutedBrush}" FontSize="11" Margin="0,0,0,5"/>
                                        <TextBlock Text="Version 5.1+" Foreground="{StaticResource ForegroundBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Margin="0,0,15,0">
                                        <TextBlock Text=".NET Framework" Foreground="{StaticResource MutedBrush}" FontSize="11" Margin="0,0,0,5"/>
                                        <TextBlock Text="4.7.2+" Foreground="{StaticResource ForegroundBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3">
                                        <TextBlock Text="RSAT Tools" Foreground="{StaticResource MutedBrush}" FontSize="11" Margin="0,0,0,5"/>
                                        <TextBlock Text="AD + GroupPolicy" Foreground="{StaticResource ForegroundBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Card 4: Modules -->
                        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="20">
                            <StackPanel>
                                <TextBlock Text="MODULES" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,15"/>

                                <WrapPanel>
                                    <Border Background="{StaticResource PrimaryBrush}" CornerRadius="4" Padding="12,8" Margin="0,0,8,8">
                                        <TextBlock Text="Core" Foreground="White" FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Background="{StaticResource SecondaryBrush}" CornerRadius="4" Padding="12,8" Margin="0,0,8,8">
                                        <TextBlock Text="Discovery" Foreground="White" FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Background="#9C27B0" CornerRadius="4" Padding="12,8" Margin="0,0,8,8">
                                        <TextBlock Text="Credentials" Foreground="White" FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Background="{StaticResource WarningBrush}" CornerRadius="4" Padding="12,8" Margin="0,0,8,8">
                                        <TextBlock Text="Scanning" Foreground="White" FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Background="{StaticResource SuccessBrush}" CornerRadius="4" Padding="12,8" Margin="0,0,8,8">
                                        <TextBlock Text="Rules" Foreground="White" FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Background="{StaticResource PurpleBrush}" CornerRadius="4" Padding="12,8" Margin="0,0,8,8">
                                        <TextBlock Text="Policy" Foreground="White" FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Background="{StaticResource ErrorBrush}" CornerRadius="4" Padding="12,8" Margin="0,0,8,8">
                                        <TextBlock Text="Deployment" Foreground="White" FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Background="#607D8B" CornerRadius="4" Padding="12,8" Margin="0,0,8,8">
                                        <TextBlock Text="Setup" Foreground="White" FontWeight="SemiBold"/>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Border>

        <!-- Toast Notification Container (Overlay) -->
        <Border x:Name="ToastContainer"
                Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,30,30"
                IsHitTestVisible="False">
            <StackPanel x:Name="ToastStack" Width="350">
                <!-- Toast items will be added here dynamically -->
            </StackPanel>
        </Border>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay"
              Grid.ColumnSpan="2"
              Background="#AA000000"
              Visibility="Collapsed">
            <Border Background="{StaticResource SidebarBrush}"
                    CornerRadius="12"
                    Padding="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MinWidth="200">
                <StackPanel HorizontalAlignment="Center">
                    <!-- Animated Spinner -->
                    <Border x:Name="LoadingSpinner"
                            Style="{StaticResource SpinnerStyle}"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Center">
                        <Viewbox>
                            <Canvas Width="24" Height="24">
                                <Ellipse Width="24" Height="24" 
                                         Stroke="{StaticResource PrimaryBrush}" 
                                         StrokeThickness="3"
                                         StrokeDashArray="3,2"
                                         StrokeDashCap="Round"/>
                            </Canvas>
                        </Viewbox>
                    </Border>
                    <TextBlock x:Name="LoadingText"
                               Text="Loading..."
                               Foreground="{StaticResource ForegroundBrush}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="LoadingSubText"
                               Text=""
                               Foreground="{StaticResource MutedBrush}"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
