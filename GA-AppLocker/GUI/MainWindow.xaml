<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="GA-AppLocker Dashboard"
    Height="800"
    Width="1200"
    MinHeight="600"
    MinWidth="900"
    WindowStartupLocation="CenterScreen"
    Background="#1E1E1E">

    <Window.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#106EBE"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="SidebarBrush" Color="#252526"/>
        <SolidColorBrush x:Key="ContentBrush" Color="#2D2D30"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="MutedBrush" Color="#9E9E9E"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333337"/>
                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Active">
                                <Setter Property="Background" Value="#333337"/>
                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SidebarBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,15,15"/>
        </Style>

        <!-- Action Button Style (for Quick Action cards) -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}">
            <DockPanel>
                <!-- App Header -->
                <StackPanel DockPanel.Dock="Top" Margin="15,20,15,30">
                    <TextBlock Text="GA-AppLocker"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource ForegroundBrush}"/>
                    <TextBlock Text="Dashboard v1.0.0"
                               FontSize="11"
                               Foreground="{StaticResource MutedBrush}"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Navigation Buttons -->
                <StackPanel DockPanel.Dock="Top">
                    <Button x:Name="NavDashboard"
                            Style="{StaticResource NavButtonStyle}"
                            Tag="Active"
                            Content="&#x1F4CA;  Dashboard"/>
                    <Button x:Name="NavDiscovery"
                            Style="{StaticResource NavButtonStyle}"
                            Content="&#x1F50D;  AD Discovery"/>
                    <Button x:Name="NavScanner"
                            Style="{StaticResource NavButtonStyle}"
                            Content="&#x1F4C1;  Artifact Scanner"/>
                    <Button x:Name="NavRules"
                            Style="{StaticResource NavButtonStyle}"
                            Content="&#x1F4DD;  Rule Generator"/>
                    <Button x:Name="NavPolicy"
                            Style="{StaticResource NavButtonStyle}"
                            Content="&#x1F4CB;  Policy Builder"/>
                    <Button x:Name="NavDeploy"
                            Style="{StaticResource NavButtonStyle}"
                            Content="&#x1F680;  Deployment"/>

                    <Separator Margin="15,20" Background="#3E3E42"/>

                    <Button x:Name="NavSettings"
                            Style="{StaticResource NavButtonStyle}"
                            Content="&#x2699;  Settings"/>
                </StackPanel>

                <!-- Footer -->
                <StackPanel DockPanel.Dock="Bottom" Margin="15,0,15,15" VerticalAlignment="Bottom">
                    <Border Background="#333337" CornerRadius="6" Padding="10">
                        <StackPanel>
                            <TextBlock x:Name="StatusText"
                                       Text="Ready"
                                       FontSize="11"
                                       Foreground="{StaticResource SuccessBrush}"/>
                            <TextBlock x:Name="DomainText"
                                       Text="Domain: Loading..."
                                       FontSize="10"
                                       Foreground="{StaticResource MutedBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Background="{StaticResource BackgroundBrush}" Padding="30">
            <Grid x:Name="ContentArea">
                <!-- Dashboard Panel (Default) -->
                <Grid x:Name="PanelDashboard" Visibility="Visible">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Dashboard" Style="{StaticResource HeaderStyle}"/>

                            <!-- Quick Actions Row -->
                            <TextBlock Text="QUICK ACTIONS"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource MutedBrush}"
                                       Margin="0,0,0,15"/>

                            <WrapPanel>
                                <!-- Full Scan Card -->
                                <Border Style="{StaticResource CardStyle}" Width="200" Height="180">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="&#x1F50D;" FontSize="28" Margin="0,0,0,10"/>
                                        <TextBlock Grid.Row="1" Text="Full Scan"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource ForegroundBrush}"/>
                                        <TextBlock Grid.Row="2" Text="Scan all machines with auto-credentials"
                                                   TextWrapping="Wrap"
                                                   FontSize="11"
                                                   Foreground="{StaticResource MutedBrush}"
                                                   Margin="0,5,0,0"
                                                   VerticalAlignment="Top"/>
                                        <Button Grid.Row="3"
                                                Content="Start Scan"
                                                Style="{StaticResource ActionButtonStyle}"
                                                Background="{StaticResource PrimaryBrush}"/>
                                    </Grid>
                                </Border>

                                <!-- Import Card -->
                                <Border Style="{StaticResource CardStyle}" Width="200" Height="180">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="&#x1F4E5;" FontSize="28" Margin="0,0,0,10"/>
                                        <TextBlock Grid.Row="1" Text="Import &amp; Generate"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource ForegroundBrush}"/>
                                        <TextBlock Grid.Row="2" Text="Import file and generate rules"
                                                   TextWrapping="Wrap"
                                                   FontSize="11"
                                                   Foreground="{StaticResource MutedBrush}"
                                                   Margin="0,5,0,0"
                                                   VerticalAlignment="Top"/>
                                        <Button Grid.Row="3"
                                                Content="Browse..."
                                                Style="{StaticResource ActionButtonStyle}"
                                                Background="{StaticResource SecondaryBrush}"/>
                                    </Grid>
                                </Border>

                                <!-- Deploy Card -->
                                <Border Style="{StaticResource CardStyle}" Width="200" Height="180">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="&#x1F680;" FontSize="28" Margin="0,0,0,10"/>
                                        <TextBlock Grid.Row="1" Text="Deploy All"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource ForegroundBrush}"/>
                                        <TextBlock Grid.Row="2" Text="Deploy pending policies to OUs"
                                                   TextWrapping="Wrap"
                                                   FontSize="11"
                                                   Foreground="{StaticResource MutedBrush}"
                                                   Margin="0,5,0,0"
                                                   VerticalAlignment="Top"/>
                                        <Button Grid.Row="3"
                                                Content="Deploy"
                                                Style="{StaticResource ActionButtonStyle}"
                                                Background="{StaticResource SuccessBrush}"/>
                                    </Grid>
                                </Border>
                            </WrapPanel>

                            <!-- Stats Row -->
                            <TextBlock Text="CURRENT STATUS"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource MutedBrush}"
                                       Margin="0,30,0,15"/>

                            <WrapPanel>
                                <!-- Machines Stat -->
                                <Border Style="{StaticResource CardStyle}" Width="150">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock x:Name="StatMachines"
                                                   Text="0"
                                                   FontSize="36"
                                                   FontWeight="Light"
                                                   Foreground="{StaticResource PrimaryBrush}"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Machines"
                                                   FontSize="12"
                                                   Foreground="{StaticResource MutedBrush}"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Artifacts Stat -->
                                <Border Style="{StaticResource CardStyle}" Width="150">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock x:Name="StatArtifacts"
                                                   Text="0"
                                                   FontSize="36"
                                                   FontWeight="Light"
                                                   Foreground="{StaticResource WarningBrush}"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Artifacts"
                                                   FontSize="12"
                                                   Foreground="{StaticResource MutedBrush}"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Rules Stat -->
                                <Border Style="{StaticResource CardStyle}" Width="150">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock x:Name="StatRules"
                                                   Text="0"
                                                   FontSize="36"
                                                   FontWeight="Light"
                                                   Foreground="{StaticResource SuccessBrush}"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Rules"
                                                   FontSize="12"
                                                   Foreground="{StaticResource MutedBrush}"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Policies Stat -->
                                <Border Style="{StaticResource CardStyle}" Width="150">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock x:Name="StatPolicies"
                                                   Text="0"
                                                   FontSize="36"
                                                   FontWeight="Light"
                                                   Foreground="#9C27B0"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Policies"
                                                   FontSize="12"
                                                   Foreground="{StaticResource MutedBrush}"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </WrapPanel>

                            <!-- Recent Activity -->
                            <TextBlock Text="RECENT ACTIVITY"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource MutedBrush}"
                                       Margin="0,30,0,15"/>

                            <Border Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="No recent activity"
                                               Foreground="{StaticResource MutedBrush}"
                                               FontStyle="Italic"/>
                                    <TextBlock Text="Start by running a scan or importing artifacts"
                                               Foreground="{StaticResource MutedBrush}"
                                               FontSize="11"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <!-- AD Discovery Panel -->
                <Grid x:Name="PanelDiscovery" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="AD Discovery" Style="{StaticResource HeaderStyle}"/>

                    <!-- Toolbar -->
                    <Border Grid.Row="1" Background="{StaticResource SidebarBrush}" CornerRadius="6" Padding="15,10" Margin="0,0,0,15">
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                <Button x:Name="BtnRefreshDomain"
                                        Content="&#x1F504; Refresh Domain"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="{StaticResource PrimaryBrush}"
                                        Width="140"
                                        Margin="0,0,10,0"/>
                                <Button x:Name="BtnTestConnectivity"
                                        Content="&#x1F4F6; Test Connectivity"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="{StaticResource SecondaryBrush}"
                                        Width="150"
                                        Margin="0,0,10,0"/>
                            </StackPanel>
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock x:Name="DiscoveryDomainLabel"
                                           Text="Domain: Not connected"
                                           Foreground="{StaticResource MutedBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,15,0"/>
                                <TextBlock x:Name="DiscoveryMachineCount"
                                           Text="0 machines selected"
                                           Foreground="{StaticResource ForegroundBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <!-- Main Content: Split OU Tree and Machine List -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- OU Tree Panel -->
                        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                                    <TextBlock Text="ORGANIZATIONAL UNITS"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource MutedBrush}"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button x:Name="BtnSelectAllOUs"
                                                Content="Select All"
                                                Background="Transparent"
                                                Foreground="{StaticResource PrimaryBrush}"
                                                BorderThickness="0"
                                                Padding="0"
                                                Cursor="Hand"
                                                Margin="0,0,15,0"/>
                                        <Button x:Name="BtnClearOUs"
                                                Content="Clear"
                                                Background="Transparent"
                                                Foreground="{StaticResource MutedBrush}"
                                                BorderThickness="0"
                                                Padding="0"
                                                Cursor="Hand"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- OU TreeView -->
                                <Border Background="#1E1E1E" CornerRadius="4" Padding="5">
                                    <TreeView x:Name="OUTreeView"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Foreground="{StaticResource ForegroundBrush}">
                                        <TreeView.Resources>
                                            <Style TargetType="TreeViewItem">
                                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                <Setter Property="Padding" Value="2"/>
                                            </Style>
                                        </TreeView.Resources>
                                        <!-- TreeView items populated by code-behind -->
                                        <TreeViewItem Header="&#x1F4C1; Loading..." IsExpanded="True" Foreground="{StaticResource MutedBrush}"/>
                                    </TreeView>
                                </Border>
                            </DockPanel>
                        </Border>

                        <!-- Splitter -->
                        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Transparent"/>

                        <!-- Machine List Panel -->
                        <Border Grid.Column="2" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                                    <DockPanel>
                                        <TextBlock Text="DISCOVERED MACHINES"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource MutedBrush}"
                                                   DockPanel.Dock="Left"/>
                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="Filter:"
                                                       Foreground="{StaticResource MutedBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                            <TextBox x:Name="MachineFilterBox"
                                                     Width="150"
                                                     Background="#1E1E1E"
                                                     Foreground="{StaticResource ForegroundBrush}"
                                                     BorderBrush="#3E3E42"
                                                     Padding="8,5"/>
                                        </StackPanel>
                                    </DockPanel>

                                    <!-- Machine Type Filter Buttons -->
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button x:Name="BtnFilterAll" Content="All" Background="#3E3E42" Foreground="White" Padding="12,5" BorderThickness="0" Margin="0,0,5,0"/>
                                        <Button x:Name="BtnFilterWorkstations" Content="&#x1F5A5; Workstations" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="12,5" BorderThickness="0" Margin="0,0,5,0"/>
                                        <Button x:Name="BtnFilterServers" Content="&#x1F5A7; Servers" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="12,5" BorderThickness="0" Margin="0,0,5,0"/>
                                        <Button x:Name="BtnFilterDCs" Content="&#x1F3E2; DCs" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="12,5" BorderThickness="0" Margin="0,0,5,0"/>
                                        <Button x:Name="BtnFilterOnline" Content="&#x1F7E2; Online" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="12,5" BorderThickness="0"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Machine DataGrid -->
                                <Border Background="#1E1E1E" CornerRadius="4" Padding="0" Margin="0,5,0,0">
                                    <DataGrid x:Name="MachineDataGrid"
                                              AutoGenerateColumns="False"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              RowBackground="#252526"
                                              AlternatingRowBackground="#2D2D30"
                                              GridLinesVisibility="None"
                                              HeadersVisibility="Column"
                                              SelectionMode="Extended"
                                              CanUserAddRows="False"
                                              IsReadOnly="True">
                                        <DataGrid.ColumnHeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="Background" Value="#1E1E1E"/>
                                                <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
                                                <Setter Property="Padding" Value="10,8"/>
                                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                <Setter Property="BorderBrush" Value="#3E3E42"/>
                                            </Style>
                                        </DataGrid.ColumnHeaderStyle>
                                        <DataGrid.CellStyle>
                                            <Style TargetType="DataGridCell">
                                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Padding" Value="10,8"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGrid.CellStyle>
                                        <DataGrid.Columns>
                                            <DataGridCheckBoxColumn Width="40"/>
                                            <DataGridTextColumn Header="Status" Width="60" Binding="{Binding StatusIcon}"/>
                                            <DataGridTextColumn Header="Hostname" Width="150" Binding="{Binding Hostname}"/>
                                            <DataGridTextColumn Header="Type" Width="100" Binding="{Binding MachineType}"/>
                                            <DataGridTextColumn Header="Operating System" Width="200" Binding="{Binding OperatingSystem}"/>
                                            <DataGridTextColumn Header="Last Logon" Width="120" Binding="{Binding LastLogon, StringFormat='{}{0:yyyy-MM-dd}'}"/>
                                            <DataGridTextColumn Header="WinRM" Width="80" Binding="{Binding WinRMStatus}"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Border>
                            </DockPanel>
                        </Border>
                    </Grid>
                </Grid>

                <!-- Artifact Scanner Panel (Placeholder) -->
                <Grid x:Name="PanelScanner" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Artifact Scanner" Style="{StaticResource HeaderStyle}"/>
                        <Border Style="{StaticResource CardStyle}">
                            <TextBlock Text="Artifact Scanner panel - Coming in Phase 4"
                                       Foreground="{StaticResource MutedBrush}"
                                       FontStyle="Italic"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Rule Generator Panel (Placeholder) -->
                <Grid x:Name="PanelRules" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Rule Generator" Style="{StaticResource HeaderStyle}"/>
                        <Border Style="{StaticResource CardStyle}">
                            <TextBlock Text="Rule Generator panel - Coming in Phase 5"
                                       Foreground="{StaticResource MutedBrush}"
                                       FontStyle="Italic"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Policy Builder Panel (Placeholder) -->
                <Grid x:Name="PanelPolicy" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Policy Builder" Style="{StaticResource HeaderStyle}"/>
                        <Border Style="{StaticResource CardStyle}">
                            <TextBlock Text="Policy Builder panel - Coming in Phase 6"
                                       Foreground="{StaticResource MutedBrush}"
                                       FontStyle="Italic"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Deployment Panel (Placeholder) -->
                <Grid x:Name="PanelDeploy" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Deployment" Style="{StaticResource HeaderStyle}"/>
                        <Border Style="{StaticResource CardStyle}">
                            <TextBlock Text="Deployment panel - Coming in Phase 6"
                                       Foreground="{StaticResource MutedBrush}"
                                       FontStyle="Italic"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Settings Panel (Placeholder) -->
                <Grid x:Name="PanelSettings" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Settings" Style="{StaticResource HeaderStyle}"/>
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Application Settings"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource ForegroundBrush}"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="Data Directory:"
                                           Foreground="{StaticResource MutedBrush}"
                                           Margin="0,0,0,5"/>
                                <TextBlock x:Name="SettingsDataPath"
                                           Text="%LOCALAPPDATA%\GA-AppLocker"
                                           Foreground="{StaticResource ForegroundBrush}"
                                           Margin="0,0,0,20"/>

                                <TextBlock Text="Version: 1.0.0"
                                           Foreground="{StaticResource MutedBrush}"/>
                                <TextBlock Text="Phase: 1 - Foundation"
                                           Foreground="{StaticResource MutedBrush}"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
