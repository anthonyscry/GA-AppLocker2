                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TabControl.Resources>

                                <!-- Tab 1: Scan -->
                                <TabItem Header="Scan">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel Margin="15">
                                            <Button x:Name="BtnScanLocalSoftware" Content="Scan Local Machine"
                                                    Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,0,5"
                                                    Tag="ScanLocalSoftware"/>
                                            <Button x:Name="BtnScanRemoteSoftware" Content="Scan Remote Machines"
                                                    Style="{StaticResource ButtonStyle}" Margin="0,0,0,10"
                                                    Tag="ScanRemoteSoftware"/>

                                            <!-- Remote Machine Input -->
                                            <TextBlock Text="REMOTE MACHINES" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,5,0,5"/>
                                            <TextBlock Text="Enter hostnames (one per line or comma-separated). Leave empty to use Scanner machine list."
                                                       Foreground="{StaticResource MutedBrush}" FontSize="10" TextWrapping="Wrap" Margin="0,0,0,5"/>
                                            <TextBox x:Name="TxtSoftwareRemoteMachines" Height="80"
                                                     Background="#1E1E1E" Foreground="{StaticResource ForegroundBrush}"
                                                     BorderBrush="#3E3E42" Padding="6,4" FontSize="11"
                                                     AcceptsReturn="True" TextWrapping="Wrap"
                                                     VerticalScrollBarVisibility="Auto"/>
                                            <TextBlock x:Name="TxtSoftwareMachineHint" Text="0 machines"
                                                       Foreground="{StaticResource MutedBrush}" FontSize="10" Margin="0,3,0,0"/>

                                            <!-- Scan Info -->
                                            <Border Background="#252526" CornerRadius="4" Padding="10" Margin="0,10,0,15">
                                                <StackPanel>
                                                    <TextBlock Text="Last Scan:" Foreground="{StaticResource MutedBrush}" FontSize="10"/>
                                                    <TextBlock x:Name="TxtSoftwareLastScan" Text="None" Foreground="{StaticResource ForegroundBrush}" FontSize="11" Margin="0,2,0,5"/>
                                                    <TextBlock Text="Total Software:" Foreground="{StaticResource MutedBrush}" FontSize="10"/>
                                                    <TextBlock x:Name="TxtSoftwareTotalCount" Text="0" Foreground="{StaticResource ForegroundBrush}" FontSize="11" FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Export -->
                                            <TextBlock Text="EXPORT" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>
                                            <Button x:Name="BtnExportSoftwareCsv" Content="Export to CSV"
                                                    Style="{StaticResource ButtonStyle}" Margin="0,0,0,5"
                                                    Tag="ExportSoftwareCsv"/>
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>

                                <!-- Tab 2: Compare -->
                                <TabItem Header="Compare">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel Margin="15">
                                            <TextBlock Text="Compare software inventories across systems by importing two CSVs."
                                                       Foreground="{StaticResource MutedBrush}" FontSize="11" TextWrapping="Wrap" Margin="0,0,0,15"/>

                                            <TextBlock Text="STEP 1: BASELINE" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,8"/>
                                            <Button x:Name="BtnImportBaseline" Content="Import Baseline CSV"
                                                    Style="{StaticResource ButtonStyle}" Margin="0,0,0,10"
                                                    Tag="ImportBaselineCsv"
                                                    ToolTip="Load a CSV as the baseline (left side of comparison)"/>

                                            <TextBlock Text="STEP 2: COMPARISON" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,5,0,8"/>
                                            <Button x:Name="BtnImportComparison" Content="Import Comparison CSV"
                                                    Style="{StaticResource ButtonStyle}" Margin="0,0,0,10"
                                                    Tag="ImportComparisonCsv"
                                                    ToolTip="Load a second CSV to compare against the baseline"/>

                                            <TextBlock Text="STEP 3: COMPARE" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,5,0,8"/>
                                            <Button x:Name="BtnCompareSoftware" Content="Compare Inventories"
                                                    Style="{StaticResource ButtonStyle}" Margin="0,0,0,15"
                                                    Background="#1565C0"
                                                    Tag="CompareSoftware"/>

                                            <!-- Export Results -->
                                            <TextBlock Text="EXPORT RESULTS" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,8"/>
                                            <Button x:Name="BtnExportComparisonCsv" Content="Export Comparison to CSV"
                                                    Style="{StaticResource ButtonStyle}" Margin="0,0,0,15"
                                                    Tag="ExportComparisonCsv"
                                                    ToolTip="Export comparison results (all categories) to a single CSV"/>

                                            <!-- Imported File Info -->
                                            <Border Background="#252526" CornerRadius="4" Padding="10" Margin="0,0,0,15">
                                                <StackPanel>
                                                    <TextBlock Text="Baseline:" Foreground="{StaticResource MutedBrush}" FontSize="10"/>
                                                    <TextBlock x:Name="TxtSoftwareBaselineFile" Text="None (scan or import a CSV on Scan tab)" Foreground="{StaticResource ForegroundBrush}" FontSize="11" TextWrapping="Wrap" Margin="0,2,0,8"/>
                                                    <TextBlock Text="Comparison:" Foreground="{StaticResource MutedBrush}" FontSize="10"/>
                                                    <TextBlock x:Name="TxtSoftwareImportedFile" Text="None" Foreground="{StaticResource ForegroundBrush}" FontSize="11" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </Border>

                                            <Button x:Name="BtnClearComparison" Content="Clear All Data"
                                                    Style="{StaticResource ButtonStyle}" Margin="0,0,0,5"
                                                    Tag="ClearSoftwareComparison"/>
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>
                            </TabControl>
                        </Border>

                        <!-- Right: DataGrid -->
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Filter Bar -->
                            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                        <TextBlock Text="SOFTWARE" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" VerticalAlignment="Center"/>
                                        <TextBlock Text=" - " Foreground="{StaticResource MutedBrush}" VerticalAlignment="Center" FontSize="11"/>
                                        <TextBlock x:Name="TxtSoftwareFilteredCount" Text="0" Foreground="{StaticResource ForegroundBrush}" FontWeight="SemiBold" VerticalAlignment="Center" FontSize="11"/>
                                        <TextBlock Text=" items" Foreground="{StaticResource MutedBrush}" VerticalAlignment="Center" FontSize="11"/>
                                    </StackPanel>
                                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Text="Search:" Foreground="{StaticResource MutedBrush}" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="11"/>
                                        <TextBox x:Name="TxtSoftwareFilter" Width="150" Background="#1E1E1E" Foreground="{StaticResource ForegroundBrush}" BorderBrush="#3E3E42" Padding="6,4" FontSize="11"/>
                                    </StackPanel>
                                </DockPanel>
                                <!-- Source filter buttons (comparison legend) -->
                                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                    <Button x:Name="BtnFilterSoftwareAll" Content="All" Background="#3E3E42" Foreground="White" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0" FontSize="11" Tag="FilterSoftwareAll"/>
                                    <Button x:Name="BtnFilterSoftwareMatch" Content="Match" Background="Transparent" Foreground="#1565C0" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0" FontSize="11" Tag="FilterSoftwareMatch"/>
                                    <Button x:Name="BtnFilterSoftwareVersionDiff" Content="Version Diff" Background="Transparent" Foreground="#E6A100" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0" FontSize="11" Tag="FilterSoftwareVersionDiff"/>
                                    <Button x:Name="BtnFilterSoftwareOnlyScan" Content="Only in Scan" Background="Transparent" Foreground="#4CAF50" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0" FontSize="11" Tag="FilterSoftwareOnlyScan"/>
                                    <Button x:Name="BtnFilterSoftwareOnlyImport" Content="Only in Import" Background="Transparent" Foreground="{StaticResource RejectedBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" FontSize="11" Tag="FilterSoftwareOnlyImport"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- DataGrid -->
                            <DataGrid x:Name="SoftwareDataGrid" Grid.Row="1"
                                      Style="{StaticResource DataGridStyle}"
                                      AutoGenerateColumns="False" IsReadOnly="True"
                                      SelectionMode="Extended">
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Background" Value="#1E1E1E"/>
                                        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Source}" Value="Version Diff">
                                                <Setter Property="Background" Value="#33E6A100"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Source}" Value="Only in Scan">
                                                <Setter Property="Background" Value="#334CAF50"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Source}" Value="Only in Import">
                                                <Setter Property="Background" Value="#33EF5350"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Source}" Value="Match">
                                                <Setter Property="Background" Value="#331565C0"/>
                                            </DataTrigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#0078D4"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2D2D30"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.RowStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Machine" Binding="{Binding Machine}" Width="120"/>
                                    <DataGridTextColumn Header="Name" Binding="{Binding DisplayName}" Width="*" MinWidth="200"/>
                                    <DataGridTextColumn Header="Version" Binding="{Binding DisplayVersion}" Width="110"/>
                                    <DataGridTextColumn Header="Publisher" Binding="{Binding Publisher}" Width="180"/>
                                    <DataGridTextColumn Header="Install Date" Binding="{Binding InstallDate}" Width="90"/>
                                    <DataGridTextColumn Header="Arch" Binding="{Binding Architecture}" Width="55"/>
                                    <DataGridTemplateColumn Header="Source" Width="100" SortMemberPath="Source">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="3" Padding="5,2" HorizontalAlignment="Center">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="Transparent"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Source}" Value="Version Diff">
                                                                    <Setter Property="Background" Value="#E65100"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Source}" Value="Only in Scan">
                                                                    <Setter Property="Background" Value="#1B5E20"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Source}" Value="Only in Import">
                                                                    <Setter Property="Background" Value="#8B0000"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Source}" Value="Match">
                                                                    <Setter Property="Background" Value="#1565C0"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding Source}" Foreground="White" FontSize="10"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>

                    <!-- Status Bar -->
                    <Border Grid.Row="2" Background="{StaticResource SidebarBrush}" CornerRadius="4" Padding="15,10" Margin="0,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="TxtSoftwareStatus" Grid.Column="0"
                                       Text="Ready - scan local machine or import a CSV to get started."
                                       Foreground="{StaticResource MutedBrush}" FontSize="11"
                                       VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock x:Name="TxtSoftwareMachineCount" Text="0" 
                                           Foreground="{StaticResource ForegroundBrush}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <TextBlock Text=" machine(s)" Foreground="{StaticResource MutedBrush}" FontSize="11" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

            </Grid>
        </Border>

        <!-- Toast Notification Container (Overlay) -->
        <Border x:Name="ToastContainer"
                Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,30,30"
                IsHitTestVisible="False">
            <StackPanel x:Name="ToastStack" Width="350">
                <!-- Toast items will be added here dynamically -->
            </StackPanel>
        </Border>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay"
              Grid.ColumnSpan="2"
              Background="#AA000000"
              Visibility="Collapsed">
            <Border Background="{StaticResource SidebarBrush}"
                    CornerRadius="12"
                    Padding="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MinWidth="200">
                <StackPanel HorizontalAlignment="Center">
                    <!-- Spinner with pulsing animation -->
                    <Border x:Name="LoadingSpinner"
                            Width="50" Height="50"
                            CornerRadius="25"
                            BorderBrush="{StaticResource PrimaryBrush}"
                            BorderThickness="4"
                            Margin="0,0,0,15"
                            HorizontalAlignment="Center">
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Border.Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation 
                                            Storyboard.TargetProperty="Opacity"
                                            From="1" To="0.3" 
                                            Duration="0:0:0.5"
                                            AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                        <TextBlock Text="..." 
                                   FontSize="20" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock x:Name="LoadingText"
                               Text="Loading..."
                               Foreground="{StaticResource ForegroundBrush}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="LoadingSubText"
                               Text=""
                               Foreground="{StaticResource MutedBrush}"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
