<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="GA-AppLocker Dashboard"
Height="1000"
Width="1450"
    MinHeight="600"
    MinWidth="900"
    WindowStartupLocation="CenterScreen"
    Background="#000000">

    <Window.Resources>
        <!-- Color Palette - Maximum Contrast Dark Theme -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#106EBE"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#000000"/>
        <SolidColorBrush x:Key="SidebarBrush" Color="#121212"/>
        <SolidColorBrush x:Key="ContentBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="MutedBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#555555"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#107C10"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FF8C00"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#D13438"/>
        <!-- Additional UI Brushes -->
        <SolidColorBrush x:Key="HoverBrush" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="PendingBrush" Color="#FF8C00"/>
        <SolidColorBrush x:Key="ApprovedBrush" Color="#107C10"/>
        <SolidColorBrush x:Key="ActiveBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="ArchivedBrush" Color="#90A4AE"/>
        <SolidColorBrush x:Key="RejectedBrush" Color="#D13438"/>
        <SolidColorBrush x:Key="PurpleBrush" Color="#8764B8"/>

        <!-- Toggle Switch Style (Dashboard toggles) -->
        <Style x:Key="ToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid Width="46" Height="24">
                            <Border x:Name="SwitchTrack" CornerRadius="12" Background="#666666"/>
                            <Ellipse x:Name="SwitchThumb" Width="20" Height="20" Fill="White" Margin="2" HorizontalAlignment="Left"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchTrack" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="SwitchThumb" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333337"/>
                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Background" Value="#333337"/>
                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Active">
                                <Setter Property="Background" Value="#333337"/>
                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FocusVisualStyle">
                <Setter.Value>
                    <Style>
                        <Setter Property="Control.Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <Rectangle Margin="2" StrokeThickness="1" 
                                               Stroke="{StaticResource PrimaryBrush}" 
                                               StrokeDashArray="1 2"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SidebarBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,15,15"/>
        </Style>

        <!-- Action Button Style (for Quick Action cards) -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="CaretBrush" Value="{StaticResource ForegroundBrush}"/>
        </Style>

        <!-- ComboBox Toggle Button Template -->
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="Border" Grid.ColumnSpan="2" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1" CornerRadius="3"/>
                <Path x:Name="Arrow" Grid.Column="1" Fill="#FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M0,0 L4,4 L8,0 Z"/>
            </Grid>
        </ControlTemplate>

        <!-- ComboBox Style -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="#2D2D30"/>
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="Bd" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#0078D4"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#0078D4"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" Template="{StaticResource ComboBoxToggleButton}" 
                                          Focusable="False" IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" 
                                          ClickMode="Press"/>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False" 
                                              Content="{TemplateBinding SelectionBoxItem}" 
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              Margin="10,6,25,6" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" 
                                   AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid x:Name="DropDown" SnapsToDevicePixels="True" 
                                      MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1"/>
                                    <ScrollViewer Margin="2" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Dark TabControl Style -->
        <Style x:Key="DarkTabControl" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        
        <Style x:Key="DarkTabItem" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                BorderThickness="0,0,0,2" BorderBrush="Transparent" Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="ContentSite" ContentSource="Header" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4E4E52"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2E2E32"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#3E3E42"/>
            <Setter Property="RowBackground" Value="#1E1E1E"/>
            <Setter Property="AlternatingRowBackground" Value="#252526"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
            <Setter Property="CanUserReorderColumns" Value="True"/>
            <Setter Property="VirtualizingStackPanel.IsVirtualizing" Value="True"/>
            <Setter Property="VirtualizingStackPanel.VirtualizationMode" Value="Recycling"/>
            <Setter Property="EnableRowVirtualization" Value="True"/>
            <Setter Property="ScrollViewer.IsDeferredScrollingEnabled" Value="True"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#2D2D30"/>
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="BorderBrush" Value="#3E3E42"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="8,4"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#0078D4"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Spinner Animation Style -->
        <Style x:Key="SpinnerStyle" TargetType="Border">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <RotateTransform Angle="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toast Container Style -->
        <Style x:Key="ToastStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border x:Name="SidebarBorder" Grid.Column="0" Background="{StaticResource SidebarBrush}">
            <DockPanel>
                <!-- App Header with Collapse Button -->
                <Grid DockPanel.Dock="Top" Margin="15,20,15,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" x:Name="SidebarHeader">
                        <TextBlock x:Name="SidebarTitle" Text="GA-AppLocker"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource ForegroundBrush}"/>
                        <TextBlock x:Name="SidebarSubtitle" Text="Dashboard v1.2.39"
                                   FontSize="11"
                                   Foreground="{StaticResource MutedBrush}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                    <Button x:Name="BtnCollapseSidebar" Grid.Column="1" 
                            Content="&lt;&lt;" FontSize="12"
                            Background="Transparent" Foreground="{StaticResource MutedBrush}"
                            BorderThickness="0" Padding="5" Cursor="Hand"
                            VerticalAlignment="Top" ToolTip="Collapse Sidebar"/>
                </Grid>

                <!-- Navigation Buttons -->
                <StackPanel DockPanel.Dock="Top" x:Name="NavButtonsPanel">
                    <Button x:Name="NavDashboard"
                            Style="{StaticResource NavButtonStyle}"
                            AutomationProperties.Name="Dashboard"
                            Tag="Active">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F4CA;" FontSize="16" Width="24"/>
                            <TextBlock x:Name="NavDashboardText" Text="Dashboard" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="NavDiscovery"
                            Style="{StaticResource NavButtonStyle}"
                            AutomationProperties.Name="AD Discovery">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F50D;" FontSize="16" Width="24"/>
                            <TextBlock x:Name="NavDiscoveryText" Text="AD Discovery" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="NavScanner"
                            Style="{StaticResource NavButtonStyle}"
                            AutomationProperties.Name="Artifact Scanner">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F4C1;" FontSize="16" Width="24"/>
                            <TextBlock x:Name="NavScannerText" Text="Artifact Scanner" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="NavRules"
                            Style="{StaticResource NavButtonStyle}"
                            AutomationProperties.Name="Rule Generator">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F4DD;" FontSize="16" Width="24"/>
                            <TextBlock x:Name="NavRulesText" Text="Rule Generator" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="NavPolicy"
                            Style="{StaticResource NavButtonStyle}"
                            AutomationProperties.Name="Policy Builder">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F4CB;" FontSize="16" Width="24"/>
                            <TextBlock x:Name="NavPolicyText" Text="Policy Builder" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="NavDeploy"
                            Style="{StaticResource NavButtonStyle}"
                            AutomationProperties.Name="Deployment">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F680;" FontSize="16" Width="24"/>
                            <TextBlock x:Name="NavDeployText" Text="Deployment" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Separator x:Name="NavSeparator" Margin="15,20" Background="#3E3E42"/>

                    <Button x:Name="NavSoftware"
                            Style="{StaticResource NavButtonStyle}"
                            AutomationProperties.Name="Software Inventory">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F4CB;" FontSize="16" Width="24"/>
                            <TextBlock x:Name="NavSoftwareText" Text="Software Inventory" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="NavSettings"
                            Style="{StaticResource NavButtonStyle}"
                            AutomationProperties.Name="Settings">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x2699;" FontSize="16" Width="24"/>
                            <TextBlock x:Name="NavSettingsText" Text="Settings" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="NavSetup"
                            Style="{StaticResource NavButtonStyle}"
                            AutomationProperties.Name="Setup">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F527;" FontSize="16" Width="24"/>
                            <TextBlock x:Name="NavSetupText" Text="Setup" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="NavAbout"
                            Style="{StaticResource NavButtonStyle}"
                            AutomationProperties.Name="About">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x2139;" FontSize="16" Width="24"/>
                            <TextBlock x:Name="NavAboutText" Text="About" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Workflow Progress Indicator -->
                <Border x:Name="WorkflowBreadcrumb" DockPanel.Dock="Top" 
                        Background="#1A1A1A" CornerRadius="6" 
                        Margin="10,20,10,0" Padding="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Title -->
                        <TextBlock Grid.Row="0" Text="WORKFLOW PROGRESS" 
                                   FontSize="9" FontWeight="SemiBold"
                                   Foreground="{StaticResource MutedBrush}" 
                                   Margin="0,0,0,8"/>
                        
                        <!-- Progress Steps -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Stage 1: Discovery -->
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <Ellipse x:Name="StageDiscovery" Width="16" Height="16" 
                                         Fill="#555555" Stroke="#777777" StrokeThickness="1"/>
                                <TextBlock x:Name="StageDiscoveryCount" Text="0" 
                                           FontSize="9" Foreground="{StaticResource MutedBrush}" 
                                           HorizontalAlignment="Center" Margin="0,3,0,0"/>
                                <TextBlock Text="Disc" FontSize="8" 
                                           Foreground="#888888" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Stage 2: Scanner -->
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <Ellipse x:Name="StageScanner" Width="16" Height="16" 
                                         Fill="#555555" Stroke="#777777" StrokeThickness="1"/>
                                <TextBlock x:Name="StageScannerCount" Text="0" 
                                           FontSize="9" Foreground="{StaticResource MutedBrush}" 
                                           HorizontalAlignment="Center" Margin="0,3,0,0"/>
                                <TextBlock Text="Scan" FontSize="8" 
                                           Foreground="#888888" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Stage 3: Rules -->
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <Ellipse x:Name="StageRules" Width="16" Height="16" 
                                         Fill="#555555" Stroke="#777777" StrokeThickness="1"/>
                                <TextBlock x:Name="StageRulesCount" Text="0" 
                                           FontSize="9" Foreground="{StaticResource MutedBrush}" 
                                           HorizontalAlignment="Center" Margin="0,3,0,0"/>
                                <TextBlock Text="Rules" FontSize="8" 
                                           Foreground="#888888" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Stage 4: Policy -->
                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <Ellipse x:Name="StagePolicy" Width="16" Height="16" 
                                         Fill="#555555" Stroke="#777777" StrokeThickness="1"/>
                                <TextBlock x:Name="StagePolicyCount" Text="0" 
                                           FontSize="9" Foreground="{StaticResource MutedBrush}" 
                                           HorizontalAlignment="Center" Margin="0,3,0,0"/>
                                <TextBlock Text="Policy" FontSize="8" 
                                           Foreground="#888888" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Footer -->
                <StackPanel x:Name="SidebarFooter" DockPanel.Dock="Bottom" Margin="15,0,15,15" VerticalAlignment="Bottom">
                    <Border Background="{StaticResource HoverBrush}" CornerRadius="6" Padding="10">
                        <StackPanel>
                            <TextBlock x:Name="StatusText"
                                       Text="Ready"
                                       FontSize="11"
                                       Foreground="{StaticResource SuccessBrush}"/>
                            <TextBlock x:Name="DomainText"
                                       Text="Domain: Loading..."
                                       FontSize="10"
                                       Foreground="{StaticResource MutedBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Background="{StaticResource BackgroundBrush}" Padding="30">
            <Grid x:Name="ContentArea">
                <!-- Dashboard Panel (Default) -->
                <Grid x:Name="PanelDashboard" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Row 0: Header with System Info -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Dashboard" Style="{StaticResource HeaderStyle}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock Text="Domain:" Foreground="{StaticResource MutedBrush}" Margin="0,0,5,0"/>
                            <TextBlock x:Name="SysInfoDomain" Text="Loading..." Foreground="{StaticResource ForegroundBrush}" Margin="0,0,20,0"/>
                            <TextBlock Text="User:" Foreground="{StaticResource MutedBrush}" Margin="0,0,5,0"/>
                            <TextBlock x:Name="SysInfoUser" Text="Loading..." Foreground="{StaticResource ForegroundBrush}"/>
                        </StackPanel>
                        <TextBlock x:Name="SysInfoComputer" Visibility="Collapsed"/>
                        <TextBlock x:Name="SysInfoDataPath" Visibility="Collapsed"/>
                    </Grid>
                    
                    <!-- Row 1: Stats Row - 5 cards across -->
                    <Grid Grid.Row="1" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="120"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*" MinWidth="120"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*" MinWidth="120"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*" MinWidth="120"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*" MinWidth="120"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Machines -->
                        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="StatMachines" Text="0" FontSize="32" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Machines" FontSize="12" Foreground="{StaticResource MutedBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Artifacts -->
                        <Border Grid.Column="2" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="StatArtifacts" Text="0" FontSize="32" FontWeight="Bold" Foreground="{StaticResource WarningBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Artifacts" FontSize="12" Foreground="{StaticResource MutedBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Rules -->
                        <Border Grid.Column="4" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="StatRules" Text="0" FontSize="32" FontWeight="Bold" Foreground="{StaticResource SuccessBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Rules" FontSize="12" Foreground="{StaticResource MutedBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Pending Approval -->
                        <Border Grid.Column="6" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="StatPending" Text="0" FontSize="32" FontWeight="Bold" Foreground="{StaticResource PendingBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Pending" FontSize="12" Foreground="{StaticResource MutedBrush}" HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                                    <TextBlock x:Name="StatApproved" Text="0" FontSize="10" Foreground="{StaticResource SuccessBrush}"/>
                                    <TextBlock Text="&#x2714;" FontSize="9" Foreground="{StaticResource SuccessBrush}" Margin="2,0,6,0"/>
                                    <TextBlock x:Name="StatRejected" Text="0" FontSize="10" Foreground="{StaticResource ErrorBrush}"/>
                                    <TextBlock Text="&#x2718;" FontSize="9" Foreground="{StaticResource ErrorBrush}" Margin="2,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Policies -->
                        <Border Grid.Column="8" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock x:Name="StatPolicies" Text="0" FontSize="32" FontWeight="Bold" Foreground="{StaticResource PurpleBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Policies" FontSize="12" Foreground="{StaticResource MutedBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- Row 2: Main Content - 3 columns -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="200"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*" MinWidth="200"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*" MinWidth="220"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Column 1: Recent Scans -->
                        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="RECENT SCANS" FontSize="11" FontWeight="SemiBold" 
                                           Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>
                                
                                <ListBox x:Name="DashRecentScans" Grid.Row="1" 
                                         Background="Transparent" BorderThickness="0"
                                         Foreground="{StaticResource ForegroundBrush}"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         HorizontalContentAlignment="Stretch">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Setter Property="Padding" Value="0"/>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource ContentBrush}" CornerRadius="4" Padding="10,8" Margin="0,0,0,5">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding Name}" Foreground="{StaticResource ForegroundBrush}" FontWeight="SemiBold"/>
                                                        <TextBlock Text="{Binding Date}" Foreground="{StaticResource MutedBrush}" FontSize="11"/>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="1" Text="{Binding Count}" Foreground="{StaticResource PrimaryBrush}" 
                                                               FontWeight="Bold" VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                
                                <Button x:Name="BtnDashGoToScanner" Grid.Row="2" Content="Go to Scanner" 
                                        Style="{StaticResource ActionButtonStyle}" Background="{StaticResource PrimaryBrush}"
                                        HorizontalAlignment="Stretch" Margin="0,10,0,0"/>
                            </Grid>
                        </Border>
                        
                        <!-- Column 2: Pending Rules -->
                        <Border Grid.Column="2" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="PENDING APPROVAL" FontSize="11" FontWeight="SemiBold" 
                                           Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>
                                
                                <ListBox x:Name="DashPendingRules" Grid.Row="1" 
                                         Background="Transparent" BorderThickness="0"
                                         Foreground="{StaticResource ForegroundBrush}"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         HorizontalContentAlignment="Stretch">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Setter Property="Padding" Value="0"/>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource ContentBrush}" CornerRadius="4" Padding="10,8" Margin="0,0,0,5">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Column="0" Background="{StaticResource PendingBrush}" CornerRadius="3" Padding="5,2" Margin="0,0,8,0">
                                                        <TextBlock Text="{Binding Type}" Foreground="White" FontSize="10"/>
                                                    </Border>
                                                    <TextBlock Grid.Column="1" Text="{Binding Name}" Foreground="{StaticResource ForegroundBrush}" 
                                                               TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                
                                <Button x:Name="BtnDashGoToRules" Grid.Row="2" Content="Review Rules" 
                                        Style="{StaticResource ActionButtonStyle}" Background="{StaticResource PendingBrush}"
                                        HorizontalAlignment="Stretch" Margin="0,10,0,0"/>
                            </Grid>
                        </Border>
                        
                        <!-- Column 3: Quick Actions + Status -->
                        <StackPanel Grid.Column="4">
                            <!-- Getting Started -->
                            <Border Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="GETTING STARTED" FontSize="11" FontWeight="SemiBold" 
                                               Foreground="{StaticResource MutedBrush}" Margin="0,0,0,15"/>
                                    
                                    <Button x:Name="BtnGettingStarted1" Tag="NavDiscovery"
                                            HorizontalAlignment="Stretch" Margin="0,0,0,8" Padding="10,8"
                                            Background="Transparent" BorderThickness="0" Cursor="Hand"
                                            HorizontalContentAlignment="Stretch">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="24"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="1." Grid.Column="0" Foreground="{StaticResource PrimaryBrush}" FontWeight="Bold"/>
                                            <TextBlock Text="Discover machines in AD" Grid.Column="1" Foreground="{StaticResource ForegroundBrush}" TextWrapping="Wrap"/>
                                        </Grid>
                                    </Button>
                                    
                                    <Button x:Name="BtnGettingStarted2" Tag="NavScanner"
                                            HorizontalAlignment="Stretch" Margin="0,0,0,8" Padding="10,8"
                                            Background="Transparent" BorderThickness="0" Cursor="Hand"
                                            HorizontalContentAlignment="Stretch">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="24"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="2." Grid.Column="0" Foreground="{StaticResource PrimaryBrush}" FontWeight="Bold"/>
                                            <TextBlock Text="Scan for software" Grid.Column="1" Foreground="{StaticResource ForegroundBrush}" TextWrapping="Wrap"/>
                                        </Grid>
                                    </Button>
                                    
                                    <Button x:Name="BtnGettingStarted3" Tag="NavRules"
                                            HorizontalAlignment="Stretch" Margin="0,0,0,8" Padding="10,8"
                                            Background="Transparent" BorderThickness="0" Cursor="Hand"
                                            HorizontalContentAlignment="Stretch">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="24"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="3." Grid.Column="0" Foreground="{StaticResource PrimaryBrush}" FontWeight="Bold"/>
                                            <TextBlock Text="Generate rules" Grid.Column="1" Foreground="{StaticResource ForegroundBrush}" TextWrapping="Wrap"/>
                                        </Grid>
                                    </Button>
                                    
                                    <Button x:Name="BtnGettingStarted4" Tag="NavPolicy"
                                            HorizontalAlignment="Stretch" Margin="0,0,0,8" Padding="10,8"
                                            Background="Transparent" BorderThickness="0" Cursor="Hand"
                                            HorizontalContentAlignment="Stretch">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="24"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="4." Grid.Column="0" Foreground="{StaticResource PrimaryBrush}" FontWeight="Bold"/>
                                            <TextBlock Text="Build policies" Grid.Column="1" Foreground="{StaticResource ForegroundBrush}" TextWrapping="Wrap"/>
                                        </Grid>
                                    </Button>
                                    
                                    <Button x:Name="BtnGettingStarted5" Tag="NavDeploy"
                                            HorizontalAlignment="Stretch" Margin="0,0,0,8" Padding="10,8"
                                            Background="Transparent" BorderThickness="0" Cursor="Hand"
                                            HorizontalContentAlignment="Stretch">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="24"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="5." Grid.Column="0" Foreground="{StaticResource PrimaryBrush}" FontWeight="Bold"/>
                                            <TextBlock Text="Deploy to GPO" Grid.Column="1" Foreground="{StaticResource ForegroundBrush}" TextWrapping="Wrap"/>
                                        </Grid>
                                    </Button>
                                </StackPanel>
                            </Border>

                            <!-- Deployment Module Status -->
                            <Border Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="DEPLOYMENT STATUS" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,15"/>

                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="GroupPolicy Module:" Foreground="{StaticResource ForegroundBrush}"/>
                                        <TextBlock x:Name="TxtGPModuleStatus" Grid.Column="1" Text="Checking..." 
                                                   Foreground="{StaticResource MutedBrush}" HorizontalAlignment="Right"/>
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="AppLocker Module:" Foreground="{StaticResource ForegroundBrush}"/>
                                        <TextBlock x:Name="TxtALModuleStatus" Grid.Column="1" Text="Checking..." 
                                                   Foreground="{StaticResource MutedBrush}" HorizontalAlignment="Right"/>
                                    </Grid>

                                </StackPanel>
                            </Border>

                            <!-- GPO Toggle -->
                            <Border Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="GPO TOGGLE" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>
                                    <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock x:Name="TxtDashEnableWinRMLabel" Grid.Row="0" Grid.Column="0" Text="Enable WinRM" Foreground="{StaticResource ForegroundBrush}" FontSize="11" VerticalAlignment="Center" Margin="0,0,0,8"/>
                                            <ToggleButton x:Name="BtnDashToggleEnableWinRM" Grid.Row="0" Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" Tag="ToggleEnableWinRM" Margin="0,0,0,8" IsEnabled="False"/>

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="GPO: DC" Foreground="{StaticResource ForegroundBrush}" FontSize="11" VerticalAlignment="Center" Margin="0,0,0,8"/>
                                            <ToggleButton x:Name="BtnDashToggleGpoDC" Grid.Row="1" Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" Tag="ToggleGpoLinkDC" Margin="0,0,0,8" IsEnabled="False"/>

                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="GPO: Servers" Foreground="{StaticResource ForegroundBrush}" FontSize="11" VerticalAlignment="Center" Margin="0,0,0,8"/>
                                            <ToggleButton x:Name="BtnDashToggleGpoServers" Grid.Row="2" Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" Tag="ToggleGpoLinkServers" Margin="0,0,0,8" IsEnabled="False"/>

                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="GPO: Workstations" Foreground="{StaticResource ForegroundBrush}" FontSize="11" VerticalAlignment="Center"/>
                                            <ToggleButton x:Name="BtnDashToggleGpoWks" Grid.Row="3" Grid.Column="1" Style="{StaticResource ToggleSwitchStyle}" Tag="ToggleGpoLinkWks" Margin="0,2,0,0" IsEnabled="False"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- AD Discovery Panel -->
                <Grid x:Name="PanelDiscovery" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="AD Discovery" Style="{StaticResource HeaderStyle}"/>

                    <!-- Toolbar -->
                    <Border Grid.Row="1" Background="{StaticResource SidebarBrush}" CornerRadius="6" Padding="15,10" Margin="0,0,0,15">
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                <Button x:Name="BtnRefreshDomain"
                                        Content="&#x1F504; Refresh Domain"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="{StaticResource PrimaryBrush}"
                                        MinWidth="140"
                                        Margin="0,0,10,0"/>
                                <Button x:Name="BtnTestConnectivity"
                                        Content="&#x1F4F6; Test Connectivity"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="{StaticResource SecondaryBrush}"
                                        MinWidth="150"
                                        Margin="0,0,10,0"/>
                            </StackPanel>
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock x:Name="DiscoveryDomainLabel"
                                           Text="Domain: Not connected"
                                           Foreground="{StaticResource MutedBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,15,0"/>
                                <TextBlock x:Name="DiscoveryMachineCount"
                                           Text="0 machines selected"
                                           Foreground="{StaticResource ForegroundBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <!-- Main Content: Split OU Tree and Machine List -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- OU Tree Panel -->
                        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                                    <TextBlock Text="ORGANIZATIONAL UNITS"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource MutedBrush}"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button x:Name="BtnSelectAllOUs"
                                                Content="Select All"
                                                Background="Transparent"
                                                Foreground="{StaticResource PrimaryBrush}"
                                                BorderThickness="0"
                                                Padding="0"
                                                Cursor="Hand"
                                                Margin="0,0,15,0"/>
                                        <Button x:Name="BtnClearOUs"
                                                Content="Clear"
                                                Background="Transparent"
                                                Foreground="{StaticResource MutedBrush}"
                                                BorderThickness="0"
                                                Padding="0"
                                                Cursor="Hand"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- OU TreeView -->
                                <Border Background="#1E1E1E" CornerRadius="4" Padding="5">
                                    <TreeView x:Name="OUTreeView"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              Foreground="{StaticResource ForegroundBrush}">
                                        <TreeView.Resources>
                                            <!-- Override system highlight colors so selected items stay readable on dark theme -->
                                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#0078D4"/>
                                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White"/>
                                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#3E3E42"/>
                                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="#E0E0E0"/>
                                            <Style TargetType="TreeViewItem">
                                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                <Setter Property="Padding" Value="2"/>
                                            </Style>
                                        </TreeView.Resources>
                                        <!-- TreeView items populated by code-behind -->
                                        <TreeViewItem Header="&#x1F4C1; Loading..." IsExpanded="True" Foreground="{StaticResource MutedBrush}"/>
                                    </TreeView>
                                </Border>
                            </DockPanel>
                        </Border>

                        <!-- Machine List Panel -->
                        <Border Grid.Column="1" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                                    <DockPanel>
                                        <TextBlock Text="DISCOVERED MACHINES"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource MutedBrush}"
                                                   DockPanel.Dock="Left"/>
                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="Filter:"
                                                       Foreground="{StaticResource MutedBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0"/>
                                            <TextBox x:Name="MachineFilterBox"
                                                     Width="150"
                                                     Background="#1E1E1E"
                                                     Foreground="{StaticResource ForegroundBrush}"
                                                     BorderBrush="#3E3E42"
                                                     Padding="8,5"/>
                                        </StackPanel>
                                    </DockPanel>

                                    <!-- Machine Type Filter Buttons -->
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button x:Name="BtnFilterAll" Content="All" Background="#3E3E42" Foreground="White" Padding="10,4" BorderThickness="0" Margin="0,0,4,0" FontSize="11" Cursor="Hand"/>
                                        <Button x:Name="BtnFilterWorkstations" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="10,4" BorderThickness="0" Margin="0,0,4,0" FontSize="11" Cursor="Hand">
                                            <TextBlock>
                                                <Run Text="&#x1F5A5; " Foreground="{StaticResource PrimaryBrush}"/>
                                                <Run Text="Workstations"/>
                                            </TextBlock>
                                        </Button>
                                        <Button x:Name="BtnFilterServers" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="10,4" BorderThickness="0" Margin="0,0,4,0" FontSize="11" Cursor="Hand">
                                            <TextBlock>
                                                <Run Text="&#x1F5A7; " Foreground="{StaticResource WarningBrush}"/>
                                                <Run Text="Servers"/>
                                            </TextBlock>
                                        </Button>
                                        <Button x:Name="BtnFilterDCs" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="10,4" BorderThickness="0" Margin="0,0,4,0" FontSize="11" Cursor="Hand">
                                            <TextBlock>
                                                <Run Text="&#x1F3E2; " Foreground="#9C27B0"/>
                                                <Run Text="DCs"/>
                                            </TextBlock>
                                        </Button>
                                        <Button x:Name="BtnFilterOnline" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="10,4" BorderThickness="0" FontSize="11" Cursor="Hand">
                                            <TextBlock>
                                                <Run Text="&#x1F7E2; " Foreground="{StaticResource SuccessBrush}"/>
                                                <Run Text="Online"/>
                                            </TextBlock>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Machine DataGrid -->
                                <Border Background="#1E1E1E" CornerRadius="4" Padding="0" Margin="0,5,0,0">
                                    <DataGrid x:Name="MachineDataGrid"
                                              Style="{StaticResource DataGridStyle}"
                                              AutoGenerateColumns="False"
                                              SelectionMode="Extended"
                                              CanUserAddRows="False"
                                              CanUserDeleteRows="False">
                                        <DataGrid.CellStyle>
                                            <Style TargetType="DataGridCell">
                                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Padding" Value="10,8"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGrid.CellStyle>
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Status" Width="50" Binding="{Binding StatusIcon}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Type" Width="80" Binding="{Binding MachineType}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Hostname" Width="160" Binding="{Binding Hostname}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Operating System" Width="*" Binding="{Binding OperatingSystem}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Last Logon" Width="100" Binding="{Binding LastLogon, StringFormat='{}{0:yyyy-MM-dd}'}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="WinRM" Width="70" Binding="{Binding WinRMStatus}" IsReadOnly="True"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Border>
                            </DockPanel>
                        </Border>
                    </Grid>
                </Grid>

                <!-- Artifact Scanner Panel -->
                <Grid x:Name="PanelScanner" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="Artifact Scanner" Style="{StaticResource HeaderStyle}"/>

                    <!-- Toolbar -->
                    <Border Grid.Row="1" Background="{StaticResource SidebarBrush}" CornerRadius="6" Padding="15,10" Margin="0,0,0,15">
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                <Button x:Name="BtnStartScan"
                                        Content="&#x25B6; Start Scan"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="{StaticResource SuccessBrush}"
                                        MinWidth="130"
                                        Margin="0,0,10,0"/>
                                <Button x:Name="BtnStopScan"
                                        Content="&#x25A0; Stop"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="{StaticResource ErrorBrush}"
                                        MinWidth="130"
                                        Margin="0,0,10,0"
                                        IsEnabled="False"/>
                            </StackPanel>
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="BtnImportArtifacts"
                                        Content="Import"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="{StaticResource SecondaryBrush}"
                                        MinWidth="100"
                                        Margin="0,0,10,0"/>
                                <Button x:Name="BtnExportArtifacts"
                                        Content="Export"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Background="{StaticResource PrimaryBrush}"
                                        MinWidth="100"
                                        Margin="0,0,10,0"/>
                                <Rectangle Width="1" Fill="{StaticResource BorderBrush}" Margin="10,0,15,0"/>
                                <TextBlock x:Name="ScanStatusLabel"
                                           Text="Ready"
                                           Foreground="{StaticResource SuccessBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,15,0"/>
                                <TextBlock x:Name="ScanArtifactCount"
                                           Text="0 artifacts"
                                           Foreground="{StaticResource ForegroundBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <!-- Main Content: Tabbed Configuration + Results -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Tabbed Configuration -->
                        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Margin="0,0,10,0" VerticalAlignment="Stretch">
                            <TabControl Background="Transparent" BorderThickness="0" Padding="0" VerticalAlignment="Stretch">
                                <TabControl.Resources>
                                    <Style TargetType="TabItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
                                        <Setter Property="Padding" Value="12,8"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TabItem">
                                                    <Border x:Name="border" Background="Transparent" Padding="{TemplateBinding Padding}" BorderThickness="0,0,0,2" BorderBrush="Transparent">
                                                        <ContentPresenter ContentSource="Header"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                                            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TabControl.Resources>
                                
                                <!-- Tab 1: Configuration -->
                                <TabItem Header="Config">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel Margin="15">
                                            <!-- Scan Type -->
                                            <TextBlock Text="SCAN OPTIONS" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>
                                            <CheckBox x:Name="ChkScanLocal" Content="Scan Local Machine" Foreground="{StaticResource ForegroundBrush}" IsChecked="True" Margin="0,0,0,6"/>
                                            <CheckBox x:Name="ChkScanRemote" Content="Scan Remote Machines" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,6"/>
                                            <CheckBox x:Name="ChkIncludeAppx" Content="Include Appx/MSIX Packages" 
                                                      Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,6" IsChecked="True"
                                                      ToolTip="Enumerate installed Windows App packages (UWP/MSIX)"/>
                                            <CheckBox x:Name="ChkIncludeEventLogs" Content="Include Event Logs" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,6"/>
                                            <CheckBox x:Name="ChkIncludeHighRisk" Content="Include High Risk Paths" 
                                                      Foreground="{StaticResource WarningBrush}" Margin="0,0,0,6"
                                                      ToolTip="Adds Downloads, Desktop, Temp folders to scan"/>
                                            <TextBlock Text="PERFORMANCE FILTERS" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,10,0,6"/>
                                            <CheckBox x:Name="ChkSkipDllScanning" Content="Skip DLLs (60-70% faster scans)" 
                                                      Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,6" IsChecked="True"
                                                      ToolTip="Skip .dll files during scanning. Most environments don't use DLL rules. Dramatically reduces scan time."/>
                                            <CheckBox x:Name="ChkSkipWshScanning" Content="Skip WSH Scripts (.js, .vbs, .wsf)" 
                                                      Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,6" IsChecked="True"
                                                      ToolTip="Skip legacy Windows Script Host files. These are common malware vectors with no modern enterprise use."/>
                                            <CheckBox x:Name="ChkSkipShellScanning" Content="Skip Shell Scripts (.ps1, .bat, .cmd)" 
                                                      Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,6"
                                                      ToolTip="Skip PowerShell and batch scripts. Disable this if you need Script rules for admin tools, login scripts, etc."/>
                                            
                                            <!-- Scan Paths -->
                                            <TextBlock Text="SCAN PATHS" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,10,0,5"/>
                                            <TextBlock Text="One path per line. These directories will be scanned for artifacts."
                                                       Foreground="{StaticResource MutedBrush}" FontSize="10" TextWrapping="Wrap" Margin="0,0,0,5"/>
                                            <TextBox x:Name="TxtScanPaths" Height="100"
                                                     Background="#1E1E1E" Foreground="{StaticResource ForegroundBrush}"
                                                     BorderBrush="#3E3E42" Padding="6,4" FontSize="11" FontFamily="Consolas"
                                                     AcceptsReturn="True" TextWrapping="NoWrap"
                                                     VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>

                                            <!-- Remote Machines (only shown when Remote scan checked) -->
                                            <StackPanel x:Name="ScanMachinesSection" Margin="0,12,0,0" Visibility="Collapsed">
                                                <TextBlock Text="REMOTE MACHINES" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,6"/>
                                                <TextBlock Text="Only machines with WinRM Available can be selected." Foreground="{StaticResource MutedBrush}" FontSize="10" TextWrapping="Wrap" Margin="0,0,0,6"/>
                                                <TextBlock x:Name="TxtWinRMAvailableCount" Text="WinRM available: 0" Foreground="{StaticResource MutedBrush}" FontSize="10" Margin="0,0,0,6"/>
                                                <DockPanel Margin="0,0,0,6">
                                                    <TextBlock Text="SELECTED" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" DockPanel.Dock="Left"/>
                                                    <TextBlock x:Name="ScanMachineCount" Text="0" FontSize="10" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" DockPanel.Dock="Right" HorizontalAlignment="Right"/>
                                                </DockPanel>
                                                <Border Background="#1E1E1E" CornerRadius="4" Padding="4" Height="160">
                                                    <ListBox x:Name="ScanMachineList" Background="Transparent" BorderThickness="0" Foreground="{StaticResource ForegroundBrush}" SelectionMode="Extended">
                                                        <ListBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding}" Foreground="{StaticResource ForegroundBrush}" FontSize="11"/>
                                                            </DataTemplate>
                                                        </ListBox.ItemTemplate>
                                                    </ListBox>
                                                </Border>
                                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                    <Button x:Name="BtnSelectMachines" Content="+ Add" Background="Transparent" Foreground="{StaticResource PrimaryBrush}" BorderThickness="0" Padding="0" Cursor="Hand" Margin="0,0,15,0"/>
                                                    <Button x:Name="BtnRemoveScanMachines" Content="- Remove" Background="Transparent" Foreground="{StaticResource ErrorBrush}" BorderThickness="0" Padding="0" Cursor="Hand" Margin="0,0,15,0"/>
                                                    <Button x:Name="BtnClearScanMachines" Content="Clear All" Background="Transparent" Foreground="{StaticResource MutedBrush}" BorderThickness="0" Padding="0" Cursor="Hand"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>

                                
                                <!-- Tab 2: History -->
                                <TabItem Header="History">
                                    <StackPanel Margin="15">
                                        <DockPanel Margin="0,0,0,10">
                                            <TextBlock Text="SAVED SCANS" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" DockPanel.Dock="Left"/>
                                            <Button x:Name="BtnRefreshScans" Content="Refresh" Background="Transparent" Foreground="{StaticResource PrimaryBrush}" BorderThickness="0" Padding="0" Cursor="Hand" DockPanel.Dock="Right" HorizontalAlignment="Right"/>
                                        </DockPanel>
                                        <Border Background="#1E1E1E" CornerRadius="4" Padding="0" Height="180">
                                            <ListBox x:Name="SavedScansList" Background="Transparent" BorderThickness="0" Foreground="{StaticResource ForegroundBrush}" SelectionMode="Single">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Margin="8,4">
                                                            <TextBlock Text="{Binding ScanName}" Foreground="{StaticResource ForegroundBrush}" FontWeight="SemiBold" FontSize="11"/>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding Date, StringFormat='{}{0:MM/dd HH:mm}'}" Foreground="{StaticResource MutedBrush}" FontSize="10"/>
                                                                <TextBlock Text=" - " Foreground="{StaticResource MutedBrush}" FontSize="10"/>
                                                                <TextBlock Text="{Binding Artifacts}" Foreground="{StaticResource PrimaryBrush}" FontSize="10"/>
                                                                <TextBlock Text=" files" Foreground="{StaticResource MutedBrush}" FontSize="10"/>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </Border>
                                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                            <Button x:Name="BtnLoadScan" Content="Load" Background="Transparent" Foreground="{StaticResource PrimaryBrush}" BorderThickness="0" Padding="0" Cursor="Hand" Margin="0,0,15,0"/>
                                            <Button x:Name="BtnDeleteScan" Content="Delete" Background="Transparent" Foreground="{StaticResource ErrorBrush}" BorderThickness="0" Padding="0" Cursor="Hand"/>
                                        </StackPanel>
                                        </StackPanel>
                                                </TabItem>
                                                
                                                <!-- Tab 4: Generate Rules -->
                                                <TabItem Header="Generate">
                                                    <StackPanel Margin="15">
                                                        <TextBlock Text="RULE GENERATION" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,15"/>
                                                        
                                                        <TextBlock Text="Use the Rule Generation Wizard to:" 
                                                                   Foreground="{StaticResource ForegroundBrush}" 
                                                                   TextWrapping="Wrap" Margin="0,0,0,10"/>
                                                        
                                                        <StackPanel Margin="10,0,0,15">
                                                            <TextBlock Text="&#8226; Configure generation mode and options" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,4"/>
                                                            <TextBlock Text="&#8226; Set exclusions (DLLs, scripts, unsigned)" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,4"/>
                                                            <TextBlock Text="&#8226; Preview rules before creating" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,4"/>
                                                            <TextBlock Text="&#8226; Batch generate with progress tracking" Foreground="{StaticResource MutedBrush}"/>
                                                        </StackPanel>
                                                        
                                                        <Button x:Name="BtnLaunchRuleWizardFromScanner" 
                                                                Content="Launch Rule Generation Wizard"
                                                                Style="{StaticResource PrimaryButtonStyle}"
                                                                Padding="15,10"
                                                                Tag="LaunchRuleWizard"/>
                                                        
                                                        <TextBlock x:Name="TxtArtifactCountPreGen" 
                                                                   Text="0 artifacts available" 
                                                                   Foreground="{StaticResource MutedBrush}" 
                                                                   FontSize="11" 
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,10,0,0"/>
                                                    </StackPanel>
                                                </TabItem>
                                            </TabControl>
                                        </Border>

                                        <!-- Right: Artifact Results -->
                        <Border Grid.Column="1" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <DockPanel>
                                <!-- Header with filters -->
                                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                                    <DockPanel>
                                        <TextBlock Text="COLLECTED ARTIFACTS" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" DockPanel.Dock="Left"/>
                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="Search:" Foreground="{StaticResource MutedBrush}" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="11"/>
                                            <TextBox x:Name="ArtifactFilterBox" Width="150" Background="#1E1E1E" Foreground="{StaticResource ForegroundBrush}" BorderBrush="#3E3E42" Padding="6,4" FontSize="11"/>
                                        </StackPanel>
                                    </DockPanel>

                                    <!-- Filter Buttons -->
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button x:Name="BtnFilterAllArtifacts" Content="All" Background="#3E3E42" Foreground="White" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0" FontSize="11"/>
                                        <Button x:Name="BtnFilterExe" Content="EXE" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0" FontSize="11"/>
                                        <Button x:Name="BtnFilterDll" Content="DLL" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0" FontSize="11"/>
                                        <Button x:Name="BtnFilterMsi" Content="MSI" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0" FontSize="11"/>
                                        <Button x:Name="BtnFilterScript" Content="Script" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0" FontSize="11"/>
                                        <Button x:Name="BtnFilterAppx" Content="Appx" Background="Transparent" Foreground="{StaticResource PrimaryBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,8,0" FontSize="11"/>
                                        <Rectangle Width="1" Fill="#3E3E42" Margin="0,2"/>
                                        <Button x:Name="BtnFilterSigned" Content="Signed" Background="Transparent" Foreground="{StaticResource SuccessBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="8,0,4,0" FontSize="11"/>
                                        <Button x:Name="BtnFilterUnsigned" Content="Unsigned" Background="Transparent" Foreground="{StaticResource WarningBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" FontSize="11"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Artifact DataGrid -->
                                <Border Background="#1E1E1E" CornerRadius="4" Padding="0" Margin="0,5,0,0">
                                    <DataGrid x:Name="ArtifactDataGrid"
                                              Style="{StaticResource DataGridStyle}"
                                              AutoGenerateColumns="False"
                                              SelectionMode="Extended"
                                              IsReadOnly="True"
                                              ScrollViewer.HorizontalScrollBarVisibility="Auto">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="S" Width="40" Binding="{Binding SignedIcon}"/>
                                            <DataGridTextColumn Header="Type" Width="80" Binding="{Binding ArtifactType}"/>
                                            <DataGridTextColumn Header="File Name" Width="180" Binding="{Binding FileName}"/>
                                            <DataGridTextColumn Header="Publisher" Width="160" Binding="{Binding Publisher}"/>
                                            <DataGridTextColumn Header="Product" Width="140" Binding="{Binding ProductName}"/>
                                            <DataGridTextColumn Header="Version" Width="70" Binding="{Binding FileVersion}"/>
                                            <DataGridTextColumn Header="Machine" Width="100" Binding="{Binding ComputerName}"/>
                                            <DataGridTextColumn Header="Path" Width="*" Binding="{Binding FilePath}"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Border>
                            </DockPanel>
                        </Border>
                    </Grid>

                    <!-- Progress Bar -->
                    <Border Grid.Row="3" Background="{StaticResource SidebarBrush}" CornerRadius="6" Padding="15" Margin="0,15,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <DockPanel Margin="0,0,0,8">
                                    <TextBlock x:Name="ScanProgressText"
                                               Text="Ready to scan"
                                               Foreground="{StaticResource ForegroundBrush}"
                                               DockPanel.Dock="Left"/>
                                    <TextBlock x:Name="ScanProgressPercent"
                                               Text=""
                                               Foreground="{StaticResource PrimaryBrush}"
                                               DockPanel.Dock="Right"
                                               HorizontalAlignment="Right"/>
                                </DockPanel>
                                <ProgressBar x:Name="ScanProgressBar"
                                             Height="8"
                                             Background="{StaticResource BackgroundBrush}"
                                             Foreground="{StaticResource PrimaryBrush}"
                                             Value="0"
                                             Maximum="100"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                                <Border Background="{StaticResource ContentBrush}" CornerRadius="4" Padding="10,5" Margin="0,0,10,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#x2714;" Foreground="{StaticResource SuccessBrush}" Margin="0,0,5,0"/>
                                        <TextBlock x:Name="ScanSignedCount" Text="0" Foreground="{StaticResource ForegroundBrush}"/>
                                        <TextBlock Text=" signed" Foreground="{StaticResource MutedBrush}"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="{StaticResource ContentBrush}" CornerRadius="4" Padding="10,5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#x2718;" Foreground="{StaticResource WarningBrush}" Margin="0,0,5,0"/>
                                        <TextBlock x:Name="ScanUnsignedCount" Text="0" Foreground="{StaticResource ForegroundBrush}"/>
                                        <TextBlock Text=" unsigned" Foreground="{StaticResource MutedBrush}"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Rule Generator Panel -->
                <Grid x:Name="PanelRules" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="Rule Generator" Style="{StaticResource HeaderStyle}"/>

                    <!-- Main Content -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Tabbed Rule Generation Options -->
                        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Margin="0,0,10,0" VerticalAlignment="Stretch">
                            <TabControl Background="Transparent" BorderThickness="0" Padding="0" VerticalAlignment="Stretch">
                                <TabControl.Resources>
                                    <Style TargetType="TabItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
                                        <Setter Property="Padding" Value="12,8"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TabItem">
                                                    <Border x:Name="border" Background="Transparent" Padding="{TemplateBinding Padding}" BorderThickness="0,0,0,2" BorderBrush="Transparent">
                                                        <ContentPresenter ContentSource="Header"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                                            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TabControl.Resources>
                                
                                <!-- Tab 1: Generate from Artifacts -->
                                <TabItem Header="Generate">
                                    <StackPanel Margin="15">
                                        <TextBlock Text="GENERATE FROM ARTIFACTS" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,15"/>
                                        
                                        <TextBlock Text="Use the Rule Generation Wizard to create rules from scanned artifacts." 
                                                   Foreground="{StaticResource ForegroundBrush}" 
                                                   TextWrapping="Wrap" Margin="0,0,0,15"/>
                                        
                                        <Border Background="#252526" CornerRadius="4" Padding="12" Margin="0,0,0,15">
                                            <StackPanel>
                                                <TextBlock Text="The wizard provides:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,8"/>
                                                <TextBlock Text="&#8226; Smart, Publisher, Hash, or Path modes" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,3"/>
                                                <TextBlock Text="&#8226; Exclusions (DLLs, scripts, unsigned)" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,3"/>
                                                <TextBlock Text="&#8226; Deduplication options" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,3"/>
                                                <TextBlock Text="&#8226; Preview before generation" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,3"/>
                                                <TextBlock Text="&#8226; Progress tracking" Foreground="{StaticResource MutedBrush}"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <Button x:Name="BtnLaunchRuleWizard" 
                                                Content="Launch Rule Generation Wizard"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                Padding="15,10"
                                                Tag="LaunchRuleWizard"/>
                                        
                                        <TextBlock Text="Or scan artifacts first from the Scanner panel." 
                                                   Foreground="{StaticResource MutedBrush}" 
                                                   FontSize="11" 
                                                   HorizontalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Margin="0,15,0,0"/>
                                    </StackPanel>
                                </TabItem>
                                
                                <!-- Tab 2: Manual Rule Creation -->
                                <TabItem Header="Manual">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel Margin="15">
                                            <TextBlock Text="MANUAL RULE CREATION" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>

                                            <TextBlock Text="Rule Type:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                            <ComboBox x:Name="CboManualRuleType" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,10">
                                                <ComboBoxItem Content="Path Rule" IsSelected="True"/>
                                                <ComboBoxItem Content="Hash Rule"/>
                                                <ComboBoxItem Content="Publisher Rule"/>
                                            </ComboBox>

                                            <TextBlock Text="Path / Hash / Publisher:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                            <TextBox x:Name="TxtManualRuleValue" 
                                                     Style="{StaticResource TextBoxStyle}"
                                                     Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                                                     VerticalContentAlignment="Top" Margin="0,0,0,10"/>

                                            <TextBlock Text="Description:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                            <TextBox x:Name="TxtManualRuleDesc" 
                                                     Style="{StaticResource TextBoxStyle}" Margin="0,0,0,10"/>

                                            <TextBlock Text="Apply To:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                            <ComboBox x:Name="CboManualRuleTargetGroup" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,10">
                                                <ComboBoxItem Content="AppLocker-Users" IsSelected="True" Tag="RESOLVE:AppLocker-Users"/>
                                                <ComboBoxItem Content="AppLocker-Admins" Tag="RESOLVE:AppLocker-Admins"/>
                                                <ComboBoxItem Content="Everyone" Tag="S-1-1-0"/>
                                            </ComboBox>

                                            <TextBlock Text="Action:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                                <RadioButton x:Name="RbManualRuleAllow" Content="Allow" IsChecked="True" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,15,0"/>
                                                <RadioButton x:Name="RbManualRuleDeny" Content="Deny" Foreground="{StaticResource ForegroundBrush}"/>
                                            </StackPanel>

                                            <Button x:Name="BtnCreateManualRule" 
                                                    Content="Create Rule"
                                                    Style="{StaticResource ButtonStyle}"
                                                    Tag="CreateManualRule"/>
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>
                                
                                <!-- Tab 3: Import / Export -->
                                <TabItem Header="Import / Export">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel Margin="15">
                                            <!-- Import Section -->
                                            <TextBlock Text="IMPORT FROM XML" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>

                                            <CheckBox x:Name="ChkImportSkipDuplicates" 
                                                      Content="Skip duplicate rules"
                                                      IsChecked="True"
                                                      Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,10"/>

                                            <TextBlock Text="Initial Status:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                            <ComboBox x:Name="CboImportStatus" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,10">
                                                <ComboBoxItem Content="Pending" Tag="Pending" IsSelected="True"/>
                                                <ComboBoxItem Content="Approved" Tag="Approved"/>
                                                <ComboBoxItem Content="Review" Tag="Review"/>
                                            </ComboBox>

                                            <Button x:Name="BtnImportRulesXml" 
                                                    Content="Import AppLocker XML..."
                                                    Style="{StaticResource PrimaryButtonStyle}"
                                                    Tag="ImportRulesXml" Margin="0,0,0,20"/>

                                            <!-- Export Section -->
                                            <TextBlock Text="EXPORT RULES" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>

                                            <CheckBox x:Name="ChkExportApprovedOnly" 
                                                      Content="Only export Approved rules"
                                                      IsChecked="False"
                                                      Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,10"/>

                                            <Button x:Name="BtnExportRulesXml" 
                                                    Content="Export to XML..."
                                                    Style="{StaticResource ButtonStyle}"
                                                    Tag="ExportRulesXml" Margin="0,0,0,10"/>

                                            <Button x:Name="BtnExportRulesCsv" 
                                                    Content="Export to CSV..."
                                                    Style="{StaticResource ButtonStyle}"
                                                    Tag="ExportRulesCsv"/>
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>
                            </TabControl>
                        </Border>

                        <!-- Right: Rules DataGrid -->
                        <Border Grid.Column="1" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Filter Bar -->
                                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                    <DockPanel>
                                        <TextBlock Text="RULES" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="Search:" Foreground="{StaticResource MutedBrush}" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="11"/>
                                            <TextBox x:Name="TxtRuleFilter" Width="150" Background="#1E1E1E" Foreground="{StaticResource ForegroundBrush}" BorderBrush="#3E3E42" Padding="6,4" FontSize="11"/>
                                            <Button x:Name="BtnRefreshRules" Content="Refresh" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="10,4" BorderThickness="0" Margin="8,0,0,0" FontSize="11" Tag="RefreshRules"/>
                                        </StackPanel>
                                    </DockPanel>

                                    <!-- Type/Status Filter Buttons -->
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button x:Name="BtnFilterAllRules" Content="All" Background="#3E3E42" Foreground="White" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0" FontSize="11" Tag="FilterRulesAll"/>
                                        <Button x:Name="BtnFilterPublisher" Content="Pub" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0" FontSize="11" Tag="FilterRulesPublisher" ToolTip="Publisher Rules"/>
                                        <Button x:Name="BtnFilterHash" Content="Hash" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0" FontSize="11" Tag="FilterRulesHash"/>
                                        <Button x:Name="BtnFilterPath" Content="Path" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,8,0" FontSize="11" Tag="FilterRulesPath"/>
                                        <Rectangle Width="1" Fill="#3E3E42" Margin="0,2"/>
                                        <Button x:Name="BtnFilterPending" Content="Pending" Background="Transparent" Foreground="{StaticResource PendingBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="8,0,4,0" FontSize="11" Tag="FilterRulesPending"/>
                                        <Button x:Name="BtnFilterApproved" Content="Approved" Background="Transparent" Foreground="{StaticResource ApprovedBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0" FontSize="11" Tag="FilterRulesApproved"/>
                                        <Button x:Name="BtnFilterRejected" Content="Rejected" Background="Transparent" Foreground="{StaticResource RejectedBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" FontSize="11" Tag="FilterRulesRejected"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Rules DataGrid -->
                                <DataGrid x:Name="RulesDataGrid" Grid.Row="1"
                                          Style="{StaticResource DataGridStyle}"
                                          AutoGenerateColumns="False"
                                          SelectionMode="Extended"
                                          IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Type" Binding="{Binding RuleType}" Width="80"/>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="120"/>
                                        <DataGridTextColumn Header="Publisher" Binding="{Binding PublisherName}" Width="120"/>
                                        <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="*"/>
                                        <DataGridTemplateColumn Header="Group" Width="85" SortMemberPath="GroupName">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Ellipse Width="8" Height="8" Margin="0,0,5,0" VerticalAlignment="Center">
                                                            <Ellipse.Style>
                                                                <Style TargetType="Ellipse">
                                                                    <Setter Property="Fill" Value="#888"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding GroupRiskLevel}" Value="Low">
                                                                            <Setter Property="Fill" Value="#1B5E20"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding GroupRiskLevel}" Value="Medium">
                                                                            <Setter Property="Fill" Value="#E65100"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding GroupRiskLevel}" Value="High">
                                                                            <Setter Property="Fill" Value="#8B0000"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Ellipse.Style>
                                                        </Ellipse>
                                                        <TextBlock Text="{Binding GroupName}" Foreground="{StaticResource ForegroundBrush}" FontSize="12"
                                                                   ToolTip="{Binding UserOrGroupSid}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="Collection" Binding="{Binding Collection}" Width="65"/>
                                        <DataGridTemplateColumn Header="Action" Width="60" SortMemberPath="Action">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Action}" FontWeight="SemiBold">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Action}" Value="Allow">
                                                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Action}" Value="Deny">
                                                                         <Setter Property="Foreground" Value="#D13438"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="Status" Width="Auto" SortMemberPath="Status">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border CornerRadius="3" Padding="5,2" HorizontalAlignment="Center">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                                        <Setter Property="Background" Value="#E65100"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Approved">
                                                                        <Setter Property="Background" Value="#1B5E20"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                                        <Setter Property="Background" Value="#8B0000"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Review">
                                                                        <Setter Property="Background" Value="#1565C0"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock Text="{Binding Status}" Foreground="White" FontSize="10"/>
                                                    </Border>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="Created" Binding="{Binding CreatedDisplay}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- Action Buttons - Two Row Layout -->
                                <StackPanel Grid.Row="2" Margin="0,10,0,0">
                                    <!-- Row 1: Selection + Status Actions -->
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Left: Selection Info -->
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                            <CheckBox x:Name="ChkSelectAllRules" Content="Select All" 
                                                      Foreground="{StaticResource ForegroundBrush}" 
                                                      VerticalAlignment="Center" Margin="0,0,10,0"
                                                      Tag="SelectAllRules"/>
                                            <Border Background="{StaticResource SidebarBrush}" CornerRadius="4" Padding="6,3">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Selected: " Foreground="{StaticResource MutedBrush}" FontSize="11"/>
                                                    <TextBlock x:Name="TxtSelectedRuleCount" Text="0" Foreground="{StaticResource PrimaryBrush}" FontWeight="Bold" FontSize="11"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                        
                                        <!-- Center: Status Actions -->
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button x:Name="BtnApproveRule" Content="Approve" 
                                                    Style="{StaticResource ButtonStyle}" MinWidth="60" Padding="8,4" Margin="0,0,4,0"
                                                    Background="{StaticResource ApprovedBrush}" Tag="ApproveRule"/>
                                            <Button x:Name="BtnRejectRule" Content="Reject" 
                                                    Style="{StaticResource ButtonStyle}" MinWidth="60" Padding="8,4" Margin="0,0,4,0"
                                                    Background="#8B0000" Tag="RejectRule"/>
                                            <Button x:Name="BtnReviewRule" Content="Review" 
                                                    Style="{StaticResource ButtonStyle}" MinWidth="60" Padding="8,4" Margin="0,0,4,0"
                                                    Background="{StaticResource ActiveBrush}" Tag="ReviewRule"/>
                                            <Border Width="1" Background="#555" Margin="8,2" VerticalAlignment="Stretch"/>
                                            <Button x:Name="BtnChangeAction" Content="Action" 
                                                    Style="{StaticResource ButtonStyle}" MinWidth="55" Padding="8,4" Margin="0,0,4,0"
                                                    Background="#4A148C" Tag="ChangeRuleAction"
                                                    ToolTip="Change Allow/Deny action on selected rules"/>
                                            <Button x:Name="BtnChangeGroup" Content="Group" 
                                                    Style="{StaticResource ButtonStyle}" MinWidth="55" Padding="8,4" Margin="0,0,4,0"
                                                    Background="#0D47A1" Tag="ChangeRuleGroup"
                                                    ToolTip="Change target group on selected rules"/>
                                        </StackPanel>
                                        
                                        <!-- Right: Details -->
                                        <Button x:Name="BtnViewRuleDetails" Grid.Column="2" Content="Details" 
                                                Style="{StaticResource ButtonStyle}" MinWidth="60" Padding="8,4"
                                                Tag="ViewRuleDetails"/>
                                    </Grid>
                                    
                                    <!-- Row 2: Bulk Actions -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <Button x:Name="BtnAddServiceAllowRules" Content="+ Service Allow" 
                                                    Style="{StaticResource ButtonStyle}" MinWidth="90" Padding="8,4" Margin="0,0,4,0"
                                                    Background="#2E7D32" Tag="AddServiceAllowRules" 
                                                    ToolTip="Create allow-all rules for SYSTEM, Local Service, Network Service, and BUILTIN\Administrators across all 5 collection types (20 rules)  mandatory AppLocker baseline"/>
                                            <Button x:Name="BtnAddAdminAllowRules" Content="+ Admin Allow" 
                                                    Style="{StaticResource ButtonStyle}" MinWidth="70" Padding="8,4" Margin="0,0,4,0"
                                                    Background="#2E7D32" Tag="AddAdminAllowRules" 
                                                    ToolTip="Create allow-all rules for AppLocker-Admins AD group (EXE, DLL, MSI, Script)"/>
                                            <Button x:Name="BtnAddCommonDenyRules" Content="+ Deny Paths" 
                                                    Style="{StaticResource ButtonStyle}" MinWidth="75" Padding="8,4" Margin="0,0,4,0"
                                                    Background="#B71C1C" Tag="AddCommonDenyRules" 
                                                    ToolTip="Create deny rules for user-writable paths (Temp, Downloads, Desktop, etc.)"/>
                                            <Button x:Name="BtnAddDenyBrowserRules" Content="+ Deny Browsers" 
                                                    Style="{StaticResource ButtonStyle}" MinWidth="85" Padding="8,4" Margin="0,0,4,0"
                                                    Background="#B71C1C" Tag="AddDenyBrowserRules" 
                                                    ToolTip="Deny internet browsers (IE, Edge, Chrome, Firefox) for AppLocker-Admins"/>
                                            <Button x:Name="BtnRemoveDuplicateRules" Content="- Dedupe" 
                                                    Style="{StaticResource ButtonStyle}" MinWidth="65" Padding="8,4" Margin="0,0,4,0"
                                                    Background="#5D4037" Tag="RemoveDuplicateRules" 
                                                    ToolTip="Remove duplicate rules"/>
                                        </StackPanel>
                                        
                                        <Button x:Name="BtnDeleteRule" Grid.Column="1" Content="Delete" 
                                                Style="{StaticResource ButtonStyle}" MinWidth="60" Padding="8,4"
                                                Background="#5D0000" Tag="DeleteRule"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Status Bar -->
                    <Border Grid.Row="2" Background="{StaticResource SidebarBrush}" Padding="15,10" Margin="0,10,0,0" CornerRadius="4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Total:" Foreground="{StaticResource MutedBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtRuleTotalCount" Text="0" Foreground="{StaticResource ForegroundBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,25,0"/>
                            <TextBlock Text="Pending:" Foreground="{StaticResource PendingBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtRulePendingCount" Text="0" Foreground="{StaticResource PendingBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,25,0"/>
                            <TextBlock Text="Approved:" Foreground="{StaticResource ApprovedBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtRuleApprovedCount" Text="0" Foreground="{StaticResource ApprovedBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,25,0"/>
                            <TextBlock Text="Rejected:" Foreground="{StaticResource RejectedBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtRuleRejectedCount" Text="0" Foreground="{StaticResource RejectedBrush}" FontSize="13" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Policy Builder Panel -->
                <Grid x:Name="PanelPolicy" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="Policy Builder" Style="{StaticResource HeaderStyle}"/>

                    <!-- Main Content -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Tabbed Policy Options -->
                        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Margin="0,0,10,0" VerticalAlignment="Stretch">
                            <TabControl x:Name="PolicyTabControl" Background="Transparent" BorderThickness="0" Padding="0" VerticalAlignment="Stretch">
                                <TabControl.Resources>
                                    <Style TargetType="TabItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
                                        <Setter Property="Padding" Value="12,8"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TabItem">
                                                    <Border x:Name="border" Background="Transparent" Padding="{TemplateBinding Padding}" BorderThickness="0,0,0,2" BorderBrush="Transparent">
                                                        <ContentPresenter ContentSource="Header"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                                            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TabControl.Resources>
                                
                                <!-- Tab 1: Create Policy -->
                                <TabItem Header="Create">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel Margin="15">
                                            <TextBlock Text="CREATE POLICY" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>

                                            <TextBlock Text="Policy Name:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                            <TextBox x:Name="TxtPolicyName" 
                                                     Style="{StaticResource TextBoxStyle}" Margin="0,0,0,10"/>

                                            <TextBlock Text="Description:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                            <TextBox x:Name="TxtPolicyDescription" 
                                                     Style="{StaticResource TextBoxStyle}"
                                                     Height="50" TextWrapping="Wrap" AcceptsReturn="True"
                                                     VerticalContentAlignment="Top" Margin="0,0,0,10"/>

                                            <TextBlock Text="Enforcement Mode:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                            <ComboBox x:Name="CboPolicyEnforcement" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,15">
                                                <ComboBoxItem Content="Audit Only (Recommended)" IsSelected="True"/>
                                                <ComboBoxItem Content="Enabled (Enforce)"/>
                                                <ComboBoxItem Content="Not Configured"/>
                                            </ComboBox>

                                            <TextBlock Text="Deployment Phase:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                            <ComboBox x:Name="CboPolicyPhase" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,15">
                                                <ComboBoxItem Content="Phase 1: EXE Only" Tag="1" IsSelected="True"/>
                                                <ComboBoxItem Content="Phase 2: EXE + Script" Tag="2"/>
                                                <ComboBoxItem Content="Phase 3: EXE + Script + MSI" Tag="3"/>
                                                <ComboBoxItem Content="Phase 4: EXE + Script + MSI + APPX" Tag="4"/>
                                                <ComboBoxItem Content="Phase 5: All + DLL (Full)" Tag="5"/>
                                            </ComboBox>

                                            <TextBlock Text="Target GPO:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                            <ComboBox x:Name="CboPolicyTargetGPO" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,5">
                                                <ComboBoxItem Content="(None)" Tag="" IsSelected="True"/>
                                                <ComboBoxItem Content="AppLocker-DC" Tag="AppLocker-DC"/>
                                                <ComboBoxItem Content="AppLocker-Servers" Tag="AppLocker-Servers"/>
                                                <ComboBoxItem Content="AppLocker-Workstations" Tag="AppLocker-Workstations"/>
                                                <ComboBoxItem Content="Custom GPO..." Tag="Custom"/>
                                            </ComboBox>
                                            <TextBox x:Name="TxtPolicyCustomGPO" 
                                                     Style="{StaticResource TextBoxStyle}" 
                                                     Visibility="Collapsed"
                                                     Tag="Enter custom GPO name..."
                                                     Margin="0,0,0,15"/>

                                            <Button x:Name="BtnCreatePolicy" 
                                                    Content="Create Policy"
                                                    Style="{StaticResource PrimaryButtonStyle}"
                                                    Tag="CreatePolicy"/>

                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>
                                
                                <!-- Tab 2: Edit Policy -->
                                <TabItem Header="Edit">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel Margin="15">
                                        <TextBlock Text="EDIT POLICY" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>

                                        <TextBlock Text="Policy Name:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <TextBox x:Name="TxtEditPolicyName" 
                                                 Style="{StaticResource TextBoxStyle}" Margin="0,0,0,10"/>

                                        <TextBlock Text="Description:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <TextBox x:Name="TxtEditPolicyDescription" 
                                                 Style="{StaticResource TextBoxStyle}"
                                                 Height="50" TextWrapping="Wrap" AcceptsReturn="True"
                                                 VerticalContentAlignment="Top" Margin="0,0,0,10"/>

                                        <TextBlock Text="Enforcement Mode:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="CboEditEnforcement" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,15">
                                            <ComboBoxItem Content="Audit Only" Tag="AuditOnly"/>
                                            <ComboBoxItem Content="Enabled (Enforce)" Tag="Enabled"/>
                                            <ComboBoxItem Content="Not Configured" Tag="NotConfigured"/>
                                        </ComboBox>

                                        <TextBlock Text="Deployment Phase:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="CboEditPhase" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,15">
                                            <ComboBoxItem Content="Phase 1: EXE Only" Tag="1"/>
                                            <ComboBoxItem Content="Phase 2: EXE + Script" Tag="2"/>
                                            <ComboBoxItem Content="Phase 3: EXE + Script + MSI" Tag="3"/>
                                            <ComboBoxItem Content="Phase 4: EXE + Script + MSI + APPX" Tag="4"/>
                                            <ComboBoxItem Content="Phase 5: All + DLL (Full)" Tag="5"/>
                                        </ComboBox>

                                        <TextBlock Text="Target GPO:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="CboEditTargetGPO" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,5">
                                            <ComboBoxItem Content="(None)" Tag="" IsSelected="True"/>
                                            <ComboBoxItem Content="AppLocker-DC" Tag="AppLocker-DC"/>
                                            <ComboBoxItem Content="AppLocker-Servers" Tag="AppLocker-Servers"/>
                                            <ComboBoxItem Content="AppLocker-Workstations" Tag="AppLocker-Workstations"/>
                                            <ComboBoxItem Content="Custom..." Tag="Custom"/>
                                        </ComboBox>
                                        <TextBox x:Name="TxtEditCustomGPO" 
                                                 Style="{StaticResource TextBoxStyle}" 
                                                 Visibility="Collapsed"
                                                 Tag="Enter custom GPO name..."
                                                 Margin="0,0,0,15"/>

                                        <Button x:Name="BtnSavePolicyChanges" Content="Save Changes" 
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                Tag="SavePolicyChanges"/>
                                    </StackPanel>
                                    </ScrollViewer>
                                </TabItem>
                            </TabControl>
                        </Border>

                        <!-- Right: Policies List and Details -->
                        <Border Grid.Column="1" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Filter Bar -->
                                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                        <DockPanel>
                                            <TextBlock Text="POLICIES" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock Text="Search:" Foreground="{StaticResource MutedBrush}" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="11"/>
                                                <TextBox x:Name="TxtPolicyFilter" Width="150" Background="#1E1E1E" Foreground="{StaticResource ForegroundBrush}" BorderBrush="#3E3E42" Padding="6,4" FontSize="11"/>
                                                <TextBlock x:Name="TxtPolicySelectedCount" Text="Selected: 0" Foreground="{StaticResource MutedBrush}" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="10"/>
                                                <Button x:Name="BtnRefreshPolicies" Content="Refresh" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="10,4" BorderThickness="0" Margin="8,0,0,0" FontSize="11" Tag="RefreshPolicies"/>
                                            </StackPanel>
                                        </DockPanel>

                                        <!-- Status Filter -->
                                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                            <Button x:Name="BtnFilterAllPolicies" Content="All" Background="#3E3E42" Foreground="White" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0" FontSize="11" Tag="FilterPoliciesAll"/>
                                            <Button x:Name="BtnFilterDraft" Content="Draft" Background="Transparent" Foreground="{StaticResource PendingBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0" FontSize="11" Tag="FilterPoliciesDraft"/>
                                            <Button x:Name="BtnFilterActive" Content="Active" Background="Transparent" Foreground="{StaticResource ActiveBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0" FontSize="11" Tag="FilterPoliciesActive"/>
                                            <Button x:Name="BtnFilterDeployed" Content="Deployed" Background="Transparent" Foreground="{StaticResource ApprovedBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0" FontSize="11" Tag="FilterPoliciesDeployed"/>
                                            <Button x:Name="BtnFilterArchived" Content="Archived" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" FontSize="11" Tag="FilterPoliciesArchived"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Policies DataGrid -->
                                    <DataGrid x:Name="PoliciesDataGrid" Grid.Row="1"
                                              Style="{StaticResource DataGridStyle}"
                                              AutoGenerateColumns="False"
                                              SelectionMode="Extended"
                                              IsReadOnly="True">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Policy Name" Binding="{Binding Name}" Width="150"/>
                                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                            <DataGridTextColumn Header="Rules" Binding="{Binding RuleCount}" Width="60">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="Mode" Binding="{Binding EnforcementMode}" Width="80"/>
                                            <DataGridTextColumn Header="Phase" Binding="{Binding Phase}" Width="60">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                            <DataGridTemplateColumn Header="Status" Width="85" SortMemberPath="Status">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Border CornerRadius="3" Padding="5,2" HorizontalAlignment="Center">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Draft">
                                                                            <Setter Property="Background" Value="#E65100"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Active">
                                                                            <Setter Property="Background" Value="#1565C0"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Deployed">
                                                                            <Setter Property="Background" Value="#1B5E20"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Archived">
                                                                            <Setter Property="Background" Value="#616161"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <TextBlock Text="{Binding Status}" Foreground="White" FontSize="10"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTextColumn Header="Target GPO" Binding="{Binding TargetGPO}" Width="120"/>
                                            <DataGridTextColumn Header="Ver" Binding="{Binding Version}" Width="50"/>
                                            <DataGridTextColumn Header="Modified" Binding="{Binding ModifiedDisplay}" Width="110"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <!-- Action Buttons -->
                                    <StackPanel Grid.Row="2" Margin="0,10,0,0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="RULES:" Foreground="{StaticResource MutedBrush}" FontSize="10" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                            <Button x:Name="BtnAddRulesToPolicyAction" Content="Add" 
                                                    Style="{StaticResource ButtonStyle}" MinWidth="55" Padding="8,4" Margin="0,0,5,0"
                                                    Tag="AddRulesToPolicy"/>
                                            <Button x:Name="BtnImportRulesToPolicyAction" Content="Import" 
                                                    Style="{StaticResource ButtonStyle}" MinWidth="60" Padding="8,4" Margin="0,0,5,0"
                                                    Tag="ImportRulesToPolicy"/>
                                            <Button x:Name="BtnRemoveRulesFromPolicyAction" Content="Remove" 
                                                    Style="{StaticResource ButtonStyle}" MinWidth="65" Padding="8,4" Margin="0,0,10,0"
                                                    Tag="RemoveRulesFromPolicy"/>

                                            <TextBlock Text="POLICY:" Foreground="{StaticResource MutedBrush}" FontSize="10" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                            <Button x:Name="BtnActivatePolicy" Content="Activate" 
                                                    Style="{StaticResource ButtonStyle}" MinWidth="70" Padding="8,4" Margin="0,0,5,0"
                                                    Background="{StaticResource ActiveBrush}" Tag="ActivatePolicy"/>
                                            <Button x:Name="BtnArchivePolicy" Content="Archive" 
                                                    Style="{StaticResource ButtonStyle}" MinWidth="65" Padding="8,4" Margin="0,0,5,0"
                                                    Background="{StaticResource ArchivedBrush}" Tag="ArchivePolicy"/>
                                            <Button x:Name="BtnDeletePolicy" Content="Delete" 
                                                    Style="{StaticResource ButtonStyle}" MinWidth="60" Padding="8,4" Margin="0,0,5,0"
                                                    Tag="DeletePolicy"/>
                                            <Button x:Name="BtnDeployPolicy" Content="Deploy" 
                                                    Style="{StaticResource PrimaryButtonStyle}" MinWidth="70" Padding="8,4"
                                                    Tag="DeployPolicy"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                    </Grid>

                    <!-- Status Bar -->
                    <Border Grid.Row="2" Background="{StaticResource SidebarBrush}" Padding="15,10" Margin="0,10,0,0" CornerRadius="4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Total:" Foreground="{StaticResource MutedBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtPolicyTotalCount" Text="0" Foreground="{StaticResource ForegroundBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,25,0"/>
                            <TextBlock Text="Draft:" Foreground="{StaticResource PendingBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtPolicyDraftCount" Text="0" Foreground="{StaticResource PendingBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,25,0"/>
                            <TextBlock Text="Active:" Foreground="{StaticResource ActiveBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtPolicyActiveCount" Text="0" Foreground="{StaticResource ActiveBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,25,0"/>
                            <TextBlock Text="Deployed:" Foreground="{StaticResource ApprovedBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtPolicyDeployedCount" Text="0" Foreground="{StaticResource ApprovedBrush}" FontSize="13" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Deployment Panel -->
                <Grid x:Name="PanelDeploy" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="Deployment" Style="{StaticResource HeaderStyle}"/>

                    <!-- Main Content -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Tabbed Deployment Options -->
                        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Margin="0,0,10,0" VerticalAlignment="Stretch">
                            <TabControl Background="Transparent" BorderThickness="0" Padding="0" VerticalAlignment="Stretch">
                                <TabControl.Resources>
                                    <Style TargetType="TabItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{StaticResource MutedBrush}"/>
                                        <Setter Property="Padding" Value="12,8"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TabItem">
                                                    <Border x:Name="border" Background="Transparent" Padding="{TemplateBinding Padding}" BorderThickness="0,0,0,2" BorderBrush="Transparent">
                                                        <ContentPresenter ContentSource="Header"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                                            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TabControl.Resources>
                                
                                <!-- Tab 1: New Deployment -->
                                <TabItem Header="Create">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel Margin="15">
                                            <TextBlock Text="NEW DEPLOYMENT" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>

                                            <TextBlock Text="Select Policy:" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,5"/>
                                            <ComboBox x:Name="CboDeployPolicy" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,10"/>

                                            <TextBlock Text="Target GPO is taken from the selected policy." Foreground="{StaticResource MutedBrush}" FontSize="10" Margin="0,0,0,5"/>
                                            <TextBlock x:Name="TxtDeployTargetGpoWarning" Text="Selected policy has no Target GPO." Foreground="{StaticResource WarningBrush}" FontSize="10" Margin="0,0,0,6" Visibility="Collapsed"/>
                                            <Button x:Name="BtnSetTargetGpo" Content="Set Target GPO" Style="{StaticResource ButtonStyle}" Margin="0,0,0,15" Tag="GoToPolicyTargetGpo" Visibility="Collapsed"/>

                                            <Button x:Name="BtnStartDeployment" 
                                                    Content="Create Deployment Job"
                                                    Style="{StaticResource PrimaryButtonStyle}"
                                                    Tag="CreateDeploymentJob"/>
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>

                                <!-- Tab 2: Actions -->
                                <TabItem Header="Actions">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel Margin="15">
                                            <TextBlock Text="JOB ACTIONS" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>

                                            <Button x:Name="BtnDeployJob" Content="Deploy Selected Job" 
                                                    Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,0,5"
                                                    Tag="DeploySelectedJob"/>
                                            <Button x:Name="BtnStopDeployment" Content="Stop Deployment" 
                                                    Style="{StaticResource ButtonStyle}" Margin="0,0,0,5"
                                                    Tag="StopDeployment" IsEnabled="False"/>
                                            <Button x:Name="BtnCancelSelected" Content="Cancel Selected Job" 
                                                    Style="{StaticResource ButtonStyle}" Margin="0,0,0,5"
                                                    Tag="CancelDeploymentJob"/>
                                            <Button x:Name="BtnViewDeployLog" Content="View Job Details" 
                                                    Style="{StaticResource ButtonStyle}" Margin="0,0,0,5"
                                                    Tag="ViewDeploymentLog"/>
                                            <Button x:Name="BtnClearCompletedJobs" Content="Clear Completed Jobs" 
                                                    Style="{StaticResource ButtonStyle}" Margin="0,0,0,15"
                                                    Tag="ClearCompletedJobs"/>

                                            <TextBlock Text="POLICY BACKUP" FontSize="10" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" Margin="0,0,0,10"/>

                                            <Button x:Name="BtnBackupGpoPolicy" Content="Backup GPO Policy" 
                                                    Style="{StaticResource ButtonStyle}" Margin="0,0,0,5"
                                                    Background="#1565C0" Tag="BackupGpoPolicy"
                                                    ToolTip="Export current AppLocker policy from a GPO to XML backup"/>
                                            <Button x:Name="BtnImportPolicyXml" Content="Import Policy from XML" 
                                                    Style="{StaticResource ButtonStyle}" Margin="0,0,0,5"
                                                    Tag="ImportDeployPolicyXml"
                                                    ToolTip="Import an AppLocker XML policy as rules"/>
                                            <Button x:Name="BtnExportPolicyXml" Content="Export Policy to XML" 
                                                    Style="{StaticResource ButtonStyle}" Margin="0,0,0,5"
                                                    Tag="ExportDeployPolicyXml"
                                                    ToolTip="Export a GA-AppLocker policy to AppLocker XML"/>

                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>
                            </TabControl>
                        </Border>

                        <!-- Right: Deployment Jobs List -->
                        <Border Grid.Column="1" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Filter Bar -->
                                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                    <DockPanel>
                                        <TextBlock Text="DEPLOYMENT JOBS" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="Search:" Foreground="{StaticResource MutedBrush}" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="11"/>
                                            <TextBox x:Name="TxtDeployFilter" Width="150" Background="#1E1E1E" Foreground="{StaticResource ForegroundBrush}" BorderBrush="#3E3E42" Padding="6,4" FontSize="11"/>
                                            <TextBlock x:Name="TxtDeployLastRefresh" Text="Updated --:--" Foreground="{StaticResource MutedBrush}" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="10"/>
                                            <Button x:Name="BtnRefreshDeployments" Content="Refresh" Background="Transparent" Foreground="{StaticResource MutedBrush}" Padding="10,4" BorderThickness="0" Margin="8,0,0,0" FontSize="11" Tag="RefreshDeployments"/>
                                        </StackPanel>
                                    </DockPanel>

                                    <!-- Status Filters -->
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button x:Name="BtnFilterAllJobs" Content="All" Background="#3E3E42" Foreground="White" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0" FontSize="11" Tag="FilterJobsAll"/>
                                        <Button x:Name="BtnFilterPendingJobs" Content="Pending" Background="Transparent" Foreground="{StaticResource PendingBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0" FontSize="11" Tag="FilterJobsPending"/>
                                        <Button x:Name="BtnFilterRunningJobs" Content="Running" Background="Transparent" Foreground="{StaticResource ActiveBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0" FontSize="11" Tag="FilterJobsRunning"/>
                                        <Button x:Name="BtnFilterCompletedJobs" Content="Completed" Background="Transparent" Foreground="{StaticResource ApprovedBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" Margin="0,0,4,0" FontSize="11" Tag="FilterJobsCompleted"/>
                                        <Button x:Name="BtnFilterFailedJobs" Content="Failed" Background="Transparent" Foreground="{StaticResource RejectedBrush}" Padding="10,4" BorderThickness="0" Cursor="Hand" FontSize="11" Tag="FilterJobsFailed"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Jobs DataGrid -->
                                <DataGrid x:Name="DeploymentJobsDataGrid" Grid.Row="1"
                                          Style="{StaticResource DataGridStyle}"
                                          AutoGenerateColumns="False"
                                          SelectionMode="Single"
                                          IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Policy" Binding="{Binding PolicyName}" Width="180"/>
                                        <DataGridTextColumn Header="GPO" Binding="{Binding GPOName}" Width="100"/>
                                        <DataGridTemplateColumn Header="Status" Width="80" SortMemberPath="Status">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border CornerRadius="3" Padding="5,2" HorizontalAlignment="Center">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                                        <Setter Property="Background" Value="#E65100"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Running">
                                                                        <Setter Property="Background" Value="#1565C0"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                                        <Setter Property="Background" Value="#1B5E20"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                                        <Setter Property="Background" Value="#8B0000"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                                        <Setter Property="Background" Value="#616161"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock Text="{Binding Status}" Foreground="White" FontSize="10"/>
                                                    </Border>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="Progress" Binding="{Binding ProgressDisplay}" Width="65"/>
                                        <DataGridTextColumn Header="Created" Binding="{Binding CreatedDisplay}" Width="90"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- Progress/Message Area -->
                                <Border Grid.Row="2" Background="#252526" CornerRadius="4" Padding="10" Margin="0,10,0,0" MaxHeight="80">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" MaxHeight="50">
                                            <TextBlock x:Name="TxtDeploymentMessage"
                                                       Text="Select a deployment job to view details"
                                                       Foreground="{StaticResource MutedBrush}" Margin="0,0,0,8"
                                                       TextWrapping="Wrap"/>
                                        </ScrollViewer>

                                        <Grid Grid.Row="1">
                                            <ProgressBar x:Name="DeploymentProgressBar" 
                                                         Height="6" Minimum="0" Maximum="100" Value="0"
                                                         Background="{StaticResource BorderBrush}" Foreground="{StaticResource PrimaryBrush}"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Footer Stats -->
                    <Border Grid.Row="2" Background="{StaticResource SidebarBrush}" Padding="15,10" Margin="0,10,0,0" CornerRadius="4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Total Jobs:" Foreground="{StaticResource MutedBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtJobTotalCount" Text="0" Foreground="{StaticResource ForegroundBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,25,0"/>
                            <TextBlock Text="Pending:" Foreground="{StaticResource PendingBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtJobPendingCount" Text="0" Foreground="{StaticResource PendingBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,25,0"/>
                            <TextBlock Text="Running:" Foreground="{StaticResource ActiveBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtJobRunningCount" Text="0" Foreground="{StaticResource ActiveBrush}" FontSize="13" FontWeight="Bold" Margin="0,0,25,0"/>
                            <TextBlock Text="Completed:" Foreground="{StaticResource ApprovedBrush}" FontSize="13" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TxtJobCompletedCount" Text="0" Foreground="{StaticResource ApprovedBrush}" FontSize="13" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Settings Panel - Credentials Only -->
                <Grid x:Name="PanelSettings" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Settings" Style="{StaticResource HeaderStyle}"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="280"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Column: Add Credential Form -->
                            <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15" Margin="0,0,15,0">
                                <StackPanel>
                                    <TextBlock Text="ADD CREDENTIAL"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource MutedBrush}"
                                               Margin="0,0,0,15"/>

                                    <!-- Tier Legend -->
                                    <StackPanel Margin="0,0,0,15">
                                        <Border Background="#9C27B0" CornerRadius="3" Padding="8,4" Margin="0,0,0,5">
                                            <TextBlock Text="Tier 0: Domain Controllers" Foreground="White" FontSize="10"/>
                                        </Border>
                                        <Border Background="{StaticResource WarningBrush}" CornerRadius="3" Padding="8,4" Margin="0,0,0,5">
                                            <TextBlock Text="Tier 1: Servers" Foreground="White" FontSize="10"/>
                                        </Border>
                                        <Border Background="{StaticResource PrimaryBrush}" CornerRadius="3" Padding="8,4">
                                            <TextBlock Text="Tier 2: Workstations" Foreground="White" FontSize="10"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- Profile Name -->
                                    <TextBlock Text="Profile Name" Foreground="{StaticResource MutedBrush}" FontSize="11" Margin="0,0,0,5"/>
                                    <TextBox x:Name="CredProfileName" Background="#1E1E1E" Foreground="{StaticResource ForegroundBrush}" BorderBrush="#3E3E42" Padding="8,6" Margin="0,0,0,10"/>

                                    <!-- Tier Selection -->
                                    <TextBlock Text="Tier Level" Foreground="{StaticResource MutedBrush}" FontSize="11" Margin="0,0,0,5"/>
                                    <ComboBox x:Name="CredTierCombo" Style="{StaticResource ComboBoxStyle}" SelectedIndex="2" Margin="0,0,0,10">
                                        <ComboBoxItem Content="Tier 0 - Domain Controllers" Tag="0"/>
                                        <ComboBoxItem Content="Tier 1 - Servers" Tag="1"/>
                                        <ComboBoxItem Content="Tier 2 - Workstations" Tag="2"/>
                                    </ComboBox>

                                    <!-- Username -->
                                    <TextBlock Text="Username (DOMAIN\User)" Foreground="{StaticResource MutedBrush}" FontSize="11" Margin="0,0,0,5"/>
                                    <TextBox x:Name="CredUsername" Background="#1E1E1E" Foreground="{StaticResource ForegroundBrush}" BorderBrush="#3E3E42" Padding="8,6" Margin="0,0,0,10"/>

                                    <!-- Password -->
                                    <TextBlock Text="Password" Foreground="{StaticResource MutedBrush}" FontSize="11" Margin="0,0,0,5"/>
                                    <PasswordBox x:Name="CredPassword" Background="#1E1E1E" Foreground="{StaticResource ForegroundBrush}" BorderBrush="#3E3E42" Padding="8,6" Margin="0,0,0,10"/>

                                    <!-- Description -->
                                    <TextBlock Text="Description (optional)" Foreground="{StaticResource MutedBrush}" FontSize="11" Margin="0,0,0,5"/>
                                    <TextBox x:Name="CredDescription" Background="#1E1E1E" Foreground="{StaticResource ForegroundBrush}" BorderBrush="#3E3E42" Padding="8,6" Margin="0,0,0,10"/>

                                    <!-- Default Checkbox -->
                                    <CheckBox x:Name="CredSetAsDefault" Content="Set as default for tier" Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,15"/>

                                    <!-- Save Button -->
                                    <Button x:Name="BtnSaveCredential" Content="Save Credential" Style="{StaticResource ActionButtonStyle}" Background="{StaticResource SuccessBrush}" Padding="12,10"/>
                                </StackPanel>
                            </Border>

                            <!-- Right Column: Credentials List & Actions -->
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Credentials List -->
                                <Border Grid.Row="0" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                    <DockPanel>
                                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                                            <TextBlock Text="CREDENTIAL PROFILES" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource MutedBrush}" VerticalAlignment="Center"/>
                                            <Button x:Name="BtnRefreshCredentials" Content="&#x1F504; Refresh" Background="Transparent" Foreground="{StaticResource PrimaryBrush}" BorderThickness="0" Padding="10,5" Cursor="Hand" Margin="15,0,0,0"/>
                                        </StackPanel>

                                        <Border Background="#1E1E1E" CornerRadius="4">
                                            <DataGrid x:Name="CredentialsDataGrid"
                                                      Style="{StaticResource DataGridStyle}"
                                                      AutoGenerateColumns="False"
                                                      SelectionMode="Single"
                                                      IsReadOnly="True">
                                                <DataGrid.CellStyle>
                                                    <Style TargetType="DataGridCell">
                                                        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Setter Property="Padding" Value="10,8"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGrid.CellStyle>
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Name" Width="140" Binding="{Binding Name}"/>
                                                    <DataGridTextColumn Header="Tier" Width="50" Binding="{Binding Tier}"/>
                                                    <DataGridTextColumn Header="Username" Width="160" Binding="{Binding Username}"/>
                                                    <DataGridTextColumn Header="Default" Width="60" Binding="{Binding IsDefaultDisplay}"/>
                                                    <DataGridTextColumn Header="Last Test" Width="130" Binding="{Binding LastTestDisplay}"/>
                                                    <DataGridTextColumn Header="Description" Width="*" Binding="{Binding Description}"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Border>
                                    </DockPanel>
                                </Border>

                                <!-- Credential Actions -->
                                <Border Grid.Row="1" Background="{StaticResource SidebarBrush}" CornerRadius="8" Padding="15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <Button x:Name="BtnTestCredential" Content="&#x1F50D; Test" Style="{StaticResource ActionButtonStyle}" Background="{StaticResource SecondaryBrush}" Padding="15,10" Margin="0,0,10,0"/>
                                            <Button x:Name="BtnSetDefaultCredential" Content="&#x2B50; Set Default" Style="{StaticResource ActionButtonStyle}" Background="{StaticResource WarningBrush}" Padding="15,10" Margin="0,0,10,0"/>
                                            <Button x:Name="BtnDeleteCredential" Content="&#x1F5D1; Delete" Style="{StaticResource ActionButtonStyle}" Background="{StaticResource ErrorBrush}" Padding="15,10"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <TextBlock Text="Test Target:" Foreground="{StaticResource MutedBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
